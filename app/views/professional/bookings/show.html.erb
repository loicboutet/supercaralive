                  <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                  Accepter la r√©servation
                <% end %>
              <% end %>
              <% unless @booking.refused? || date_passed %>
                <%= button_to refuse_professional_booking_path(@booking), method: :patch, class: "w-full bg-red-100 hover:bg-red-200 text-red-800 px-4 py-3 rounded-lg font-medium flex items-center justify-center" do %>
