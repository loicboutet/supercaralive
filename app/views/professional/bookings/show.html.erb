            <% if @booking.professional_service.services.any? %>
              <p class="text-gray-600 mb-4">
                <%= @booking.professional_service.services.map(&:name).join(', ') %>
              </p>
            <% end %>
          </div>
          <% if @booking.professional_service.services.any? %>
            <div class="bg-soft p-4 rounded-lg">
              <h4 class="font-bold text-gray-900 mb-3">Prestations incluses :</h4>
              <ul class="space-y-2">
                <% @booking.professional_service.services.each do |service| %>
                  <li class="flex items-start">
                    <svg class="w-5 h-5 text-green-600 mr-2 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    <span class="text-gray-700"><%= service.name %></span>
