            >
              <!-- Cible pour les nouveaux messages -->
              <div id="messages">
                <%= render "chat_messages/messages_batch", messages: @messages %>
              </div>
            </div>

            <!-- Formulaire de message -->
            <div id="message_form">
              <%= render "chat_messages/message_form", chat: @chat, message: @message, booking: @booking, context: :professional %>
            </div>

            <!-- Abonnement Turbo Stream pour ce chat -->
            <%= turbo_stream_from "chat_#{@chat.id}" %>
          </div>
        <% end %>

        <!-- Vehicle Information -->
        <% if @booking.manual? %>
          <div class="bg-white rounded-super p-6 shadow-sm">
            <h2 class="text-2xl font-bold text-gray-900 mb-6">V√©hicule concern√©</h2>
            <div class="bg-gray-50 border-l-4 border-gray-400 rounded-lg p-4">
              <div class="flex items-start">
                <svg class="w-6 h-6 text-gray-400 mr-3 mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <div>
                  <p class="text-gray-700 font-medium">R√©servation cr√©√©e manuellement</p>
                  <p class="text-gray-600 text-sm mt-1">Cette r√©servation a √©t√© cr√©√©e manuellement et ne concerne pas de v√©hicule sp√©cifique.</p>
                </div>
              </div>
            </div>
          </div>
        <% elsif @booking.vehicle.present? %>
          <div class="bg-white rounded-super p-6 shadow-sm">
            <h2 class="text-2xl font-bold text-gray-900 mb-6">V√©hicule concern√©</h2>
            <div class="flex items-start space-x-4">
              <div class="w-20 h-20 bg-gray-200 rounded-lg flex items-center justify-center flex-shrink-0">
                <span class="text-4xl">üöó</span>
              </div>
              <div class="flex-1">
                <h3 class="text-xl font-bold text-gray-900 mb-2"><%= @booking.vehicle.brand %> <%= @booking.vehicle.model %> (<%= @booking.vehicle.year %>)</h3>
                <div class="grid md:grid-cols-2 gap-3 text-sm">
                  <% if @booking.vehicle.vin_number.present? %>
                    <div>
                      <p class="text-gray-600">VIN</p>
                      <p class="font-medium text-gray-900"><%= @booking.vehicle.vin_number %></p>
                    </div>
                  <% end %>
                  <% if @booking.current_mileage.present? %>
                    <div>
                      <p class="text-gray-600">Kilom√©trage</p>
                      <p class="font-medium text-gray-900"><%= number_with_delimiter(@booking.current_mileage) %> km</p>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <!-- Service Details -->
        <div class="bg-white rounded-super p-6 shadow-sm">
          <h2 class="text-2xl font-bold text-gray-900 mb-6">D√©tails du service</h2>
