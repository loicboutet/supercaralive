          <div class="space-y-2">
            <% if date_passed && @booking.status != 'completed' && @booking.status != 'cancelled' && @booking.status != 'refused' %>
              <%= button_to complete_professional_booking_path(@booking), method: :patch, 
                  form: { data: { turbo: false, controller: "confirm", confirm_message_value: "√ätes-vous s√ªr de vouloir marquer cette r√©servation comme termin√©e ?", action: "submit->confirm#confirm" } },
                  class: "w-full bg-green-500 hover:bg-green-600 text-white px-4 py-3 rounded-lg font-bold flex items-center justify-center" do %>
