            </div>
            <div>
              <p class="text-sm text-gray-600 mb-1">Dur√©e estim√©e</p>
              <p class="text-lg font-bold text-gray-900"><%= duration_text %></p>
            </div>
            <div>
              <p class="text-sm text-gray-600 mb-1">Montant</p>
              <p class="text-lg font-bold text-blue-hero"><%= price_display %></p>
            </div>
          </div>
        </div>

        <!-- Client Information -->
        <% if @booking.client.present? && !@booking.manual? %>
