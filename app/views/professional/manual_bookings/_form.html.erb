<%= form_with model: booking, url: professional_manual_bookings_path, method: :post, data: { turbo: false }, class: "space-y-6" do |f| %>
  <%= f.hidden_field :manual_booking, value: "1" %>
  
  <% if booking.errors.any? %>
    <div class="bg-red-50 border-l-4 border-red-hero rounded-lg p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-hero" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-bold text-red-800">Erreurs détectées :</h3>
          <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
            <% booking.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Professional Service Selection -->
  <div class="relative" data-controller="service-select" 
       data-service-select-selected-id-value="<%= booking.professional_service_id %>"
       data-service-select-selected-name-value="<%= professional_services&.find { |ps| ps.id == booking.professional_service_id }&.name %>"
       data-action="click@window->service-select#clickOutside">
    <%= f.label :professional_service_id, "Type de service", class: "block text-sm font-medium text-gray-700 mb-2" %>
    
    <% if professional_services.any? %>
      <!-- Hidden input for form submission -->
      <%= f.hidden_field :professional_service_id, 
          value: booking.professional_service_id,
          data: { service_select_target: "hiddenInput" } %>
      
      <!-- Custom Select Button -->
      <button type="button" 
              data-service-select-target="button"
              data-action="click->service-select#toggle"
              class="w-full px-4 py-3 border border-gray-300 rounded-lg bg-white text-left focus:outline-none focus:ring-2 focus:ring-red-hero focus:border-transparent flex items-center justify-between">
        <span data-service-select-target="selectedText" class="text-gray-900">
          <%= booking.professional_service_id.present? ? professional_services.find { |ps| ps.id == booking.professional_service_id }&.name : "Sélectionnez un service" %>
        </span>
        <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" data-service-select-target="chevron">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
        </svg>
      </button>
      
      <!-- Dropdown Options -->
      <div data-service-select-target="dropdown" class="hidden absolute z-50 w-full mt-1 bg-white border border-gray-300 rounded-lg shadow-lg max-h-96 overflow-y-auto">
        <% professional_services.each_with_index do |ps, index| %>
          <button type="button"
                  data-service-select-target="option"
                  data-service-id="<%= ps.id %>"
                  data-service-name="<%= ps.name %>"
                  data-action="click->service-select#select"
                  class="w-full px-4 py-4 <%= index < professional_services.length - 1 ? 'border-b' : '' %> border-gray-200 hover:bg-gray-50 text-left transition-colors <%= 'bg-blue-50 border-blue-hero' if ps.id == booking.professional_service_id %>">
            <div class="flex flex-col space-y-2">
              <!-- Service Name -->
              <div class="font-bold text-gray-900 text-base"><%= ps.name %></div>
              
              <!-- Service Types (from associated services) -->
              <% if ps.services.any? %>
                <div class="text-sm text-gray-600">
                  <%= ps.services.map(&:name).join(", ") %>
                </div>
              <% end %>
              
              <!-- Service Details -->
              <div class="flex flex-wrap items-center gap-4 text-sm text-gray-600">
                <% if ps.duration_minutes.present? %>
                  <span class="flex items-center">
                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    <%= ps.duration_minutes %> min
                  </span>
                <% end %>
                
                <% if ps.display_price.present? %>
                  <span class="flex items-center font-semibold text-red-hero">
                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    <%= ps.display_price %>
                  </span>
                <% end %>
                
                <% if ps.display_travel_price.present? %>
                  <span class="flex items-center text-gray-500">
                    + <%= ps.display_travel_price %> déplacement
                  </span>
                <% end %>
              </div>
            </div>
          </button>
        <% end %>
      </div>
      
      <p class="text-sm text-gray-500 mt-1">Service que vous allez réaliser</p>
    <% else %>
      <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4">
        <p class="text-sm text-yellow-800">
          Vous devez d'abord créer au moins un service actif dans votre profil professionnel.
        </p>
      </div>
    <% end %>
  </div>

  <!-- Date and Time Selection -->
  <div>
    <%= f.label :scheduled_at, "Date et heure", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= f.datetime_local_field :scheduled_at, 
        value: booking.scheduled_at&.strftime("%Y-%m-%dT%H:%M"), 
        class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-hero focus:border-transparent" %>
    <p class="text-sm text-gray-500 mt-1">Date et heure de l'intervention</p>
  </div>

  <!-- Description -->
  <div>
    <%= f.label :description, "Description de l'intervention", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= f.text_area :description, rows: 4, value: booking.description, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-hero focus:border-transparent", placeholder: "Décrivez l'intervention à réaliser..." %>
    <p class="text-sm text-gray-500 mt-1">Informations sur l'intervention à réaliser</p>
  </div>

  <!-- Form buttons -->
  <div class="flex flex-col sm:flex-row gap-4 pt-4">
    <button type="submit" class="bg-red-hero hover:bg-red-dark text-white px-8 py-3 rounded-lg font-bold cursor-pointer w-auto inline-flex items-center justify-center">
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
      </svg>
      Créer la réservation
    </button>
    <button type="button" data-action="click->availability-calendar#closeManualBookingModal" class="bg-gray-200 hover:bg-gray-300 text-gray-700 px-8 py-3 rounded-lg font-bold text-center w-auto inline-flex items-center justify-center">
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
      </svg>
      Annuler
    </button>
  </div>
<% end %>

