<% content_for :page_title, "Mes Services" %>

<!-- Page Header -->
<div class="mb-8">
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-2">
        Mes <span class="text-red-hero">Services</span>
      </h1>
      <p class="text-xl text-gray-600">
        Gérez vos offres de services et tarifs
      </p>
    </div>
    <%= link_to new_professional_professional_service_path, class: "bg-red-hero hover:bg-red-dark text-white px-6 py-3 rounded-lg font-bold inline-flex items-center" do %>
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
      </svg>
      Nouveau service
    <% end %>
  </div>
</div>

<!-- Stats Cards -->
<div class="space-y-6 mb-8">
  <!-- First row: 3 cards -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    <div class="bg-white rounded-lg p-8 shadow-sm">
      <div class="flex items-center justify-between">
        <div class="flex flex-col">
          <span class="text-lg font-bold text-gray-700 mb-2">Services actifs</span>
          <p class="text-5xl font-bold text-green-600 mb-2"><%= @active_count %></p>
          <p class="text-base text-gray-500">Actuellement</p>
        </div>
        <div class="w-16 h-16 bg-green-100 rounded-lg flex items-center justify-center flex-shrink-0">
          <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-lg p-8 shadow-sm">
      <div class="flex items-center justify-between">
        <div class="flex flex-col">
          <span class="text-lg font-bold text-gray-700 mb-2">Services désactivés</span>
          <p class="text-5xl font-bold text-gray-500 mb-2"><%= @inactive_count %></p>
          <p class="text-base text-gray-500">Non visibles</p>
        </div>
        <div class="w-16 h-16 bg-gray-100 rounded-lg flex items-center justify-center flex-shrink-0">
          <svg class="w-8 h-8 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636"></path>
          </svg>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-lg p-8 shadow-sm">
      <div class="flex items-center justify-between">
        <div class="flex flex-col">
          <span class="text-lg font-bold text-gray-700 mb-2">Réservations</span>
          <p class="text-5xl font-bold text-blue-hero mb-2"><%= @total_bookings %></p>
          <p class="text-base text-gray-500">Total</p>
        </div>
        <div class="w-16 h-16 bg-blue-100 rounded-lg flex items-center justify-center flex-shrink-0">
          <svg class="w-8 h-8 text-blue-hero" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
          </svg>
        </div>
      </div>
    </div>
  </div>

  <!-- Second row: 2 cards -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div class="bg-white rounded-lg p-8 shadow-sm">
      <div class="flex items-center justify-between">
        <div class="flex flex-col">
          <span class="text-lg font-bold text-gray-700 mb-2">Tarif moyen forfait</span>
          <p class="text-5xl font-bold text-red-hero mb-2">
            <% if @average_flat_rate > 0 %>
              <%= number_with_precision(@average_flat_rate, precision: 0) %>€
            <% else %>
              -
            <% end %>
          </p>
          <p class="text-base text-gray-500">Services forfait</p>
        </div>
        <div class="w-16 h-16 bg-red-100 rounded-lg flex items-center justify-center flex-shrink-0">
          <svg class="w-8 h-8 text-red-hero" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-lg p-8 shadow-sm">
      <div class="flex items-center justify-between">
        <div class="flex flex-col">
          <span class="text-lg font-bold text-gray-700 mb-2">Taux horaire moyen</span>
          <p class="text-5xl font-bold text-blue-hero mb-2">
            <% if @average_hourly_rate > 0 %>
              <%= number_with_precision(@average_hourly_rate, precision: 0) %>€/h
            <% else %>
              -
            <% end %>
          </p>
          <p class="text-base text-gray-500">Services horaires</p>
        </div>
        <div class="w-16 h-16 bg-blue-100 rounded-lg flex items-center justify-center flex-shrink-0">
          <svg class="w-8 h-8 text-blue-hero" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Filters -->
<%= form_with url: professional_professional_services_path, method: :get, local: true, data: { turbo: false }, class: "bg-white rounded-super p-6 shadow-sm mb-6" do |f| %>
  <div class="flex flex-col md:flex-row gap-4">
    <div class="flex-1">
      <label class="block text-sm font-bold text-gray-700 mb-2">Rechercher</label>
      <div class="relative">
        <%= f.text_field :search, placeholder: "Nom du service...", value: params[:search], class: "w-full h-12 px-4 pl-10 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-hero" %>
        <svg class="w-5 h-5 text-gray-400 absolute left-3 top-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
        </svg>
      </div>
    </div>

    <div class="flex-1">
      <label class="block text-sm font-bold text-gray-700 mb-2">Statut</label>
      <%= f.select :status, options_for_select([
        ["Tous", "all"],
        ["Actifs", "active"],
        ["Désactivés", "inactive"]
      ], params[:status] || "all"), {}, { class: "w-full h-12 px-4 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-hero" } %>
    </div>

    <div class="w-full md:w-40 flex items-end">
      <%= f.submit "Filtrer", class: "w-full h-12 bg-red-hero hover:bg-red-dark text-white px-6 rounded-lg font-bold inline-flex items-center justify-center" %>
    </div>
  </div>
<% end %>

<!-- Services List -->
<div class="grid md:grid-cols-3 gap-8">
  <!-- Left Column - Services List -->
  <div class="md:col-span-2 space-y-6">
    
    <!-- Active Services -->
    <% active_services = @professional_services.select(&:active?) %>
    <% if active_services.any? %>
      <div class="bg-white rounded-super p-6 shadow-sm">
        <h2 class="text-2xl font-bold text-gray-900 mb-6">Services actifs</h2>
        
        <div class="space-y-4">
          <% active_services.each do |professional_service| %>
            <div class="border border-gray-200 rounded-lg p-4 hover:shadow-md transition">
              <div class="flex items-start justify-between mb-3">
                <div class="flex-1">
                  <div class="flex items-center space-x-2 mb-2">
                    <%= link_to edit_professional_professional_service_path(professional_service), class: "text-xl font-bold text-gray-900 hover:text-red-hero" do %>
                      <%= professional_service.name %>
                    <% end %>
                    <span class="bg-green-100 text-green-800 px-2 py-1 rounded-lg text-xs font-medium">
                      ✓ Actif
                    </span>
                  </div>
                  <% if professional_service.services.any? %>
                    <p class="text-gray-600 mb-3">
                      <%= professional_service.services.map(&:name).join(", ") %>
                    </p>
                  <% end %>
                  <div class="flex items-center space-x-4 text-sm text-gray-600">
                    <% if professional_service.duration_minutes.present? %>
                      <span class="flex items-center">
                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        <%= professional_service.duration_minutes %> min
                      </span>
                    <% end %>
                  </div>
                </div>
                <div class="text-right ml-4">
                  <% if professional_service.display_price.present? %>
                    <p class="text-2xl font-bold text-red-hero"><%= professional_service.display_price %></p>
                    <p class="text-sm text-gray-500">Prix</p>
                    <% if professional_service.display_travel_price.present? %>
                      <p class="text-sm text-gray-500 mt-1">+ <%= professional_service.display_travel_price %> déplacement</p>
                    <% end %>
                  <% else %>
                    <p class="text-lg font-bold text-gray-400">-</p>
                    <p class="text-sm text-gray-500">Non défini</p>
                  <% end %>
                </div>
              </div>
              <div class="flex items-center space-x-2 pt-3 border-t border-gray-200">
                <%= link_to edit_professional_professional_service_path(professional_service), class: "bg-blue-hero hover:bg-blue-dark text-white px-4 py-2 rounded-lg text-sm font-medium inline-flex items-center" do %>
                  <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                  </svg>
                  Modifier
                <% end %>
                <%= button_to toggle_active_professional_professional_service_path(professional_service), method: :patch, form: { data: { turbo: false } }, class: "bg-yellow-100 hover:bg-yellow-200 text-yellow-800 px-4 py-2 rounded-lg text-sm font-medium inline-flex items-center" do %>
                  <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636"></path>
                  </svg>
                  Désactiver
                <% end %>
                <%= button_to professional_professional_service_path(professional_service), method: :delete, form: { data: { turbo: false, controller: "confirm", confirm_message_value: "Êtes-vous sûr de vouloir supprimer ce service ?", action: "submit->confirm#confirm" } }, class: "bg-red-100 hover:bg-red-200 text-red-800 px-4 py-2 rounded-lg text-sm font-medium inline-flex items-center ml-auto" do %>
                  <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                  </svg>
                  Supprimer
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

    <!-- Inactive Services -->
    <% inactive_services = @professional_services.reject(&:active?) %>
    <% if inactive_services.any? %>
      <div class="bg-white rounded-super p-6 shadow-sm">
        <h2 class="text-2xl font-bold text-gray-900 mb-6">Services désactivés</h2>
        
        <div class="space-y-4">
          <% inactive_services.each do |professional_service| %>
            <div class="border border-gray-300 rounded-lg p-4 bg-gray-50">
              <div class="flex items-start justify-between mb-3">
                <div class="flex-1">
                  <div class="flex items-center space-x-2 mb-2">
                    <%= link_to edit_professional_professional_service_path(professional_service), class: "text-xl font-bold text-gray-600 hover:text-red-hero" do %>
                      <%= professional_service.name %>
                    <% end %>
                    <span class="bg-gray-200 text-gray-700 px-2 py-1 rounded-lg text-xs font-medium">
                      Désactivé
                    </span>
                  </div>
                  <% if professional_service.services.any? %>
                    <p class="text-gray-500 mb-3">
                      <%= professional_service.services.map(&:name).join(", ") %>
                    </p>
                  <% end %>
                </div>
                <div class="text-right ml-4">
                  <% if professional_service.display_price.present? %>
                    <p class="text-2xl font-bold text-gray-500"><%= professional_service.display_price %></p>
                    <% if professional_service.display_travel_price.present? %>
                      <p class="text-sm text-gray-400 mt-1">+ <%= professional_service.display_travel_price %></p>
                    <% end %>
                  <% else %>
                    <p class="text-lg font-bold text-gray-400">-</p>
                  <% end %>
                </div>
              </div>
              <div class="flex items-center space-x-2 pt-3 border-t border-gray-300">
                <%= link_to edit_professional_professional_service_path(professional_service), class: "bg-blue-hero hover:bg-blue-dark text-white px-4 py-2 rounded-lg text-sm font-medium inline-flex items-center" do %>
                  <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                  </svg>
                  Modifier
                <% end %>
                <%= button_to toggle_active_professional_professional_service_path(professional_service), method: :patch, form: { data: { turbo: false } }, class: "bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-lg text-sm font-medium inline-flex items-center" do %>
                  <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                  Réactiver
                <% end %>
                <%= button_to professional_professional_service_path(professional_service), method: :delete, form: { data: { turbo: false, controller: "confirm", confirm_message_value: "Êtes-vous sûr de vouloir supprimer ce service ?", action: "submit->confirm#confirm" } }, class: "bg-red-100 hover:bg-red-200 text-red-800 px-4 py-2 rounded-lg text-sm font-medium inline-flex items-center ml-auto" do %>
                  <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                  </svg>
                  Supprimer
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

    <% if @professional_services.empty? %>
      <div class="bg-white rounded-super p-12 shadow-sm text-center">
        <svg class="w-16 h-16 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
        </svg>
        <p class="text-xl font-bold text-gray-900 mb-2">Aucun service</p>
        <p class="text-gray-600 mb-6">Commencez par créer votre premier service</p>
        <%= link_to new_professional_professional_service_path, class: "bg-red-hero hover:bg-red-dark text-white px-6 py-3 rounded-lg font-bold inline-flex items-center" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
          </svg>
          Créer un service
        <% end %>
      </div>
    <% end %>
  </div>

  <!-- Right Column - Sidebar -->
  <div class="space-y-6">
    
    <!-- Quick Stats -->
    <div class="bg-white rounded-super p-6 shadow-sm">
      <h3 class="text-lg font-bold text-gray-900 mb-4">Statistiques</h3>
      <div class="space-y-3">
        <div class="flex items-center justify-between pb-2 border-b border-gray-100">
          <span class="text-sm text-gray-600">Services actifs</span>
          <span class="text-lg font-bold text-green-600"><%= @active_count %></span>
        </div>
        <div class="flex items-center justify-between pb-2 border-b border-gray-100">
          <span class="text-sm text-gray-600">Services désactivés</span>
          <span class="text-lg font-bold text-gray-500"><%= @inactive_count %></span>
        </div>
        <div class="flex items-center justify-between pb-2 border-b border-gray-100">
          <span class="text-sm text-gray-600">Total réservations</span>
          <span class="text-lg font-bold text-gray-900"><%= @total_bookings %></span>
        </div>
        <div class="flex items-center justify-between pb-2 border-b border-gray-100">
          <span class="text-sm text-gray-600">Tarif moyen forfait</span>
          <span class="text-lg font-bold text-red-hero">
            <% if @average_flat_rate > 0 %>
              <%= number_with_precision(@average_flat_rate, precision: 0) %>€
            <% else %>
              -
            <% end %>
          </span>
        </div>
        <div class="flex items-center justify-between">
          <span class="text-sm text-gray-600">Taux horaire moyen</span>
          <span class="text-lg font-bold text-blue-hero">
            <% if @average_hourly_rate > 0 %>
              <%= number_with_precision(@average_hourly_rate, precision: 0) %>€/h
            <% else %>
              -
            <% end %>
          </span>
        </div>
      </div>
    </div>

    <!-- Service Categories -->
    <div class="bg-white rounded-super p-6 shadow-sm">
      <h3 class="text-lg font-bold text-gray-900 mb-4">Catégories populaires</h3>
      <div class="space-y-2">
        <div class="text-sm text-gray-500 italic">
          À venir
        </div>
      </div>
    </div>

    <!-- Tips -->
    <div class="bg-blue-50 border-l-4 border-blue-hero rounded-lg p-4">
      <div class="flex items-start">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-blue-hero" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-bold text-blue-800">Conseils</h3>
          <ul class="text-sm text-blue-700 mt-2 space-y-1 list-disc list-inside">
            <li>Prix clairs et transparents</li>
            <li>Descriptions détaillées</li>
            <li>Durée estimée précise</li>
            <li>Photos si possible</li>
          </ul>
        </div>
      </div>
    </div>

  </div>
</div>

<!-- Pagination -->
<% if @pagy.pages > 1 %>
  <div class="mt-8 p-6 bg-white rounded-super shadow-sm border-t border-gray-200 flex flex-col sm:flex-row justify-between items-center gap-3">
    <p class="text-xs sm:text-sm text-gray-600">
      Affichage de <strong><%= @pagy.from %></strong> à <strong><%= @pagy.to %></strong> sur <strong><%= @pagy.count %></strong> service<%= @pagy.count > 1 ? 's' : '' %>
    </p>
    <%= pagy_nav_supercaralive(@pagy, params: request.query_parameters) %>
  </div>
<% end %>
