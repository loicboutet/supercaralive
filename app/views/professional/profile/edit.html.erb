<div class="bg-soft min-h-screen">
  <div class="container mx-auto px-6 py-8">
    
    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-4xl font-bold text-gray-900 mb-2">Modifier mon profil</h1>
      <p class="text-gray-600">Mettez à jour vos informations professionnelles</p>
    </div>

    <!-- Back to Profile Button -->
    <div class="mb-6">
      <%= link_to professional_profile_path, class: "inline-flex items-center px-4 py-2 bg-gray-200 hover:bg-gray-300 text-gray-700 rounded-lg font-medium transition-colors" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Retour au profil
      <% end %>
    </div>

    <div class="grid md:grid-cols-3 gap-8" data-controller="photo-upload">
      
      <!-- Left Column - Form -->
      <div class="md:col-span-2 space-y-6">
        
        <%= form_with model: @user, url: professional_profile_path, method: :patch, data: { turbo: false }, local: true, multipart: true do |f| %>
          
          <!-- Basic Information -->
          <div class="bg-white rounded-super p-6 shadow-sm mb-6">
            <h2 class="text-2xl font-bold text-gray-900 mb-6">Informations générales</h2>
            
            <div class="space-y-4">
              <div class="grid md:grid-cols-2 gap-4">
                <div>
                  <%= f.label :first_name, "Prénom *", class: "block text-sm font-medium text-gray-700 mb-2" %>
                  <%= f.text_field :first_name, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-hero focus:border-transparent" %>
                </div>
                <div>
                  <%= f.label :last_name, "Nom *", class: "block text-sm font-medium text-gray-700 mb-2" %>
                  <%= f.text_field :last_name, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-hero focus:border-transparent" %>
                </div>
              </div>

              <div>
                <%= f.label :company_name, "Nom d'entreprise *", class: "block text-sm font-medium text-gray-700 mb-2" %>
                <%= f.text_field :company_name, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-hero focus:border-transparent" %>
              </div>

              <div class="grid md:grid-cols-2 gap-4">
                <div>
                  <%= f.label :email, "Email *", class: "block text-sm font-medium text-gray-700 mb-2" %>
                  <%= f.email_field :email, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-hero focus:border-transparent" %>
                </div>
                <div>
                  <%= f.label :phone_number, "Téléphone *", class: "block text-sm font-medium text-gray-700 mb-2" %>
                  <%= f.telephone_field :phone_number, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-hero focus:border-transparent" %>
                </div>
              </div>

              <div>
                <%= f.label :siret, "SIRET *", class: "block text-sm font-medium text-gray-700 mb-2" %>
                <%= f.text_field :siret, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-hero focus:border-transparent" %>
              </div>

              <div>
                <%= f.label :location, "Localisation *", class: "block text-sm font-medium text-gray-700 mb-2" %>
                <%= f.text_field :location, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-hero focus:border-transparent" %>
              </div>

              <div>
                <%= f.label :intervention_zone, "Zone d'intervention", class: "block text-sm font-medium text-gray-700 mb-2" %>
                <%= f.text_field :intervention_zone, placeholder: "Ex: Rayon de 15 km", class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-hero focus:border-transparent" %>
              </div>
            </div>
          </div>

          <!-- Professional Bio -->
          <div class="bg-white rounded-super p-6 shadow-sm mb-6">
            <h2 class="text-2xl font-bold text-gray-900 mb-6">Présentation professionnelle</h2>
            
            <div>
              <%= f.label :professional_presentation, "À propos de vous", class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= f.text_area :professional_presentation, rows: 6, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-hero focus:border-transparent" %>
              <p class="text-sm text-gray-500 mt-1">Décrivez votre expérience et vos compétences</p>
            </div>
          </div>

          <!-- Password Section -->
          <div class="bg-white rounded-super p-6 shadow-sm mb-6">
            <h2 class="text-2xl font-bold text-gray-900 mb-6">Mot de passe</h2>
            
            <div class="bg-blue-50 border-l-4 border-blue-500 rounded-lg p-4 mb-6">
              <div class="flex">
                <div class="flex-shrink-0">
                  <svg class="h-5 w-5 text-blue-500" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
                  </svg>
                </div>
                <div class="ml-3">
                  <p class="text-sm text-blue-700">
                    Laissez ces champs vides si vous ne souhaitez pas modifier le mot de passe.
                  </p>
                </div>
              </div>
            </div>
            
            <div class="space-y-4">
              <div>
                <%= f.label :password, "Nouveau mot de passe", class: "block text-sm font-medium text-gray-700 mb-2" %>
                <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-hero focus:border-transparent" %>
              </div>

              <div>
                <%= f.label :password_confirmation, "Confirmation du mot de passe", class: "block text-sm font-medium text-gray-700 mb-2" %>
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-hero focus:border-transparent" %>
              </div>
            </div>
          </div>

          <!-- Notification Preferences -->
          <div class="bg-white rounded-super p-6 shadow-sm mb-6">
            <h2 class="text-2xl font-bold text-gray-900 mb-6">Préférences de notification</h2>
            <p class="text-sm text-gray-600 mb-4">Gérez vos préférences de notifications et rappels</p>
            
            <div class="space-y-4">
              <!-- Notification when booking is created -->
              <div class="bg-gray-50 rounded-lg p-4">
                <div class="flex items-center justify-between">
                  <div class="flex items-start space-x-3">
                    <div class="w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center flex-shrink-0">
                      <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                      </svg>
                    </div>
                    <div class="flex-1">
                      <h4 class="font-bold text-gray-900">Notification de réservation</h4>
                      <p class="text-sm text-gray-600 mt-1">Recevoir un email lorsqu'un client crée une réservation pour vous</p>
                    </div>
                  </div>
                  <div class="flex items-center">
                    <label class="relative inline-flex items-center cursor-pointer">
                      <%= f.check_box :professional_booking_notification, checked: @user.professional_booking_notification?, class: "sr-only peer" %>
                      <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-green-300 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-green-500"></div>
                    </label>
                  </div>
                </div>
              </div>

              <!-- Booking reminder -->
              <div class="bg-gray-50 rounded-lg p-4">
                <div class="flex items-center justify-between">
                  <div class="flex items-start space-x-3">
                    <div class="w-10 h-10 bg-yellow-100 rounded-lg flex items-center justify-center flex-shrink-0">
                      <svg class="w-5 h-5 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"></path>
                      </svg>
                    </div>
                    <div class="flex-1">
                      <h4 class="font-bold text-gray-900">Rappels de rendez-vous</h4>
                      <p class="text-sm text-gray-600 mt-1">Recevoir des rappels pour les rendez-vous à venir (1 jour avant)</p>
                    </div>
                  </div>
                  <div class="flex items-center">
                    <label class="relative inline-flex items-center cursor-pointer">
                      <%= f.check_box :professional_booking_reminder, checked: @user.professional_booking_reminder?, class: "sr-only peer" %>
                      <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-green-300 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-green-500"></div>
                    </label>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Specializations -->
          <div class="bg-white rounded-super p-6 shadow-sm mb-6">
            <h2 class="text-2xl font-bold text-gray-900 mb-6">Spécialités</h2>
            
            <div class="space-y-3">
              <% @specialties.each do |specialty| %>
                <label class="flex items-center p-3 border border-gray-200 rounded-lg hover:bg-gray-50 cursor-pointer">
                  <%= check_box_tag "user[specialty_ids][]", specialty.id, @user.specialties.include?(specialty), 
                      id: "specialty_#{specialty.id}",
                      class: "w-5 h-5 text-blue-hero border-gray-300 rounded focus:ring-blue-hero" %>
                  <span class="ml-3 text-gray-700"><%= specialty.icon %> <%= specialty.name %></span>
                </label>
              <% end %>
            </div>
          </div>

          <!-- Form Actions -->
          <div class="bg-white rounded-super p-6 shadow-sm">
            <div class="flex items-center justify-between">
              <%= link_to professional_profile_path, class: "bg-gray-200 hover:bg-gray-300 text-gray-700 px-6 py-3 rounded-lg font-medium inline-flex items-center" do %>
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
                Annuler
              <% end %>
              <%= f.submit "Enregistrer les modifications", class: "bg-red-hero hover:bg-red-dark text-white px-6 py-3 rounded-lg font-bold inline-flex items-center cursor-pointer" %>
            </div>
          </div>

          <!-- Profile Photo Fields (hidden, for form submission) -->
          <%= f.file_field :profile_photo, accept: "image/jpeg,image/png", class: "hidden", data: { photo_upload_target: "input", action: "change->photo-upload#fileSelected" } %>
          <%= f.check_box :remove_profile_photo, { checked: false, class: "hidden", data: { photo_upload_target: "removeCheckbox" } }, "1", "0" %>

        <% end %>

      </div>

      <!-- Right Column - Tips -->
      <div class="space-y-6">
        
        <!-- Profile Photo -->
        <div class="bg-white rounded-super p-6 shadow-sm">
          <h3 class="text-lg font-bold text-gray-900 mb-4">Photo de profil</h3>
          <div class="text-center">
            <div class="w-32 h-32 bg-blue-hero rounded-lg flex items-center justify-center mx-auto mb-4 overflow-hidden relative">
              <%= user_avatar_content(@user, 
                  image_class: "w-full h-full object-cover", 
                  initials_class: "text-white text-5xl font-bold absolute inset-0 flex items-center justify-center z-10",
                  image_data: { photo_upload_target: "preview" },
                  initials_data: { photo_upload_target: "initials" },
                  include_stimulus_img: true) %>
            </div>
            <button type="button" data-action="click->photo-upload#selectFile" class="w-full bg-blue-hero hover:bg-blue-dark text-white px-4 py-3 rounded-lg font-medium inline-flex items-center justify-center mb-2">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
              Télécharger une photo
            </button>
            <% if @user.profile_photo.attached? %>
              <p class="text-xs text-gray-500 mb-2" data-photo-upload-target="fileName"><%= @user.profile_photo.filename %></p>
              <button type="button" data-action="click->photo-upload#removePhoto" class="w-full bg-gray-200 hover:bg-gray-300 text-gray-700 px-4 py-2 rounded-lg text-sm font-medium">
                Supprimer la photo
              </button>
            <% else %>
              <p class="text-xs text-gray-500 hidden" data-photo-upload-target="fileName"></p>
            <% end %>
            <p class="text-xs text-gray-500">JPG, PNG max 5MB</p>
          </div>
        </div>

        <!-- Tips -->
        <div class="bg-yellow-50 border-l-4 border-yellow-hero rounded-lg p-4">
          <div class="flex items-start">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-yellow-hero" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-bold text-yellow-800">Conseils pour un profil attractif</h3>
              <ul class="text-sm text-yellow-700 mt-2 space-y-1 list-disc list-inside">
                <li>Ajoutez une photo professionnelle</li>
                <li>Détaillez votre expérience</li>
                <li>Soyez précis sur vos spécialités</li>
                <li>Mettez à jour régulièrement</li>
              </ul>
            </div>
          </div>
        </div>

        <!-- Completion Progress -->
        <div class="bg-white rounded-super p-6 shadow-sm">
          <h3 class="text-lg font-bold text-gray-900 mb-4">Complétude du profil</h3>
          <% 
            completion_percentage = @user.profile_completion_percentage
            fields = [:first_name, :last_name, :company_name, :email, :phone_number, :location, :siret, :intervention_zone, :professional_presentation]
            profile_photo_completed = @user.profile_photo.attached?
            document_completed = @user.professional_documents.exists?
          %>
          <div class="mb-3">
            <div class="flex items-center justify-between mb-1">
              <span class="text-sm text-gray-600">Progression</span>
              <span class="text-sm font-bold text-gray-900"><%= completion_percentage %>%</span>
            </div>
            <div class="w-full bg-gray-200 rounded-full h-3">
              <div class="bg-green-600 h-3 rounded-full" style="width: <%= completion_percentage %>%"></div>
            </div>
          </div>
          <div class="space-y-2 text-sm">
              <% fields.each do |field| %>
              <div class="flex items-center <%= @user.send(field).present? ? 'text-green-600' : 'text-gray-400' %>">
                <% if @user.send(field).present? %>
                  <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                <% else %>
                  <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                  </svg>
                <% end %>
                <%= I18n.t("attributes.user.#{field}", default: field.to_s.humanize) %>
              </div>
            <% end %>
            <div class="flex items-center <%= profile_photo_completed ? 'text-green-600' : 'text-gray-400' %>">
              <% if profile_photo_completed %>
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
              <% else %>
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
              <% end %>
              Photo de profil ajoutée
            </div>
            <div class="flex items-center <%= document_completed ? 'text-green-600' : 'text-gray-400' %>">
              <% if document_completed %>
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
              <% else %>
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
              <% end %>
              Document uploadé
            </div>
          </div>
        </div>

        <!-- Help -->
        <div class="bg-blue-50 rounded-super p-6">
          <h3 class="text-lg font-bold text-gray-900 mb-2">Besoin d'aide ?</h3>
          <p class="text-sm text-gray-600 mb-4">
            Notre équipe est là pour vous accompagner
          </p>
          <%= mail_to support_email, class: "w-full bg-blue-hero hover:bg-blue-dark text-white px-4 py-3 rounded-lg font-medium flex items-center justify-center" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"></path>
            </svg>
            Contacter le support
          <% end %>
        </div>

      </div>
    </div>

  </div>
</div>
