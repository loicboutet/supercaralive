<div class="min-h-screen bg-soft py-12 px-4 sm:px-6 lg:px-8 flex items-center justify-center">
  <div class="max-w-2xl mx-auto w-full">
    <div class="bg-white rounded-super shadow-sm p-8 md:p-12 text-center">
      <!-- Icon -->
      <div class="mb-6 flex justify-center">
        <div class="bg-yellow-100 rounded-full p-4">
          <svg class="w-16 h-16 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
      </div>

      <!-- Title -->
      <h1 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
        Compte Inactif
      </h1>

      <!-- Message -->
      <div class="mb-8">
        <p class="text-lg text-gray-700 leading-relaxed mb-4">
          Votre compte est actuellement inactif.
        </p>
        <% app_config = AppConfig.instance %>
        <% if app_config.contact_email.present? || app_config.contact_phone.present? %>
          <p class="text-gray-600 leading-relaxed mb-4">
            Si vous pensez qu'il s'agit d'une erreur, vous pouvez nous contacter :
          </p>
          <div class="space-y-3">
            <% if app_config.contact_email.present? %>
              <p class="text-lg font-semibold text-yellow-600">
                <a href="mailto:<%= app_config.contact_email %>" class="hover:underline inline-flex items-center">
                  <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                  </svg>
                  <%= app_config.contact_email %>
                </a>
              </p>
            <% end %>
            <% if app_config.contact_phone.present? %>
              <p class="text-lg font-semibold text-yellow-600">
                <a href="tel:<%= app_config.contact_phone.gsub(/\s/, '') %>" class="hover:underline inline-flex items-center">
                  <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                  </svg>
                  <%= app_config.contact_phone %>
                </a>
              </p>
            <% end %>
          </div>
        <% end %>
      </div>

      <!-- Logout Button -->
      <div class="pt-6 border-t border-gray-200">
        <%= button_to destroy_user_session_path, method: :delete, form: { data: { turbo: false } }, class: "bg-gray-600 hover:bg-gray-700 text-white px-6 py-3 rounded-lg font-semibold inline-flex items-center transition-colors" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
          </svg>
          Se d√©connecter
        <% end %>
      </div>
    </div>
  </div>
</div>

