  <div class="container mx-auto px-6">
    <div class="grid md:grid-cols-3 gap-12 mb-12">
      <!-- Logo & Description -->
      <div class="md:col-span-2">
        <%= link_to root_path, class: "flex items-center mb-4 hover:opacity-80 transition-opacity" do %>
          <span class="text-xl font-bold">SUPERCAR<span class="text-red-hero">ALIVE</span></span>
        <% end %>
        <p class="text-gray-400 leading-relaxed max-w-md">
          Les pros de l'auto directement chez vous en un clic
        </p>
      </div>
      
      <!-- Contact Links -->
      <div>
        <h4 class="font-bold text-lg mb-4">Contact</h4>
        <ul class="space-y-2 text-gray-400">
          <li><%= link_to "Nous contacter", pages_contact_path, class: "hover:text-red-hero" %></li>
          <li><%= link_to "À propos", pages_about_path, class: "hover:text-red-hero" %></li>
