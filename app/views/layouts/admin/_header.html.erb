<header class="bg-white shadow-sm">
  <div class="px-3 sm:px-6 py-3 sm:py-4 flex justify-between items-center gap-2">
    <!-- Mobile Menu Button -->
    <button id="mobile-menu-btn" class="md:hidden text-gray-600 hover:text-gray-900 flex-shrink-0">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
      </svg>
    </button>
    
    <h2 class="text-base sm:text-xl md:text-2xl font-bold text-gray-900 truncate flex-1">
      <%= content_for(:page_title) || "Tableau de Bord Admin" %>
    </h2>
    <div class="flex items-center space-x-2 sm:space-x-4 flex-shrink-0">
      <!-- User Profile Dropdown -->
      <div class="relative group">
        <button class="flex items-center space-x-2 text-gray-700 hover:text-blue-hero font-medium">
          <div class="w-8 h-8 sm:w-10 sm:h-10 rounded-full bg-blue-hero flex items-center justify-center overflow-hidden relative">
            <%= user_avatar_content(current_user, 
                image_class: "w-full h-full object-cover", 
                initials_class: "text-white font-bold text-sm absolute inset-0 flex items-center justify-center") %>
          </div>
          <span class="text-gray-600 hidden sm:inline text-sm"><%= current_user.get_full_name %></span>
          <svg class="w-4 h-4 hidden sm:block" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
          </svg>
        </button>
        
        <!-- Dropdown Menu -->
        <div class="absolute right-0 mt-2 w-48 bg-white rounded-lg shadow-lg py-2 invisible group-hover:visible opacity-0 group-hover:opacity-100 transition-all duration-200 z-50">
          <%= link_to admin_profile_path, class: "block px-4 py-2 text-gray-700 hover:bg-blue-hero hover:text-white transition-colors flex items-center space-x-2" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
            <span>Mon Profil</span>
          <% end %>
          <div class="border-t border-gray-200 my-2"></div>
          <%= button_to destroy_user_session_path, method: :delete, class: "w-full text-left px-4 py-2 text-red-600 hover:bg-blue-hero hover:text-white transition-colors flex items-center space-x-2" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
            </svg>
            <span>DÃ©connexion</span>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</header>