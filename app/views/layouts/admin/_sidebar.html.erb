<div class="hidden md:flex md:w-64 bg-blue-hero text-white flex-col">
  <!-- Logo/Header -->
  <div class="p-6 border-b border-yellow-hero">
    <%= link_to admin_root_path, class: "flex flex-col items-center space-y-2" do %>
      <%= image_tag "logo.png", alt: "Supercaralive Admin", class: "h-24 w-auto" %>
      <h1 class="text-xl font-bold text-center">Portail Admin</h1>
    <% end %>
  </div>

  <!-- Navigation -->
  <nav class="flex-1 p-4 overflow-y-auto">
    <ul class="space-y-2">
      <li>
        <%= link_to admin_root_path, class: "flex items-center space-x-3 px-4 py-3 rounded-friendly hover:bg-yellow-hero transition #{current_page?(admin_root_path) ? 'bg-yellow-hero' : ''}" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
          </svg>
          <span class="font-medium">Tableau de bord</span>
        <% end %>
      </li>
      <li>
        <%= link_to admin_users_path, class: "flex items-center space-x-3 px-4 py-3 rounded-friendly hover:bg-yellow-hero transition #{request.path.start_with?('/admin/users') ? 'bg-yellow-hero' : ''}" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
          </svg>
          <span class="font-medium">Utilisateurs</span>
        <% end %>
      </li>
      <li>
        <%= link_to admin_professional_approvals_path, class: "flex items-center space-x-3 px-4 py-3 rounded-friendly hover:bg-yellow-hero transition #{request.path.start_with?('/admin/professional_approvals') ? 'bg-yellow-hero' : ''}" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <span class="font-medium">Approbations</span>
        <% end %>
      </li>
      <li>
        <%= link_to admin_services_path, class: "flex items-center space-x-3 px-4 py-3 rounded-friendly hover:bg-yellow-hero transition #{request.path.start_with?('/admin/services') ? 'bg-yellow-hero' : ''}" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
          </svg>
          <span class="font-medium">Services</span>
        <% end %>
      </li>
      <li>
        <%= link_to admin_specialties_path, class: "flex items-center space-x-3 px-4 py-3 rounded-friendly hover:bg-yellow-hero transition #{request.path.start_with?('/admin/specialties') ? 'bg-yellow-hero' : ''}" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"></path>
          </svg>
          <span class="font-medium">Spécialités</span>
        <% end %>
      </li>
      <li>
        <%= link_to admin_bookings_path, class: "flex items-center space-x-3 px-4 py-3 rounded-friendly hover:bg-yellow-hero transition #{current_page?(admin_bookings_path) ? 'bg-yellow-hero' : ''}" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
          </svg>
          <span class="font-medium">Réservations</span>
        <% end %>
      </li>
      <li class="hidden">
        <%= link_to admin_reviews_path, class: "flex items-center space-x-3 px-4 py-3 rounded-friendly hover:bg-yellow-hero transition #{current_page?(admin_reviews_path) ? 'bg-yellow-hero' : ''}" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"></path>
          </svg>
          <span class="font-medium">Avis</span>
        <% end %>
      </li>
      <li class="hidden">
        <%= link_to admin_payments_path, class: "flex items-center space-x-3 px-4 py-3 rounded-friendly hover:bg-yellow-hero transition #{current_page?(admin_payments_path) ? 'bg-yellow-hero' : ''}" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"></path>
          </svg>
          <span class="font-medium">Paiements</span>
        <% end %>
      </li>
    </ul>
  </nav>

  <!-- Footer -->
  <div class="p-4 border-t border-yellow-hero">
    <%= button_to destroy_user_session_path, method: :delete, form: { data: { turbo: false, controller: "confirm", confirm_message_value: "Êtes-vous sûr de vouloir vous déconnecter ?", action: "submit->confirm#confirm" }, class: "w-full" }, class: "w-full flex items-center space-x-3 px-4 py-3 rounded-friendly hover:bg-yellow-hero transition text-white opacity-75 hover:opacity-100" do %>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
      </svg>
      <span class="font-medium">Se déconnecter</span>
    <% end %>
  </div>
</div>