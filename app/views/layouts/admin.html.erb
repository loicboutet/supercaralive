                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <span class="font-medium">Approvals</span>
            <% end %>
          </li>
          <li>
            <%= link_to admin_services_path, class: "flex items-center space-x-3 px-4 py-3 rounded-friendly hover:bg-yellow-hero transition #{current_page?(admin_services_path) ? 'bg-yellow-hero' : ''}" do %>
