<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "Admin - Supercaralive" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="apple-touch-icon" href="/icon.png">

    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "supercaralive", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="bg-soft" data-controller="lucide mobile-sidebar" data-mobile-sidebar-open-value="false">
    <%= render "layouts/shared/notices" %>

    <div class="flex h-screen">
      <%= render "layouts/admin/sidebar" %>

      <div class="flex-1 flex flex-col overflow-hidden">
        <%= render "layouts/admin/header" %>

        <!-- Main Content -->
        <main class="flex-1 overflow-y-auto">
          <div class="p-3 sm:p-4 md:p-6">
            <%= yield %>
          </div>
          <%= render "layouts/admin/footer" %>
        </main>
      </div>
    </div>

    <!-- Mobile Sidebar Overlay -->
    <div data-mobile-sidebar-target="overlay" data-action="click->mobile-sidebar#close" class="fixed inset-0 bg-black bg-opacity-50 z-40 md:hidden hidden"></div>
    
    <!-- Mobile Sidebar -->
    <%= render "layouts/admin/mobile_sidebar" %>
  </body>
</html>
