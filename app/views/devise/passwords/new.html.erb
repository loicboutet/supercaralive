<div class="min-h-screen bg-soft flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-lg w-full min-w-0 sm:min-w-96">
    <!-- Logo and Header -->
    <div class="text-center mb-8">
        <div class="flex justify-center mb-4">
          <%= image_tag "logo.png", alt: "Supercaralive", class: "h-16" %>
        </div>
        <h2 class="text-4xl font-bold text-gray-900 mb-2">Mot de passe oublié ?</h2>
        <p class="text-gray-600">Réinitialisez votre mot de passe</p>
    </div>

    <!-- Password Reset Form -->
    <div class="bg-white rounded-super shadow-sm p-8">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="space-y-6">
            <!-- Info Message -->
            <div class="bg-blue-50 border-l-4 border-blue-hero rounded-lg p-4">
              <div class="flex items-start">
                <div class="flex-shrink-0">
                  <svg class="h-5 w-5 text-blue-hero" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
                  </svg>
                </div>
                <div class="ml-3">
                  <p class="text-sm text-blue-800">
                    Entrez votre adresse email et nous vous enverrons un lien pour réinitialiser votre mot de passe.
                  </p>
                </div>
              </div>
            </div>

            <!-- Email Field -->
            <div>
              <%= f.label :email, "Adresse email", class: "block text-sm font-bold text-gray-700 mb-2" %>
              <%= f.email_field :email, 
                  autofocus: true, 
                  autocomplete: "email",
                  class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-hero focus:border-transparent transition",
                  placeholder: "votre.email@exemple.fr" %>
            </div>

            <!-- Submit Button -->
            <div class="flex justify-center">
              <%= f.submit "Envoyer le lien de réinitialisation", class: "bg-red-hero hover:bg-red-dark text-white font-bold py-2 px-6 rounded-lg transition" %>
            </div>
          </div>
        <% end %>

        <!-- Links -->
        <div class="mt-6 text-center space-y-2">
          <%= link_to "Retour à la connexion", new_session_path(resource_name), class: "text-blue-hero hover:underline text-sm font-medium block" %>
          <%= link_to "Créer un compte", new_registration_path(resource_name), class: "text-blue-hero hover:underline text-sm font-medium block" %>
      </div>
    </div>
  </div>
</div>
