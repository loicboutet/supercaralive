<div class="min-h-screen bg-soft flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8 w-full lg:w-[700px] mx-auto">
  <div class="max-w-lg w-full min-w-0 sm:min-w-96">
    <!-- Logo and Header -->
    <div class="text-center mb-8">
      <div class="flex justify-center mb-4">
        <%= link_to root_path do %>
          <%= image_tag "logo.png", alt: "Supercaralive", class: "h-24" %>
        <% end %>
      </div>
      <h2 class="text-4xl font-bold text-gray-900 mb-2">Nouveau mot de passe</h2>
      <p class="text-gray-600">Choisissez un nouveau mot de passe sécurisé</p>
    </div>

    <!-- Password Change Form -->
    <div class="bg-white rounded-super shadow-sm p-8">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div class="space-y-6">
          <!-- New Password Field -->
          <div>
            <%= f.label :password, "Nouveau mot de passe", class: "block text-sm font-bold text-gray-700 mb-2" %>
            <% if @minimum_password_length %>
              <p class="text-xs text-gray-500 mb-2">Minimum <%= @minimum_password_length %> caractères</p>
            <% end %>
            <%= f.password_field :password, 
                autofocus: true, 
                autocomplete: "new-password",
                class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-hero focus:border-transparent transition",
                placeholder: "••••••••" %>
          </div>

          <!-- Password Confirmation Field -->
          <div>
            <%= f.label :password_confirmation, "Confirmer le mot de passe", class: "block text-sm font-bold text-gray-700 mb-2" %>
            <%= f.password_field :password_confirmation, 
                autocomplete: "new-password",
                class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-hero focus:border-transparent transition",
                placeholder: "••••••••" %>
          </div>

          <!-- Submit Button -->
          <div class="flex justify-center">
            <%= f.submit "Changer mon mot de passe", class: "bg-red-hero hover:bg-red-dark text-white font-bold py-2 px-6 rounded-lg transition" %>
          </div>
        </div>
      <% end %>

      <!-- Links -->
      <div class="mt-6 text-center">
        <%= link_to "Retour à la connexion", new_session_path(resource_name), class: "text-blue-hero hover:underline text-sm font-medium" %>
      </div>
    </div>
  </div>
</div>
