<div class="min-h-screen bg-soft flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8 w-full lg:w-[700px] mx-auto">
  <div class="max-w-lg w-full min-w-0 sm:min-w-96">
    <!-- Header -->
    <div class="text-center mb-8">
      <div class="mb-4">
        <span class="text-xl sm:text-2xl font-bold text-gray-800">SUPERCAR<span class="text-red-hero">ALIVE</span></span>
      </div>
      <h2 class="text-4xl font-bold text-gray-900 mb-2">Nouveau mot de passe</h2>
      <p class="text-gray-600">Choisissez un nouveau mot de passe sécurisé</p>
      <p class="text-xs text-gray-400 mt-2 italic">Note : Le logo sera ajouté dans une dizaine de jours</p>
    </div>

    <!-- Password Change Form -->
    <div class="bg-white rounded-super shadow-sm p-8">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div class="space-y-6">
          <!-- New Password Field -->
          <div data-controller="password-toggle">
            <%= f.label :password, "Nouveau mot de passe", class: "block text-sm font-bold text-gray-700 mb-2" %>
            <% if @minimum_password_length %>
              <p class="text-xs text-gray-500 mb-2">Minimum <%= @minimum_password_length %> caractères</p>
            <% end %>
            <div class="relative">
              <%= f.password_field :password, 
                  autofocus: true, 
                  autocomplete: "off",
                  data: { password_toggle_target: "input" },
                  class: "w-full px-4 py-3 pr-12 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-hero focus:border-transparent transition",
                  placeholder: "••••••••" %>
              <button type="button" 
                      data-action="click->password-toggle#toggle"
                      data-password-toggle-target="icon"
                      class="absolute right-3 top-1/2 transform -translate-y-1/2 text-gray-400 hover:text-gray-600 focus:outline-none">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21"></path>
                </svg>
              </button>
            </div>
          </div>

          <!-- Password Confirmation Field -->
          <div data-controller="password-toggle">
            <%= f.label :password_confirmation, "Confirmer le mot de passe", class: "block text-sm font-bold text-gray-700 mb-2" %>
            <div class="relative">
              <%= f.password_field :password_confirmation, 
                  autocomplete: "off",
                  data: { password_toggle_target: "input" },
                  class: "w-full px-4 py-3 pr-12 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-hero focus:border-transparent transition",
                  placeholder: "••••••••" %>
              <button type="button" 
                      data-action="click->password-toggle#toggle"
                      data-password-toggle-target="icon"
                      class="absolute right-3 top-1/2 transform -translate-y-1/2 text-gray-400 hover:text-gray-600 focus:outline-none">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21"></path>
                </svg>
              </button>
            </div>
          </div>

          <!-- Submit Button -->
          <div class="flex justify-center">
            <%= f.submit "Changer mon mot de passe", class: "bg-red-hero hover:bg-red-dark text-white font-bold py-2 px-6 rounded-lg transition" %>
          </div>
        </div>
      <% end %>

      <!-- Links -->
      <div class="mt-6 text-center">
        <%= link_to "Retour à la connexion", new_session_path(resource_name), class: "text-blue-hero hover:underline text-sm font-medium" %>
      </div>
    </div>
  </div>
</div>
