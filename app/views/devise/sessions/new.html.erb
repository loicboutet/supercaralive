<div class="min-h-screen bg-soft flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8 w-full lg:w-[700px] mx-auto">
  <div class="max-w-lg w-full min-w-0 sm:min-w-96">
    <!-- Header -->
    <div class="text-center mb-8">
        <div class="mb-4">
          <span class="text-xl sm:text-2xl font-bold text-gray-800">SUPERCAR<span class="text-red-hero">ALIVE</span></span>
        </div>
        <h2 class="text-4xl font-bold text-gray-900 mb-2">Connexion</h2>
        <p class="text-gray-600">Bienvenue sur Supercaralive</p>
        <p class="text-xs text-gray-400 mt-2 italic">Note : Le logo sera ajouté dans une dizaine de jours</p>
    </div>

    <!-- Login Form -->
    <div class="bg-white rounded-super shadow-sm p-8">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="space-y-6">
            <!-- Email Field -->
            <div>
              <%= f.label :email, "Adresse email", class: "block text-sm font-bold text-gray-700 mb-2" %>
              <%= f.email_field :email, 
                  autofocus: true, 
                  autocomplete: "off",
                  class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-hero focus:border-transparent transition",
                  placeholder: "votre.email@exemple.fr" %>
            </div>

            <!-- Password Field -->
            <div data-controller="password-toggle">
              <%= f.label :password, "Mot de passe", class: "block text-sm font-bold text-gray-700 mb-2" %>
              <div class="relative">
                <%= f.password_field :password, 
                    autocomplete: "off",
                    data: { password_toggle_target: "input" },
                    class: "w-full px-4 py-3 pr-12 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-hero focus:border-transparent transition",
                    placeholder: "••••••••" %>
                <button type="button" 
                        data-action="click->password-toggle#toggle"
                        data-password-toggle-target="icon"
                        class="absolute right-3 top-1/2 transform -translate-y-1/2 text-gray-400 hover:text-gray-600 focus:outline-none">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21"></path>
                  </svg>
                </button>
              </div>
            </div>

            <!-- Remember Me -->
            <% if devise_mapping.rememberable? %>
              <div class="flex items-center">
                <%= f.check_box :remember_me, class: "w-4 h-4 text-red-hero border-gray-300 rounded focus:ring-red-hero" %>
                <%= f.label :remember_me, "Se souvenir de moi", class: "ml-2 text-sm text-gray-700" %>
              </div>
            <% end %>

            <!-- Submit Button -->
            <div class="flex justify-center">
              <%= f.submit "Se connecter", class: "bg-red-hero hover:bg-red-dark text-white font-bold py-2 px-6 rounded-lg transition" %>
            </div>
          </div>
        <% end %>

        <!-- Links -->
        <div class="mt-6 text-center space-y-2">
          <%= link_to "Mot de passe oublié ?", new_password_path(resource_name), class: "text-blue-hero hover:underline text-sm font-medium block" %>
          <%= link_to "Créer un compte", new_registration_path(resource_name), class: "text-blue-hero hover:underline text-sm font-medium block" %>
      </div>
    </div>

    <!-- Role Selection Info -->
    <div class="mt-6 text-center">
      <p class="text-sm text-gray-600">
        Vous êtes professionnel ? 
        <%= link_to "Inscrivez-vous ici", new_registration_path(resource_name, role: 'professional'), class: "text-red-hero hover:underline font-medium" %>
      </p>
    </div>
  </div>
</div>
