<!-- Client Menu -->
<div class="hidden lg:flex items-center space-x-2">
  <%= link_to "Tableau de bord", client_root_path, class: "px-4 py-2 rounded-lg font-medium transition-colors #{current_page?(client_root_path) ? 'bg-red-hero text-white' : 'text-gray-700 hover:bg-red-hero hover:text-white'}" %>
  
  <%= link_to "Mes Véhicules", client_vehicles_path, class: "px-4 py-2 rounded-lg font-medium transition-colors #{current_page?(client_vehicles_path) ? 'bg-red-hero text-white' : 'text-gray-700 hover:bg-red-hero hover:text-white'}" %>
  
  <%= link_to "Professionnels", client_professionals_path, class: "px-4 py-2 rounded-lg font-medium transition-colors #{current_page?(client_professionals_path) ? 'bg-red-hero text-white' : 'text-gray-700 hover:bg-red-hero hover:text-white'}" %>
  
  <%= link_to "Mes Réservations", client_bookings_path, class: "px-4 py-2 rounded-lg font-medium transition-colors #{current_page?(client_bookings_path) ? 'bg-red-hero text-white' : 'text-gray-700 hover:bg-red-hero hover:text-white'}" %>
  
  <%= link_to "Factures", client_invoices_path, class: "px-4 py-2 rounded-lg font-medium transition-colors #{current_page?(client_invoices_path) ? 'bg-red-hero text-white' : 'text-gray-700 hover:bg-red-hero hover:text-white'}" %>
  
  <%= link_to "Rappels", client_maintenance_reminders_path, class: "px-4 py-2 rounded-lg font-medium transition-colors #{current_page?(client_maintenance_reminders_path) ? 'bg-red-hero text-white' : 'text-gray-700 hover:bg-red-hero hover:text-white'}" %>

  <!-- User Profile Dropdown -->
  <div class="relative group">
    <button class="flex items-center space-x-2 text-gray-700 hover:text-red-hero font-medium">
      <div class="w-8 h-8 bg-red-hero rounded-full flex items-center justify-center">
        <span class="text-white font-bold text-sm"><%= current_user&.email&.first&.upcase || 'C' %></span>
      </div>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
      </svg>
    </button>
    
    <!-- Dropdown Menu -->
    <div class="absolute right-0 mt-2 w-48 bg-white rounded-lg shadow-lg py-2 invisible group-hover:visible opacity-0 group-hover:opacity-100 transition-all duration-200">
      <%= link_to client_profile_path, class: "block px-4 py-2 text-gray-700 hover:bg-soft flex items-center space-x-2" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
        </svg>
        <span>Mon Profil</span>
      <% end %>
      <%= link_to client_wallet_path, class: "block px-4 py-2 text-gray-700 hover:bg-soft flex items-center space-x-2" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"></path>
        </svg>
        <span>Mon Portefeuille</span>
      <% end %>
      <div class="border-t border-gray-200 my-2"></div>
      <%= button_to destroy_user_session_path, method: :delete, class: "w-full text-left px-4 py-2 text-red-600 hover:bg-soft flex items-center space-x-2" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
        </svg>
        <span>Déconnexion</span>
      <% end %>
    </div>
  </div>
</div>

<!-- Mobile Menu -->
<div id="mobile-menu" class="hidden lg:hidden absolute top-full left-0 right-0 bg-white shadow-lg border-t border-gray-200 z-40">
  <div class="container mx-auto px-4 py-4 space-y-2">
    <%= link_to "Tableau de bord", client_root_path, class: "block px-4 py-2 rounded-lg font-medium transition-colors #{current_page?(client_root_path) ? 'bg-red-hero text-white' : 'text-gray-700 hover:bg-red-hero hover:text-white'}" %>
    
    <%= link_to "Mes Véhicules", client_vehicles_path, class: "block px-4 py-2 rounded-lg font-medium transition-colors #{current_page?(client_vehicles_path) ? 'bg-red-hero text-white' : 'text-gray-700 hover:bg-red-hero hover:text-white'}" %>
    
    <%= link_to "Professionnels", client_professionals_path, class: "block px-4 py-2 rounded-lg font-medium transition-colors #{current_page?(client_professionals_path) ? 'bg-red-hero text-white' : 'text-gray-700 hover:bg-red-hero hover:text-white'}" %>
    
    <%= link_to "Mes Réservations", client_bookings_path, class: "block px-4 py-2 rounded-lg font-medium transition-colors #{current_page?(client_bookings_path) ? 'bg-red-hero text-white' : 'text-gray-700 hover:bg-red-hero hover:text-white'}" %>
    
    <%= link_to "Factures", client_invoices_path, class: "block px-4 py-2 rounded-lg font-medium transition-colors #{current_page?(client_invoices_path) ? 'bg-red-hero text-white' : 'text-gray-700 hover:bg-red-hero hover:text-white'}" %>
    
    <%= link_to "Rappels Entretien", client_maintenance_reminders_path, class: "block px-4 py-2 rounded-lg font-medium transition-colors #{current_page?(client_maintenance_reminders_path) ? 'bg-red-hero text-white' : 'text-gray-700 hover:bg-red-hero hover:text-white'}" %>
    
    <%= link_to "Mon Profil", client_profile_path, class: "block px-4 py-2 rounded-lg font-medium text-gray-700 hover:bg-red-hero hover:text-white transition-colors" %>
    
    <%= link_to "Mon Portefeuille", client_wallet_path, class: "block px-4 py-2 rounded-lg font-medium text-gray-700 hover:bg-red-hero hover:text-white transition-colors" %>
    
    <%= button_to destroy_user_session_path, method: :delete, class: "w-full text-left px-4 py-2 text-red-600 hover:bg-red-hero hover:text-white rounded-lg font-medium transition-colors" do %>
      Déconnexion
    <% end %>
  </div>
</div>
