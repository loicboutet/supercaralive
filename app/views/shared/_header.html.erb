<header class="bg-white shadow-sm sticky top-0 z-50">
  <nav class="container mx-auto px-6 py-4">
    <div class="flex items-center justify-between">
      <!-- Logo -->
      <div class="flex items-center space-x-3">
        <%= image_tag "logo.png", alt: "Supercaralive", class: "h-12 w-auto" %>
        <span class="text-2xl font-bold text-gray-800">SUPERCAR<span class="text-red-hero">ALIVE</span></span>
      </div>
      
      <!-- Menu Desktop -->
      <div class="hidden md:flex items-center space-x-8">
        <a href="#services" class="text-gray-700 hover:text-red-hero font-medium">Nos Services</a>
        <a href="#about" class="text-gray-700 hover:text-red-hero font-medium">À Propos</a>
        <a href="#contact" class="text-gray-700 hover:text-red-hero font-medium">Contact</a>
        <button class="bg-red-hero hover:bg-red-dark text-white px-6 py-2 rounded-friendly font-medium">
          Réserver
        </button>
      </div>
      
      <!-- Menu Mobile -->
      <button class="md:hidden text-gray-700">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
  </nav>
</header>
