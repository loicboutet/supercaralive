<!-- Professional Menu -->
<div class="hidden lg:flex items-center space-x-2">
  <%= link_to "Tableau de bord", professional_root_path, class: "px-4 py-2 rounded-lg font-medium transition-colors #{current_page?(professional_root_path) ? 'bg-blue-hero text-white' : 'text-gray-700 hover:bg-blue-hero hover:text-white'}" %>
  
  <%= link_to "Mon Profil Pro", professional_profile_path, class: "px-4 py-2 rounded-lg font-medium transition-colors #{current_page?(professional_profile_path) ? 'bg-blue-hero text-white' : 'text-gray-700 hover:bg-blue-hero hover:text-white'}" %>
  
  <%= link_to "Mes Services", professional_professional_services_path, class: "px-4 py-2 rounded-lg font-medium transition-colors #{current_page?(professional_professional_services_path) ? 'bg-blue-hero text-white' : 'text-gray-700 hover:bg-blue-hero hover:text-white'}" %>
  
  <%= link_to "Disponibilités", professional_availability_slots_path, class: "px-4 py-2 rounded-lg font-medium transition-colors #{current_page?(professional_availability_slots_path) ? 'bg-blue-hero text-white' : 'text-gray-700 hover:bg-blue-hero hover:text-white'}" %>
  
  <%= link_to "Réservations", professional_bookings_path, class: "px-4 py-2 rounded-lg font-medium transition-colors #{current_page?(professional_bookings_path) ? 'bg-blue-hero text-white' : 'text-gray-700 hover:bg-blue-hero hover:text-white'}" %>
  
  <%= link_to "Mes Factures", professional_invoices_path, class: "px-4 py-2 rounded-lg font-medium transition-colors #{current_page?(professional_invoices_path) ? 'bg-blue-hero text-white' : 'text-gray-700 hover:bg-blue-hero hover:text-white'}" %>
  
  <%= link_to "Avis Reçus", professional_reviews_path, class: "px-4 py-2 rounded-lg font-medium transition-colors #{current_page?(professional_reviews_path) ? 'bg-blue-hero text-white' : 'text-gray-700 hover:bg-blue-hero hover:text-white'}" %>

  <!-- User Profile Dropdown -->
  <div class="relative group">
    <button class="flex items-center space-x-2 text-gray-700 hover:text-blue-hero font-medium">
      <div class="w-8 h-8 bg-blue-hero rounded-full flex items-center justify-center">
        <span class="text-white font-bold text-sm"><%= current_user&.email&.first&.upcase || 'P' %></span>
      </div>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
      </svg>
    </button>
    
    <!-- Dropdown Menu -->
    <div class="absolute right-0 mt-2 w-48 bg-white rounded-lg shadow-lg py-2 invisible group-hover:visible opacity-0 group-hover:opacity-100 transition-all duration-200">
      <%= link_to professional_profile_path, class: "block px-4 py-2 text-gray-700 hover:bg-soft flex items-center space-x-2" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
        </svg>
        <span>Mon Profil</span>
      <% end %>
      <%= link_to professional_verification_documents_path, class: "block px-4 py-2 text-gray-700 hover:bg-soft flex items-center space-x-2" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
        </svg>
        <span>Documents</span>
      <% end %>
      <%= link_to calendar_professional_availability_slots_path, class: "block px-4 py-2 text-gray-700 hover:bg-soft flex items-center space-x-2" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
        </svg>
        <span>Calendrier</span>
      <% end %>
      <div class="border-t border-gray-200 my-2"></div>
      <%= button_to destroy_user_session_path, method: :delete, class: "w-full text-left px-4 py-2 text-red-600 hover:bg-soft flex items-center space-x-2" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
        </svg>
        <span>Déconnexion</span>
      <% end %>
    </div>
  </div>
</div>

<!-- Mobile Menu -->
<div id="mobile-menu" class="hidden lg:hidden absolute top-full left-0 right-0 bg-white shadow-lg border-t border-gray-200 z-40">
  <div class="container mx-auto px-4 py-4 space-y-2">
    <%= link_to "Tableau de bord", professional_root_path, class: "block px-4 py-2 rounded-lg font-medium transition-colors #{current_page?(professional_root_path) ? 'bg-blue-hero text-white' : 'text-gray-700 hover:bg-blue-hero hover:text-white'}" %>
    
    <%= link_to "Mon Profil Pro", professional_profile_path, class: "block px-4 py-2 rounded-lg font-medium transition-colors #{current_page?(professional_profile_path) ? 'bg-blue-hero text-white' : 'text-gray-700 hover:bg-blue-hero hover:text-white'}" %>
    
    <%= link_to "Mes Services", professional_professional_services_path, class: "block px-4 py-2 rounded-lg font-medium transition-colors #{current_page?(professional_professional_services_path) ? 'bg-blue-hero text-white' : 'text-gray-700 hover:bg-blue-hero hover:text-white'}" %>
    
    <%= link_to "Disponibilités", professional_availability_slots_path, class: "block px-4 py-2 rounded-lg font-medium transition-colors #{current_page?(professional_availability_slots_path) ? 'bg-blue-hero text-white' : 'text-gray-700 hover:bg-blue-hero hover:text-white'}" %>
    
    <%= link_to "Calendrier", calendar_professional_availability_slots_path, class: "block px-4 py-2 rounded-lg font-medium transition-colors #{current_page?(calendar_professional_availability_slots_path) ? 'bg-blue-hero text-white' : 'text-gray-700 hover:bg-blue-hero hover:text-white'}" %>
    
    <%= link_to "Réservations", professional_bookings_path, class: "block px-4 py-2 rounded-lg font-medium transition-colors #{current_page?(professional_bookings_path) ? 'bg-blue-hero text-white' : 'text-gray-700 hover:bg-blue-hero hover:text-white'}" %>
    
    <%= link_to "Mes Factures", professional_invoices_path, class: "block px-4 py-2 rounded-lg font-medium transition-colors #{current_page?(professional_invoices_path) ? 'bg-blue-hero text-white' : 'text-gray-700 hover:bg-blue-hero hover:text-white'}" %>
    
    <%= link_to "Avis Reçus", professional_reviews_path, class: "block px-4 py-2 rounded-lg font-medium transition-colors #{current_page?(professional_reviews_path) ? 'bg-blue-hero text-white' : 'text-gray-700 hover:bg-blue-hero hover:text-white'}" %>
    
    <%= link_to "Documents", professional_verification_documents_path, class: "block px-4 py-2 rounded-lg font-medium text-gray-700 hover:bg-blue-hero hover:text-white transition-colors" %>
    
    <%= button_to destroy_user_session_path, method: :delete, class: "w-full text-left px-4 py-2 text-red-600 hover:bg-blue-hero hover:text-white rounded-lg font-medium transition-colors" do %>
      Déconnexion
    <% end %>
  </div>
</div>
