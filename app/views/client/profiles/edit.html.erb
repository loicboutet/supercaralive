<div class="container mx-auto px-6 py-8">
  <div>
    <div class="mb-8">
      <%= link_to client_profile_path, class: "text-blue-hero hover:underline inline-flex items-center mb-4" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Retour au profil
      <% end %>
      <h1 class="text-4xl font-bold text-gray-900 mb-2">Modifier mon profil</h1>
      <p class="text-gray-600">Mettez à jour vos informations personnelles</p>
    </div>

    <div class="bg-white rounded-super p-8 shadow-sm">
      <%= form_with url: client_profile_path, method: :patch, class: "space-y-6" do |f| %>
        
        <% if @profile&.errors&.any? %>
          <div class="bg-red-50 border-l-4 border-red-hero rounded-lg p-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-red-hero" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-bold text-red-800">Erreurs détectées :</h3>
                <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
                  <% @profile.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        <% end %>

        <!-- Anonymity Info -->
        <div class="bg-blue-50 border-l-4 border-blue-hero rounded-lg p-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-blue-hero" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-bold text-blue-800">Protection de votre anonymat</h3>
              <p class="text-sm text-blue-700 mt-1">
                Votre pseudonyme/initiales sera visible par les professionnels. Votre adresse complète ne sera révélée qu'après validation définitive d'une réservation.
              </p>
            </div>
          </div>
        </div>

        <div>
          <%= f.label :pseudonym, "Pseudonyme / Initiales", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.text_field :pseudonym, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-hero focus:border-transparent", placeholder: "Ex: J.D., Jean D., JDoe..." %>
          <p class="text-sm text-gray-500 mt-1">Visible par les professionnels pour vous identifier</p>
        </div>

        <div>
          <%= f.label :phone, "Téléphone", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.telephone_field :phone, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-hero focus:border-transparent", placeholder: "+33 6 12 34 56 78" %>
        </div>

        <div>
          <%= f.label :address, "Adresse", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.text_field :address, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-hero focus:border-transparent", placeholder: "123 Rue de Example" %>
        </div>

        <div class="grid grid-cols-2 gap-4">
          <div>
            <%= f.label :postal_code, "Code postal", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.text_field :postal_code, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-hero focus:border-transparent", placeholder: "75001" %>
          </div>
          <div>
            <%= f.label :city, "Ville", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.text_field :city, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-hero focus:border-transparent", placeholder: "Paris" %>
          </div>
        </div>

        <!-- Email Change Info -->
        <div class="bg-yellow-50 border-l-4 border-yellow-hero rounded-lg p-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-yellow-hero" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-bold text-yellow-800">Modification de l'email</h3>
              <p class="text-sm text-yellow-700 mt-1">
                Pour changer votre adresse email, rendez-vous dans <%= link_to "Paramètres du compte", edit_user_registration_path, class: "underline font-medium" %>.
              </p>
            </div>
          </div>
        </div>

        <div class="flex space-x-4 pt-4">
          <%= f.submit "Enregistrer les modifications", class: "flex-1 bg-red-hero hover:bg-red-dark text-white px-8 py-3 rounded-lg font-bold cursor-pointer" %>
          <%= link_to "Annuler", client_profile_path, class: "flex-1 bg-gray-200 hover:bg-gray-300 text-gray-700 px-8 py-3 rounded-lg font-bold text-center" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
