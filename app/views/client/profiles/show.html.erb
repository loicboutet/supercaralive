<div class="container mx-auto px-6 py-8">
  <div>
    <div class="space-y-6 mb-8">
      <div>
        <h1 class="text-4xl font-bold text-gray-900 mb-2">Mon Profil</h1>
        <p class="text-gray-600">Consultez et gérez vos informations personnelles</p>
      </div>
      <%= link_to edit_client_profile_path, class: "bg-red-hero hover:bg-red-dark text-white px-6 py-3 rounded-lg font-bold inline-flex items-center justify-center w-full sm:w-auto" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
        </svg>
        Modifier mon profil
      <% end %>
    </div>

    <div class="grid lg:grid-cols-3 gap-6">
      <!-- Main Profile Info -->
      <div class="lg:col-span-2 space-y-6">
        <!-- Personal Information -->
        <div class="bg-white rounded-super p-6 shadow-sm">
          <h2 class="text-2xl font-bold text-gray-900 mb-6">Informations personnelles</h2>
          
          <div class="space-y-4">
            <div class="flex items-start border-b border-gray-100 pb-4">
              <svg class="w-6 h-6 text-gray-400 mr-3 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
              </svg>
              <div class="flex-1">
                <p class="text-sm text-gray-600">Nom</p>
                <p class="text-lg font-bold text-gray-900">
                  <% if current_user&.first_name.present? || current_user&.last_name.present? %>
                    <%= [current_user&.first_name, current_user&.last_name].compact.join(' ') %>
                  <% else %>
                    Non renseigné
                  <% end %>
                </p>
              </div>
            </div>

            <div class="flex items-start border-b border-gray-100 pb-4">
              <svg class="w-6 h-6 text-gray-400 mr-3 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
              <div class="flex-1">
                <p class="text-sm text-gray-600">Email</p>
                <p class="text-lg font-bold text-gray-900"><%= current_user&.email %></p>
              </div>
            </div>

            <div class="flex items-start border-b border-gray-100 pb-4">
              <svg class="w-6 h-6 text-gray-400 mr-3 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
              </svg>
              <div class="flex-1">
                <p class="text-sm text-gray-600">Téléphone</p>
                <p class="text-lg font-bold text-gray-900"><%= current_user&.phone_number.present? ? current_user&.phone_number : "Non renseigné" %></p>
              </div>
            </div>

            <div class="flex items-start border-b border-gray-100 pb-4">
              <svg class="w-6 h-6 text-gray-400 mr-3 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
              <div class="flex-1">
                <p class="text-sm text-gray-600">Adresse</p>
                <p class="text-lg font-bold text-gray-900"><%= current_user&.address.present? ? current_user&.address : "Non renseignée" %></p>
              </div>
            </div>

            <% if false %>
            <div class="flex items-start">
              <svg class="w-6 h-6 text-gray-400 mr-3 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
              <div class="flex-1">
                <p class="text-sm text-gray-600">Adresse de facturation</p>
                <p class="text-lg font-bold text-gray-900"><%= @profile&.billing_address || '123 Rue de Example' %></p>
                <p class="text-sm text-gray-600"><%= @profile&.billing_postal_code || '75001' %> <%= @profile&.billing_city || 'Paris' %></p>
                <p class="text-xs text-gray-500 mt-1">Adresse d'inscription pour la facturation</p>
              </div>
            </div>
            <% end %>
          </div>
        </div>

        <!-- Privacy Info -->
        <div class="bg-blue-50 border-l-4 border-blue-hero rounded-lg p-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-blue-hero" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-bold text-blue-800">Confidentialité de vos coordonnées</h3>
              <p class="text-sm text-blue-700 mt-1">
                Vos coordonnées (email et téléphone) ne sont visibles que par les professionnels qui ont <strong>accepté</strong> une de vos réservations. Elles restent cachées pour les autres professionnels afin de protéger votre vie privée.
              </p>
            </div>
          </div>
        </div>

        <!-- Display Name Info -->
        <div class="bg-blue-50 border-l-4 border-blue-hero rounded-lg p-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-blue-hero" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-bold text-blue-800">Affichage de votre nom</h3>
              <p class="text-sm text-blue-700 mt-1">
                <% if current_user&.display_complete_name? %>
                  Les professionnels avec qui vous interagissez verront votre <strong>nom complet</strong> (<%= [current_user&.first_name, current_user&.last_name].compact.join(' ') %>).
                <% else %>
                  Les professionnels avec qui vous interagissez verront uniquement vos <strong>initiales</strong> (<%= current_user&.pseudonym %>) pour protéger votre anonymat.
                <% end %>
                Vous pouvez modifier ce paramètre dans <%= link_to "l'édition de votre profil", edit_client_profile_path, class: "underline font-medium" %>.
              </p>
            </div>
          </div>
        </div>

        <% if false %>
        <!-- Address Clarification -->
        <div class="bg-blue-50 border-l-4 border-blue-hero rounded-lg p-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-blue-hero" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-bold text-blue-800">À propos de vos adresses</h3>
              <p class="text-sm text-blue-700 mt-1">
                L'adresse de facturation ci-dessus est votre adresse d'inscription pour la facturation. Les lieux de service sont flexibles et définis individuellement ci-dessous. Les prestations doivent être effectuées dans un lieu privé résidentiel avec un espace approprié. 
                <%= link_to "En savoir plus", "#", class: "underline font-medium" %>
              </p>
            </div>
          </div>
        </div>
        <% end %>

        <!-- Notification Preferences -->
        <div class="bg-white rounded-super p-6 shadow-sm">
          <h2 class="text-2xl font-bold text-gray-900 mb-6">Préférences de notification</h2>
          
          <div class="space-y-4">
            <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg">
              <div class="flex items-start space-x-3">
                <div class="w-10 h-10 bg-<%= current_user&.client_booking_reminder? ? 'green' : 'gray' %>-100 rounded-lg flex items-center justify-center flex-shrink-0">
                  <svg class="w-5 h-5 text-<%= current_user&.client_booking_reminder? ? 'green' : 'gray' %>-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="font-bold text-gray-900">Rappels automatiques</h3>
                  <p class="text-sm text-gray-600 mt-1">Recevoir des notifications pour les rendez-vous à venir</p>
                </div>
              </div>
              <div class="flex items-center">
                <% if current_user&.client_booking_reminder? %>
                  <span class="px-4 py-2 bg-green-100 text-green-800 rounded-lg font-medium text-sm">Activé</span>
                <% else %>
                  <span class="px-4 py-2 bg-gray-200 text-gray-600 rounded-lg font-medium text-sm">Désactivé</span>
                <% end %>
              </div>
            </div>

            <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg">
              <div class="flex items-start space-x-3">
                <div class="w-10 h-10 bg-<%= current_user&.maintenance_reminders_enabled? ? 'blue' : 'gray' %>-100 rounded-lg flex items-center justify-center flex-shrink-0">
                  <svg class="w-5 h-5 text-<%= current_user&.maintenance_reminders_enabled? ? 'blue' : 'gray' %>-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="font-bold text-gray-900">Rappels d'entretien</h3>
                  <p class="text-sm text-gray-600 mt-1">Recevoir des emails de rappel pour les entretiens et contrôles techniques de vos véhicules</p>
                </div>
              </div>
              <div class="flex items-center">
                <% if current_user&.maintenance_reminders_enabled? %>
                  <span class="px-4 py-2 bg-blue-100 text-blue-800 rounded-lg font-medium text-sm">Activé</span>
                <% else %>
                  <span class="px-4 py-2 bg-gray-200 text-gray-600 rounded-lg font-medium text-sm">Désactivé</span>
                <% end %>
              </div>
            </div>
          </div>
        </div>

        <!-- Account Statistics -->
        <div class="bg-white rounded-super p-6 shadow-sm">
          <h2 class="text-2xl font-bold text-gray-900 mb-6">Statistiques du compte</h2>
          
          <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
            <div class="text-center p-4 bg-blue-50 rounded-lg">
              <p class="text-3xl font-bold text-blue-hero">12</p>
              <p class="text-sm text-gray-600 mt-1">Réservations</p>
            </div>
            <div class="text-center p-4 bg-green-50 rounded-lg">
              <p class="text-3xl font-bold text-green-600">8</p>
              <p class="text-sm text-gray-600 mt-1">Complétées</p>
            </div>
            <div class="text-center p-4 bg-yellow-50 rounded-lg">
              <p class="text-3xl font-bold text-yellow-hero">3</p>
              <p class="text-sm text-gray-600 mt-1">Véhicules</p>
            </div>
            <div class="text-center p-4 bg-red-50 rounded-lg">
              <p class="text-3xl font-bold text-red-hero">5</p>
              <p class="text-sm text-gray-600 mt-1">Avis laissés</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Sidebar -->
      <div class="space-y-6">
        <!-- Profile Picture -->
        <div class="bg-white rounded-super p-6 shadow-sm text-center">
          <div class="w-32 h-32 bg-red-hero rounded-full flex items-center justify-center mx-auto mb-4">
            <% initials = current_user&.pseudonym&.first || (current_user&.first_name&.first || current_user&.email&.first || 'J') %>
            <span class="text-white text-5xl font-bold"><%= initials %></span>
          </div>
          <p class="text-lg font-bold text-gray-900">
            <% if current_user&.first_name.present? || current_user&.last_name.present? %>
              <%= [current_user&.first_name, current_user&.last_name].compact.join(' ') %>
            <% else %>
              <%= current_user&.email %>
            <% end %>
          </p>
          <p class="text-sm text-gray-600">Membre depuis <%= current_user&.created_at&.strftime("%B %Y") || 'Janvier 2025' %></p>
        </div>

        <!-- Quick Actions -->
        <div class="bg-white rounded-super p-6 shadow-sm space-y-3">
          <h3 class="text-lg font-bold text-gray-900 mb-4">Actions rapides</h3>
          
          <%= link_to client_vehicles_path, class: "flex items-center space-x-3 p-3 rounded-lg hover:bg-soft transition" do %>
            <div class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center">
              <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4"></path>
              </svg>
            </div>
            <span class="text-gray-700 font-medium">Mes véhicules</span>
          <% end %>

          <%= link_to client_bookings_path, class: "flex items-center space-x-3 p-3 rounded-lg hover:bg-soft transition" do %>
            <div class="w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center">
              <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
            </div>
            <span class="text-gray-700 font-medium">Mes réservations</span>
          <% end %>

          <% if false %>
          <%= link_to client_wallet_path, class: "flex items-center space-x-3 p-3 rounded-lg hover:bg-soft transition" do %>
            <div class="w-10 h-10 bg-yellow-100 rounded-lg flex items-center justify-center">
              <svg class="w-5 h-5 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"></path>
              </svg>
            </div>
            <span class="text-gray-700 font-medium">Mon portefeuille</span>
          <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
