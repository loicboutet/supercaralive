<div class="container mx-auto px-6 py-8">
  <div class="max-w-2xl mx-auto">
    <div class="mb-8">
      <%= link_to client_vehicles_path, class: "text-blue-hero hover:underline inline-flex items-center mb-4" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Retour à mes véhicules
      <% end %>
      <h1 class="text-4xl font-bold text-gray-900 mb-2">Ajouter un véhicule</h1>
      <p class="text-gray-600">Renseignez les informations de votre véhicule</p>
    </div>

    <div class="bg-white rounded-super p-8 shadow-sm">
      <%= form_with url: client_vehicles_path, method: :post, class: "space-y-6" do |f| %>
        

        <div>
          <%= f.label :make, "Marque", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.text_field :make, class: "w-full px-4 py-3 border border-gray-300 rounded-friendly focus:outline-none focus:ring-2 focus:ring-red-hero focus:border-transparent", placeholder: "Ex: Peugeot, Renault, Citroën..." %>
        </div>

        <div>
          <%= f.label :model, "Modèle", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.text_field :model, class: "w-full px-4 py-3 border border-gray-300 rounded-friendly focus:outline-none focus:ring-2 focus:ring-red-hero focus:border-transparent", placeholder: "Ex: 208, Clio, C3..." %>
        </div>

        <div>
          <%= f.label :year, "Année", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.number_field :year, min: 1900, max: Date.current.year + 1, class: "w-full px-4 py-3 border border-gray-300 rounded-friendly focus:outline-none focus:ring-2 focus:ring-red-hero focus:border-transparent", placeholder: "Ex: 2020" %>
        </div>

        <div>
          <%= f.label :mileage, "Kilométrage", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <div class="relative">
            <%= f.number_field :mileage, min: 0, class: "w-full px-4 py-3 border border-gray-300 rounded-friendly focus:outline-none focus:ring-2 focus:ring-red-hero focus:border-transparent pr-12", placeholder: "Ex: 50000" %>
            <span class="absolute right-4 top-1/2 transform -translate-y-1/2 text-gray-500">km</span>
          </div>
          <p class="text-sm text-gray-500 mt-1">Le kilométrage actuel de votre véhicule</p>
        </div>

        <div>
          <%= f.label :vin, "Numéro VIN (optionnel)", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.text_field :vin, class: "w-full px-4 py-3 border border-gray-300 rounded-friendly focus:outline-none focus:ring-2 focus:ring-red-hero focus:border-transparent", placeholder: "Ex: WBA3B5C50EF123456", maxlength: 17 %>
          <p class="text-sm text-gray-500 mt-1">Le numéro d'identification du véhicule (17 caractères)</p>
        </div>

        <div class="flex space-x-4 pt-4">
          <%= f.submit "Ajouter le véhicule", class: "flex-1 bg-red-hero hover:bg-red-dark text-white px-8 py-3 rounded-friendly font-bold cursor-pointer" %>
          <%= link_to "Annuler", client_vehicles_path, class: "flex-1 bg-gray-200 hover:bg-gray-300 text-gray-700 px-8 py-3 rounded-friendly font-bold text-center" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
