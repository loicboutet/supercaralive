<div class="container mx-auto px-6 py-8">
  <div class="max-w-2xl mx-auto">
    <div class="mb-8">
      <%= link_to client_vehicles_path, class: "text-blue-hero hover:underline inline-flex items-center mb-4" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Retour à mes véhicules
      <% end %>
      <h1 class="text-4xl font-bold text-gray-900 mb-2">Modifier le véhicule</h1>
      <p class="text-gray-600">Mettez à jour les informations de votre véhicule</p>
    </div>

    <div class="bg-white rounded-super p-8 shadow-sm">
      <%= render 'form', url: client_vehicle_path(@vehicle.id), method: :patch, vehicle: @vehicle, submit_text: "Enregistrer les modifications" %>
    </div>
  </div>
</div>
