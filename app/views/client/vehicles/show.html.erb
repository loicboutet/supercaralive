<div class="container mx-auto px-6 py-8">
  <div class="mb-8">
    <%= link_to client_vehicles_path, class: "text-blue-hero hover:underline inline-flex items-center mb-4" do %>
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>
      Retour √† mes v√©hicules
    <% end %>
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-4xl font-bold text-gray-900 mb-2"><%= @vehicle.brand %> <%= @vehicle.model %></h1>
        <p class="text-gray-600">Ann√©e <%= @vehicle.year %></p>
      </div>
      <div class="flex space-x-3">
        <%= link_to edit_client_vehicle_path(@vehicle), class: "bg-blue-hero hover:bg-blue-dark text-white px-6 py-3 rounded-lg font-bold inline-flex items-center" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
          </svg>
          Modifier
        <% end %>
        <%= button_to client_vehicle_path(@vehicle), method: :delete, form: { data: { turbo: false, controller: "confirm", confirm_message_value: "√ätes-vous s√ªr de vouloir supprimer ce v√©hicule ?", action: "submit->confirm#confirm" } }, class: "bg-red-hero hover:bg-red-dark text-white px-6 py-3 rounded-lg font-bold inline-flex items-center" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
          </svg>
          Supprimer
        <% end %>
      </div>
    </div>
  </div>

  <!-- Main Content Grid -->
  <div class="grid md:grid-cols-3 gap-8">
    
    <!-- Left Column - Vehicle Info -->
    <div class="space-y-6">
      
      <!-- Vehicle Card -->
      <div class="bg-white rounded-super p-6 shadow-sm">
        <div class="text-center mb-6">
          <div class="w-24 h-24 bg-red-hero rounded-lg flex items-center justify-center mx-auto mb-4">
            <span class="text-white text-5xl">üöó</span>
          </div>
          <h2 class="text-2xl font-bold text-gray-900 mb-2"><%= @vehicle.brand %> <%= @vehicle.model %></h2>
          <span class="px-4 py-2 bg-gray-100 text-gray-800 rounded-lg text-sm font-medium inline-block">Ann√©e <%= @vehicle.year %></span>
        </div>

        <div class="border-t border-gray-200 pt-4 space-y-3">
          <div class="flex items-center space-x-3">
            <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
            <span class="text-gray-700"><strong>Kilom√©trage:</strong> <%= number_with_delimiter(@vehicle.mileage) %> km</span>
          </div>

          <% if @vehicle.vin_number.present? %>
            <div class="flex items-center space-x-3">
              <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 20l4-16m2 16l4-16M6 9h14M4 15h14"></path>
              </svg>
              <span class="text-gray-700"><strong>VIN:</strong> <%= @vehicle.vin_number %></span>
            </div>
          <% end %>

          <div class="flex items-center space-x-3">
            <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
            <span class="text-gray-700">Ajout√© le <%= @vehicle.created_at.strftime("%d/%m/%Y") %></span>
          </div>
        </div>
      </div>

      <!-- Maintenance Reminders Status -->
      <div class="bg-white rounded-super p-6 shadow-sm">
        <h3 class="text-lg font-bold text-gray-900 mb-4">Rappels d'entretien</h3>
        <div class="space-y-3">
          <div class="flex items-center justify-between">
            <span class="text-gray-600">Rappels activ√©s</span>
            <% if @vehicle.maintenance_reminders_enabled? %>
              <span class="px-3 py-1 bg-green-100 text-green-800 rounded-lg text-xs font-medium inline-flex items-center">
                <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                Activ√©s
              </span>
            <% else %>
              <span class="px-3 py-1 bg-gray-100 text-gray-800 rounded-lg text-xs font-medium">D√©sactiv√©s</span>
            <% end %>
          </div>
        </div>
      </div>

    </div>

    <!-- Right Column - Details -->
    <div class="md:col-span-2 space-y-6">
      
      <!-- Next Maintenance Date -->
      <% if @vehicle.next_maintenance_date.present? %>
        <div class="bg-white rounded-super p-6 shadow-sm">
          <h2 class="text-2xl font-bold text-gray-900 mb-4 flex items-center">
            <svg class="w-6 h-6 mr-2 text-red-hero" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
            Prochain entretien
          </h2>
          <p class="text-gray-700 text-lg"><%= @vehicle.next_maintenance_date.strftime("%d/%m/%Y") %></p>
        </div>
      <% end %>

      <!-- Next Technical Inspection Date -->
      <% if @vehicle.next_technical_inspection_date.present? %>
        <div class="bg-white rounded-super p-6 shadow-sm">
          <h2 class="text-2xl font-bold text-gray-900 mb-4 flex items-center">
            <svg class="w-6 h-6 mr-2 text-yellow-hero" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            Prochain contr√¥le technique
          </h2>
          <p class="text-gray-700 text-lg"><%= @vehicle.next_technical_inspection_date.strftime("%d/%m/%Y") %></p>
        </div>
      <% end %>

      <!-- Upcoming Services -->
      <% if @vehicle.upcoming_service.present? %>
        <div class="bg-white rounded-super p-6 shadow-sm">
          <h2 class="text-2xl font-bold text-gray-900 mb-4 flex items-center">
            <svg class="w-6 h-6 mr-2 text-blue-hero" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"></path>
            </svg>
            Services √† venir
          </h2>
          <p class="text-gray-700 whitespace-pre-wrap"><%= @vehicle.upcoming_service %></p>
        </div>
      <% end %>

      <!-- Empty State -->
      <% unless @vehicle.next_maintenance_date.present? || @vehicle.next_technical_inspection_date.present? || @vehicle.upcoming_service.present? %>
        <div class="bg-soft rounded-super p-12 text-center">
          <div class="w-20 h-20 bg-gray-200 rounded-lg flex items-center justify-center mx-auto mb-4">
            <span class="text-4xl">üìÖ</span>
          </div>
          <h3 class="text-2xl font-bold text-gray-900 mb-2">Aucune information d'entretien</h3>
          <p class="text-gray-600 mb-6">Ajoutez des informations sur les prochains entretiens pour mieux suivre votre v√©hicule</p>
          <%= link_to edit_client_vehicle_path(@vehicle), class: "bg-red-hero hover:bg-red-dark text-white px-8 py-3 rounded-lg font-bold inline-flex items-center" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
            </svg>
            Modifier le v√©hicule
          <% end %>
        </div>
      <% end %>

    </div>
  </div>
</div>


