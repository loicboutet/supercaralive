<%= form_with url: form_url, method: form_method, class: "space-y-6" do |f| %>
  
  <% if @booking&.errors&.any? %>
    <div class="bg-red-50 border-l-4 border-red-hero rounded-lg p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-hero" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-bold text-red-800">Erreurs détectées :</h3>
          <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
            <% @booking.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Two-column layout for select fields and text inputs -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    
    <% if show_professional_field %>
      <!-- Professional Selection -->
      <div>
        <%= f.label :professional_id, "Professionnel", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.select :professional_id, 
            options_for_select(@professionals&.map { |p| [p.company_name, p.id] }, @booking&.professional_id),
            { include_blank: "Sélectionnez un professionnel" },
            class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-hero focus:border-transparent" %>
        <p class="text-sm text-gray-500 mt-1">Le professionnel qui réalisera le service</p>
      </div>
    <% end %>

    <!-- Service Type -->
    <div>
      <%= f.label :service_type, "Type de service", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.select :service_type,
          options_for_select([
            ['Entretien annuel', 'annual_maintenance'],
            ['Vidange', 'oil_change'],
            ['Révision complète', 'full_service'],
            ['Changement de pneus', 'tire_change'],
            ['Lavage extérieur', 'exterior_wash'],
            ['Lavage intérieur', 'interior_wash'],
            ['Lavage complet', 'full_wash'],
            ['Diagnostic moteur', 'engine_diagnostic'],
            ['Réparation freins', 'brake_repair'],
            ['Autre', 'other']
          ], @booking&.service_type),
          show_professional_field ? { include_blank: "Sélectionnez un service" } : {},
          class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-hero focus:border-transparent" %>
    </div>

    <!-- Vehicle Selection -->
    <div>
      <%= f.label :vehicle_id, "Véhicule", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.select :vehicle_id,
          options_for_select(@vehicles&.map { |v| ["#{v.make} #{v.model} (#{v.year})", v.id] }, @booking&.vehicle_id),
          show_professional_field ? { include_blank: "Sélectionnez un véhicule" } : {},
          class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-hero focus:border-transparent" %>
      <% if show_professional_field && @vehicles&.empty? %>
        <p class="text-sm text-yellow-600 mt-1">
          Vous devez d'abord <%= link_to "ajouter un véhicule", new_client_vehicle_path, class: "underline" %>
        </p>
      <% end %>
    </div>

    <!-- Current Mileage -->
    <div>
      <%= f.label :current_mileage, "Kilométrage actuel", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <div class="relative">
        <%= f.number_field :current_mileage, min: 0, value: @booking&.current_mileage, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-hero focus:border-transparent pr-12", placeholder: "Ex: 52000" %>
        <span class="absolute right-4 top-1/2 transform -translate-y-1/2 text-gray-500">km</span>
      </div>
    </div>

    <!-- Preferred Date/Time -->
    <div>
      <%= f.label :scheduled_at, "Date et heure souhaitées", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.datetime_local_field :scheduled_at, value: @booking&.scheduled_at&.strftime("%Y-%m-%dT%H:%M"), class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-hero focus:border-transparent" %>
      <p class="text-sm text-gray-500 mt-1"><%= show_professional_field ? "Le professionnel devra confirmer ce créneau" : "Le professionnel devra confirmer ce nouveau créneau" %></p>
    </div>
  </div>

  <!-- Description - Full Width -->
  <div>
    <%= f.label :description, "Description du besoin", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= f.text_area :description, rows: 6, value: @booking&.description, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-hero focus:border-transparent", placeholder: "Décrivez précisément votre besoin, les symptômes constatés, ou toute information utile pour le professionnel..." %>
    <% if show_professional_field %>
      <p class="text-sm text-gray-500 mt-1">Plus votre description est précise, mieux le professionnel pourra vous répondre</p>
    <% end %>
  </div>

  <!-- Info/Warning Banner -->
  <% if show_professional_field %>
    <div class="bg-blue-50 border-l-4 border-blue-hero rounded-lg p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-blue-hero" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-bold text-blue-800">Pré-réservation</h3>
          <p class="text-sm text-blue-700 mt-1">
            Cette demande sera envoyée au professionnel qui pourra la valider ou la refuser. Vous recevrez une notification de sa décision.
          </p>
        </div>
      </div>
    </div>
  <% else %>
    <div class="bg-yellow-50 border-l-4 border-yellow-hero rounded-lg p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-yellow-hero" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-bold text-yellow-800">Attention</h3>
          <p class="text-sm text-yellow-700 mt-1">
            Toute modification de la réservation nécessitera une nouvelle validation du professionnel.
          </p>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Form buttons aligned to the left -->
  <div class="flex flex-col sm:flex-row gap-4 pt-4">
    <button type="submit" class="bg-red-hero hover:bg-red-dark text-white px-8 py-3 rounded-lg font-bold cursor-pointer w-auto inline-flex items-center justify-center">
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
      </svg>
      <%= submit_text %>
    </button>
    <%= link_to cancel_path, class: "bg-gray-200 hover:bg-gray-300 text-gray-700 px-8 py-3 rounded-lg font-bold text-center w-auto inline-flex items-center justify-center" do %>
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
      </svg>
      <%= cancel_text %>
    <% end %>
  </div>
<% end %>
