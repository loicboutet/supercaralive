<div class="container mx-auto px-6 py-8">
  <div class="max-w-3xl mx-auto">
    <div class="mb-8">
      <%= link_to client_booking_path(@booking), class: "text-blue-hero hover:underline inline-flex items-center mb-4" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Retour à la réservation
      <% end %>
      <h1 class="text-4xl font-bold text-gray-900 mb-2">Modifier la réservation</h1>
      <p class="text-gray-600">Mettez à jour les informations de votre réservation</p>
    </div>

    <div class="bg-white rounded-super p-8 shadow-sm">
      <%= form_with url: client_booking_path(@booking.id), method: :patch, class: "space-y-6" do |f| %>
        
        <% if @booking&.errors&.any? %>
          <div class="bg-red-50 border-l-4 border-red-hero rounded-lg p-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-red-hero" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-bold text-red-800">Erreurs détectées :</h3>
                <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
                  <% @booking.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        <% end %>

        <!-- Service Type -->
        <div>
          <%= f.label :service_type, "Type de service", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.select :service_type,
              options_for_select([
                ['Entretien annuel', 'annual_maintenance'],
                ['Vidange', 'oil_change'],
                ['Révision complète', 'full_service'],
                ['Changement de pneus', 'tire_change'],
                ['Lavage extérieur', 'exterior_wash'],
                ['Lavage intérieur', 'interior_wash'],
                ['Lavage complet', 'full_wash'],
                ['Diagnostic moteur', 'engine_diagnostic'],
                ['Réparation freins', 'brake_repair'],
                ['Autre', 'other']
              ], @booking&.service_type),
              {},
              class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-hero focus:border-transparent" %>
        </div>

        <!-- Vehicle Selection -->
        <div>
          <%= f.label :vehicle_id, "Véhicule", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.select :vehicle_id,
              options_for_select(@vehicles&.map { |v| ["#{v.make} #{v.model} (#{v.year})", v.id] }, @booking&.vehicle_id),
              {},
              class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-hero focus:border-transparent" %>
        </div>

        <!-- Current Mileage -->
        <div>
          <%= f.label :current_mileage, "Kilométrage actuel", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <div class="relative">
            <%= f.number_field :current_mileage, min: 0, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-hero focus:border-transparent pr-12", placeholder: "Ex: 52000" %>
            <span class="absolute right-4 top-1/2 transform -translate-y-1/2 text-gray-500">km</span>
          </div>
        </div>

        <!-- Preferred Date/Time -->
        <div>
          <%= f.label :scheduled_at, "Date et heure souhaitées", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.datetime_local_field :scheduled_at, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-hero focus:border-transparent" %>
          <p class="text-sm text-gray-500 mt-1">Le professionnel devra confirmer ce nouveau créneau</p>
        </div>

        <!-- Description -->
        <div>
          <%= f.label :description, "Description du besoin", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.text_area :description, rows: 6, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-hero focus:border-transparent", placeholder: "Décrivez précisément votre besoin..." %>
        </div>

        <!-- Warning Banner -->
        <div class="bg-yellow-50 border-l-4 border-yellow-hero rounded-lg p-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-yellow-hero" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-bold text-yellow-800">Attention</h3>
              <p class="text-sm text-yellow-700 mt-1">
                Toute modification de la réservation nécessitera une nouvelle validation du professionnel.
              </p>
            </div>
          </div>
        </div>

        <div class="flex space-x-4 pt-4">
          <%= f.submit "Enregistrer les modifications", class: "flex-1 bg-red-hero hover:bg-red-dark text-white px-8 py-3 rounded-lg font-bold cursor-pointer" %>
          <%= link_to "Annuler", client_booking_path(@booking), class: "flex-1 bg-gray-200 hover:bg-gray-300 text-gray-700 px-8 py-3 rounded-lg font-bold text-center" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
