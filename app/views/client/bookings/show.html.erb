<div class="container mx-auto px-6 py-8">
  <div>
    <div class="mb-8">
      <%= link_to client_bookings_path, class: "text-blue-hero hover:underline inline-flex items-center mb-4" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Retour aux r√©servations
      <% end %>
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <div>
          <h1 class="text-3xl md:text-4xl font-bold text-gray-900 mb-2">D√©tails de la r√©servation</h1>
          <p class="text-gray-600">R√©servation #<%= @booking&.id || '12345' %></p>
        </div>
        <% 
          status_colors = {
            'pending' => 'yellow',
            'accepted' => 'blue',
            'refused' => 'red',
            'cancelled' => 'gray',
            'completed' => 'green'
          }
          status_labels = {
            'pending' => 'En attente de validation',
            'accepted' => 'Valid√©e',
            'refused' => 'Refus√©e',
            'cancelled' => 'Annul√©e',
            'completed' => 'Termin√©e'
          }
          status_config = {
            'pending' => { badge_bg: 'bg-yellow-100', badge_text: 'text-yellow-800' },
            'accepted' => { badge_bg: 'bg-blue-100', badge_text: 'text-blue-800' },
            'refused' => { badge_bg: 'bg-red-100', badge_text: 'text-red-800' },
            'cancelled' => { badge_bg: 'bg-gray-100', badge_text: 'text-gray-800' },
            'completed' => { badge_bg: 'bg-green-100', badge_text: 'text-green-800' }
          }
          status_config_default = { badge_bg: 'bg-gray-100', badge_text: 'text-gray-800' }
          status_style = status_config[@booking&.status] || status_config_default
          status_label = status_labels[@booking&.status] || @booking&.status
        %>
        <span class="px-4 py-2 rounded-lg text-sm font-bold <%= status_style[:badge_bg] %> <%= status_style[:badge_text] %> self-start sm:self-auto">
          <%= status_label %>
        </span>
      </div>
    </div>

    <div class="grid lg:grid-cols-3 gap-6">
      <!-- Main Content -->
      <div class="lg:col-span-2 space-y-6">
        <!-- Service Details -->
        <div class="bg-white rounded-super p-6 shadow-sm">
          <h2 class="text-2xl font-bold text-gray-900 mb-6">Informations du service</h2>
          
          <div class="space-y-4">
            <div class="flex items-start border-b border-gray-100 pb-4">
              <svg class="w-6 h-6 text-gray-400 mr-3 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
              <div class="flex-1">
                <p class="text-sm text-gray-600">Type de service</p>
                <p class="text-lg font-bold text-gray-900"><%= @booking&.service_type_name || 'Entretien annuel' %></p>
              </div>
            </div>

            <div class="flex items-start border-b border-gray-100 pb-4">
              <svg class="w-6 h-6 text-gray-400 mr-3 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
              <div class="flex-1">
                <p class="text-sm text-gray-600">Date et heure</p>
                <p class="text-lg font-bold text-gray-900"><%= @booking&.scheduled_at&.strftime("%d/%m/%Y √† %H:%M") || '√Ä d√©finir' %></p>
              </div>
            </div>

            <div class="flex items-start border-b border-gray-100 pb-4">
              <svg class="w-6 h-6 text-gray-400 mr-3 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <div class="flex-1">
                <p class="text-sm text-gray-600">V√©hicule</p>
                <p class="text-lg font-bold text-gray-900"><%= @booking&.vehicle_model || 'Peugeot 208' %></p>
                <p class="text-sm text-gray-500">Kilom√©trage: <%= number_with_delimiter(@booking&.current_mileage || 50000) %> km</p>
              </div>
            </div>

            <% if @booking&.description.present? %>
              <div class="flex items-start">
                <svg class="w-6 h-6 text-gray-400 mr-3 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
                <div class="flex-1">
                  <p class="text-sm text-gray-600 mb-2">Description</p>
                  <div class="bg-soft p-4 rounded-lg">
                    <p class="text-gray-700"><%= @booking.description %></p>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Messages -->
        <% if @booking.chat.present? %>
          <style>
            /* CSS inline pour le chat c√¥t√© client */
            #messages_container [data-message-from="client"] {
              flex-direction: row-reverse;
              justify-content: flex-start;
              margin-left: auto;
            }
            #messages_container [data-message-from="client"] .message-avatar-left {
              display: none;
            }
            #messages_container [data-message-from="client"] .message-avatar-right {
              display: flex !important;
              order: 1;
            }
            #messages_container [data-message-from="client"] .flex-1 {
              max-width: 20rem;
              order: 2;
            }
            #messages_container [data-message-from="client"] .bg-soft {
              background-color: #E63946;
              color: white;
              text-align: right;
            }
            #messages_container [data-message-from="client"] .text-gray-900,
            #messages_container [data-message-from="client"] .text-gray-700 {
              color: white;
            }
            #messages_container [data-message-from="client"] .text-gray-500 {
              color: rgba(255, 255, 255, 0.75);
            }
            #messages_container [data-message-from="client"] .message-avatar-right {
              background-color: #E63946;
            }
            #messages_container [data-message-from="client"] .message-avatar-right .text-gray-900 {
              color: white;
            }
            /* Style pour les messages du professionnel (plus lisibles) */
            #messages_container [data-message-from="professional"] .bg-soft {
              background-color: #E5E7EB;
              border: 1px solid #D1D5DB;
            }
            #messages_container [data-message-from="professional"] .text-gray-900 {
              color: #111827;
              font-weight: 600;
            }
            #messages_container [data-message-from="professional"] .text-gray-700 {
              color: #374151;
            }
            #messages_container [data-message-from="professional"] .text-gray-500 {
              color: #6B7280;
            }
          </style>
          <div class="bg-white rounded-super p-6 shadow-sm">
            <div class="flex items-center justify-between mb-6">
              <h2 class="text-2xl font-bold text-gray-900">Messages</h2>
              <span class="text-sm text-gray-500">Communication avec le professionnel</span>
            </div>

            <!-- Conteneur des messages avec scroll automatique -->
            <div 
              class="mb-6 max-h-96 overflow-y-auto"
              id="messages_container" 
              data-controller="chat-scroll"
              data-chat-scroll-chat-id-value="<%= @chat.id %>"
              style="scroll-behavior: smooth;"
            >
              <!-- Cible pour les nouveaux messages -->
              <div id="messages">
                <%= render "chat_messages/messages_batch", messages: @messages %>
              </div>
            </div>

            <!-- Formulaire de message -->
            <div id="message_form">
              <%= render "chat_messages/message_form", chat: @chat, message: @message, booking: @booking, context: :client %>
            </div>

            <!-- Abonnement Turbo Stream pour ce chat -->
            <%= turbo_stream_from "chat_#{@chat.id}" %>
          </div>
        <% end %>
      </div>

      <!-- Sidebar -->
      <div class="space-y-6">
        <!-- Professional Info -->
        <div class="bg-white rounded-super p-6 shadow-sm">
          <h3 class="text-lg font-bold text-gray-900 mb-4">Professionnel</h3>
          <div class="flex items-center space-x-3 mb-4">
            <div class="w-12 h-12 bg-blue-hero rounded-lg flex items-center justify-center">
              <span class="text-white text-xl">üîß</span>
            </div>
            <div>
              <p class="font-bold text-gray-900"><%= @booking&.professional_name || 'AutoPro Garage' %></p>
              <div class="flex items-center text-sm text-yellow-500">
                ‚òÖ‚òÖ‚òÖ‚òÖ‚òÖ <span class="text-gray-600 ml-1">(4.8)</span>
              </div>
            </div>
          </div>
          <%= link_to client_professional_path(@booking&.professional_id || 1), class: "w-full md:w-56 mx-auto bg-blue-hero hover:bg-blue-dark text-white px-4 py-3 rounded-lg font-medium flex items-center justify-center" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
            Voir le profil
          <% end %>
        </div>

        <!-- Pricing -->
        <div class="bg-white rounded-super p-6 shadow-sm">
          <h3 class="text-lg font-bold text-gray-900 mb-4">Tarification</h3>
          <% if @booking&.estimated_price.present? %>
            <div class="space-y-2 mb-4">
              <div class="flex justify-between text-gray-600">
                <span>Service</span>
                <span><%= number_to_currency(@booking.estimated_price, unit: "‚Ç¨", separator: ",", delimiter: " ", format: "%n %u") %></span>
              </div>
              <p class="text-xs text-gray-500 mt-2">Prix estim√©</p>
            </div>
            <% if @booking.status == 'accepted' %>
              <%= link_to client_payment_path(@booking), class: "w-full md:w-72 mx-auto bg-red-hero hover:bg-red-dark text-white px-4 py-3 rounded-lg font-bold flex items-center justify-center" do %>
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"></path>
                </svg>
                Proc√©der au paiement
              <% end %>
            <% end %>
          <% else %>
            <p class="text-gray-500 text-sm">Le prix sera d√©fini par le professionnel apr√®s validation</p>
          <% end %>
        </div>

        <!-- Actions -->
        <% if @booking&.pending? || @booking&.accepted? %>
          <div class="bg-white rounded-super p-6 shadow-sm space-y-3">
            <%= link_to edit_client_booking_path(@booking), class: "block bg-yellow-hero hover:bg-opacity-90 text-gray-900 px-6 py-3 rounded-lg font-bold text-center" do %>
              Modifier la r√©servation
            <% end %>
            <% if @booking&.pending? %>
              <%= button_to cancel_client_booking_path(@booking), method: :patch, data: { turbo: false, confirm: "√ätes-vous s√ªr de vouloir annuler cette r√©servation ?" }, class: "bg-gray-200 hover:bg-gray-300 text-gray-700 px-6 py-3 rounded-lg font-bold w-full" do %>
                Annuler la r√©servation
              <% end %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
