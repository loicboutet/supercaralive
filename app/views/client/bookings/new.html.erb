<div class="container mx-auto px-6 py-8">
  <div class="max-w-3xl mx-auto">
    <div class="mb-8">
      <%= link_to client_bookings_path, class: "text-blue-hero hover:underline inline-flex items-center mb-4" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Retour aux réservations
      <% end %>
      <h1 class="text-4xl font-bold text-gray-900 mb-2">Nouvelle réservation</h1>
      <p class="text-gray-600">Créez une pré-réservation auprès d'un professionnel</p>
    </div>

    <div class="bg-white rounded-super p-8 shadow-sm">
      <%= form_with url: client_bookings_path, method: :post, class: "space-y-6" do |f| %>
        
        <% if @booking&.errors&.any? %>
          <div class="bg-red-50 border-l-4 border-red-hero rounded-friendly p-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-red-hero" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-bold text-red-800">Erreurs détectées :</h3>
                <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
                  <% @booking.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        <% end %>

        <!-- Professional Selection -->
        <div>
          <%= f.label :professional_id, "Professionnel", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.select :professional_id, 
              options_for_select(@professionals&.map { |p| [p.company_name, p.id] }, @booking&.professional_id),
              { include_blank: "Sélectionnez un professionnel" },
              class: "w-full px-4 py-3 border border-gray-300 rounded-friendly focus:outline-none focus:ring-2 focus:ring-red-hero focus:border-transparent" %>
          <p class="text-sm text-gray-500 mt-1">Le professionnel qui réalisera le service</p>
        </div>

        <!-- Service Type -->
        <div>
          <%= f.label :service_type, "Type de service", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.select :service_type,
              options_for_select([
                ['Entretien annuel', 'annual_maintenance'],
                ['Vidange', 'oil_change'],
                ['Révision complète', 'full_service'],
                ['Changement de pneus', 'tire_change'],
                ['Lavage extérieur', 'exterior_wash'],
                ['Lavage intérieur', 'interior_wash'],
                ['Lavage complet', 'full_wash'],
                ['Diagnostic moteur', 'engine_diagnostic'],
                ['Réparation freins', 'brake_repair'],
                ['Autre', 'other']
              ], @booking&.service_type),
              { include_blank: "Sélectionnez un service" },
              class: "w-full px-4 py-3 border border-gray-300 rounded-friendly focus:outline-none focus:ring-2 focus:ring-red-hero focus:border-transparent" %>
        </div>

        <!-- Vehicle Selection -->
        <div>
          <%= f.label :vehicle_id, "Véhicule", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.select :vehicle_id,
              options_for_select(@vehicles&.map { |v| ["#{v.make} #{v.model} (#{v.year})", v.id] }, @booking&.vehicle_id),
              { include_blank: "Sélectionnez un véhicule" },
              class: "w-full px-4 py-3 border border-gray-300 rounded-friendly focus:outline-none focus:ring-2 focus:ring-red-hero focus:border-transparent" %>
          <% if @vehicles&.empty? %>
            <p class="text-sm text-yellow-600 mt-1">
              Vous devez d'abord <%= link_to "ajouter un véhicule", new_client_vehicle_path, class: "underline" %>
            </p>
          <% end %>
        </div>

        <!-- Current Mileage -->
        <div>
          <%= f.label :current_mileage, "Kilométrage actuel", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <div class="relative">
            <%= f.number_field :current_mileage, min: 0, class: "w-full px-4 py-3 border border-gray-300 rounded-friendly focus:outline-none focus:ring-2 focus:ring-red-hero focus:border-transparent pr-12", placeholder: "Ex: 52000" %>
            <span class="absolute right-4 top-1/2 transform -translate-y-1/2 text-gray-500">km</span>
          </div>
        </div>

        <!-- Preferred Date/Time -->
        <div>
          <%= f.label :scheduled_at, "Date et heure souhaitées", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.datetime_local_field :scheduled_at, class: "w-full px-4 py-3 border border-gray-300 rounded-friendly focus:outline-none focus:ring-2 focus:ring-red-hero focus:border-transparent" %>
          <p class="text-sm text-gray-500 mt-1">Le professionnel devra confirmer ce créneau</p>
        </div>

        <!-- Description -->
        <div>
          <%= f.label :description, "Description du besoin", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.text_area :description, rows: 6, class: "w-full px-4 py-3 border border-gray-300 rounded-friendly focus:outline-none focus:ring-2 focus:ring-red-hero focus:border-transparent", placeholder: "Décrivez précisément votre besoin, les symptômes constatés, ou toute information utile pour le professionnel..." %>
          <p class="text-sm text-gray-500 mt-1">Plus votre description est précise, mieux le professionnel pourra vous répondre</p>
        </div>

        <!-- Info Banner -->
        <div class="bg-blue-50 border-l-4 border-blue-hero rounded-friendly p-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-blue-hero" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-bold text-blue-800">Pré-réservation</h3>
              <p class="text-sm text-blue-700 mt-1">
                Cette demande sera envoyée au professionnel qui pourra la valider ou la refuser. Vous recevrez une notification de sa décision.
              </p>
            </div>
          </div>
        </div>

        <div class="flex space-x-4 pt-4">
          <%= f.submit "Envoyer la demande", class: "flex-1 bg-red-hero hover:bg-red-dark text-white px-8 py-3 rounded-friendly font-bold cursor-pointer" %>
          <%= link_to "Annuler", client_bookings_path, class: "flex-1 bg-gray-200 hover:bg-gray-300 text-gray-700 px-8 py-3 rounded-friendly font-bold text-center" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
