<div class="container mx-auto px-6 py-8">
  <div class="max-w-6xl mx-auto">
    <div class="mb-8">
      <h1 class="text-4xl font-bold text-gray-900 mb-2">Messages</h1>
      <p class="text-gray-600">Communication avec les professionnels</p>
    </div>

    <div class="grid lg:grid-cols-3 gap-6">
      <!-- Conversations List -->
      <div class="lg:col-span-1 bg-white rounded-super shadow-sm overflow-hidden">
        <div class="p-4 border-b border-gray-200">
          <h2 class="text-lg font-bold text-gray-900">Conversations</h2>
        </div>
        
        <div class="divide-y divide-gray-200 max-h-[600px] overflow-y-auto">
          <% 
            conversations = [
              { id: 1, professional: 'AutoPro Garage', last_message: 'D\'accord, √† demain !', time: '10:30', unread: 0, active: true },
              { id: 2, professional: 'M√©ca Express', last_message: 'Je confirme le cr√©neau', time: 'Hier', unread: 2, active: false },
              { id: 3, professional: 'Clean Car Pro', last_message: 'Merci pour votre avis', time: '15/10', unread: 0, active: false },
              { id: 4, professional: 'Garage Martin', last_message: 'Rendez-vous confirm√©', time: '12/10', unread: 0, active: false },
            ]
          %>
          
          <% conversations.each do |conv| %>
            <a href="#" class="block p-4 hover:bg-soft transition <%= conv[:active] ? 'bg-soft' : '' %>">
              <div class="flex items-start space-x-3">
                <div class="w-12 h-12 bg-blue-hero rounded-full flex items-center justify-center flex-shrink-0">
                  <span class="text-white font-bold"><%= conv[:professional][0] %></span>
                </div>
                <div class="flex-1 min-w-0">
                  <div class="flex items-center justify-between mb-1">
                    <p class="text-sm font-bold text-gray-900 truncate"><%= conv[:professional] %></p>
                    <p class="text-xs text-gray-500"><%= conv[:time] %></p>
                  </div>
                  <div class="flex items-center justify-between">
                    <p class="text-sm text-gray-600 truncate"><%= conv[:last_message] %></p>
                    <% if conv[:unread] > 0 %>
                      <span class="ml-2 bg-red-hero text-white text-xs font-bold px-2 py-1 rounded-full"><%= conv[:unread] %></span>
                    <% end %>
                  </div>
                </div>
              </div>
            </a>
          <% end %>
        </div>
      </div>

      <!-- Active Conversation -->
      <div class="lg:col-span-2 bg-white rounded-super shadow-sm overflow-hidden flex flex-col" style="height: 700px;">
        <!-- Conversation Header -->
        <div class="p-4 border-b border-gray-200">
          <div class="flex items-center justify-between">
            <div class="flex items-center space-x-3">
              <div class="w-12 h-12 bg-blue-hero rounded-full flex items-center justify-center">
                <span class="text-white font-bold text-lg">A</span>
              </div>
              <div>
                <h2 class="text-lg font-bold text-gray-900">AutoPro Garage</h2>
                <p class="text-sm text-gray-600">R√©servation #1234 - Entretien annuel</p>
              </div>
            </div>
            <%= link_to client_booking_path(1), class: "text-blue-hero hover:underline text-sm font-medium" do %>
              Voir la r√©servation
            <% end %>
          </div>
        </div>

        <!-- Messages Area -->
        <div class="flex-1 overflow-y-auto p-6 space-y-4">
          <!-- Professional Message -->
          <div class="flex items-start space-x-3">
            <div class="w-10 h-10 bg-blue-hero rounded-full flex items-center justify-center flex-shrink-0">
              <span class="text-white font-bold">A</span>
            </div>
            <div class="flex-1">
              <div class="bg-soft rounded-friendly p-4 max-w-md">
                <p class="text-sm text-gray-900">Bonjour, j'ai bien re√ßu votre demande de r√©servation. Je peux confirmer le cr√©neau du 25/10 √† 14h00.</p>
              </div>
              <p class="text-xs text-gray-500 mt-1">Aujourd'hui √† 09:15</p>
            </div>
          </div>

          <!-- Client Message -->
          <div class="flex items-start space-x-3 justify-end">
            <div class="flex-1 flex flex-col items-end">
              <div class="bg-red-hero bg-opacity-10 rounded-friendly p-4 max-w-md">
                <p class="text-sm text-gray-900">Parfait ! Pourriez-vous me confirmer le tarif estim√© ?</p>
              </div>
              <p class="text-xs text-gray-500 mt-1">Aujourd'hui √† 09:20</p>
            </div>
            <div class="w-10 h-10 bg-red-hero rounded-full flex items-center justify-center flex-shrink-0">
              <span class="text-white font-bold">V</span>
            </div>
          </div>

          <!-- Professional Message -->
          <div class="flex items-start space-x-3">
            <div class="w-10 h-10 bg-blue-hero rounded-full flex items-center justify-center flex-shrink-0">
              <span class="text-white font-bold">A</span>
            </div>
            <div class="flex-1">
              <div class="bg-soft rounded-friendly p-4 max-w-md">
                <p class="text-sm text-gray-900">Pour un entretien complet sur Peugeot 208, le tarif est de 120‚Ç¨ TTC, frais de d√©placement inclus.</p>
              </div>
              <p class="text-xs text-gray-500 mt-1">Aujourd'hui √† 09:45</p>
            </div>
          </div>

          <!-- Client Message -->
          <div class="flex items-start space-x-3 justify-end">
            <div class="flex-1 flex flex-col items-end">
              <div class="bg-red-hero bg-opacity-10 rounded-friendly p-4 max-w-md">
                <p class="text-sm text-gray-900">D'accord, √† demain !</p>
              </div>
              <p class="text-xs text-gray-500 mt-1">Aujourd'hui √† 10:30</p>
            </div>
            <div class="w-10 h-10 bg-red-hero rounded-full flex items-center justify-center flex-shrink-0">
              <span class="text-white font-bold">V</span>
            </div>
          </div>
        </div>

        <!-- Message Input -->
        <div class="p-4 border-t border-gray-200">
          <%= form_with url: client_messages_path, class: "flex space-x-3" do |f| %>
            <%= f.text_field :content, class: "flex-1 px-4 py-3 border border-gray-300 rounded-friendly focus:outline-none focus:ring-2 focus:ring-red-hero focus:border-transparent", placeholder: "√âcrivez votre message..." %>
            <%= f.submit "Envoyer", class: "bg-red-hero hover:bg-red-dark text-white px-6 py-3 rounded-friendly font-bold cursor-pointer" %>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Empty State (hidden when there are conversations) -->
    <div class="hidden bg-soft rounded-super p-12 text-center">
      <div class="w-20 h-20 bg-gray-200 rounded-friendly flex items-center justify-center mx-auto mb-4">
        <span class="text-4xl">üí¨</span>
      </div>
      <h3 class="text-2xl font-bold text-gray-900 mb-2">Aucune conversation</h3>
      <p class="text-gray-600 mb-6">Vous n'avez pas encore de messages avec les professionnels</p>
      <%= link_to client_professionals_path, class: "bg-red-hero hover:bg-red-dark text-white px-8 py-3 rounded-friendly font-bold inline-flex items-center" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
        </svg>
        Trouver un professionnel
      <% end %>
    </div>
  </div>
</div>
