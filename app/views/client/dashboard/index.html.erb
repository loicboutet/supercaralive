            </div>
          <% end %>
        </div>

      </div>

      <!-- Right Column - Sidebar -->
      <div class="space-y-6">
        
        <!-- My Vehicles -->
        <div class="bg-white rounded-super p-6 shadow-sm">
          <div class="flex items-center justify-between mb-4">
            <h2 class="text-xl font-bold text-gray-900">Mes v√©hicules</h2>
            <%= link_to client_vehicles_path, class: "text-blue-hero font-medium hover:underline text-sm" do %>
              G√©rer
            <% end %>
          </div>
          <% if @vehicles.any? %>
            <div class="space-y-3">
              <% @vehicles.each do |vehicle| %>
