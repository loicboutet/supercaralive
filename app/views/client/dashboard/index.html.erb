                      </div>
                    </div>
                    <span class="<%= booking_status[:bg] %> <%= booking_status[:text] %> px-3 py-1 rounded-lg text-xs font-medium self-start">
                      <%= booking_status[:label] %>
                    </span>
                  </div>
                  <div class="flex flex-wrap items-center text-sm text-gray-600 gap-4">
                    <span>üìÖ <%= formatted_date %></span>
                    <% if booking.vehicle.present? %>
