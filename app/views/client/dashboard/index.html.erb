                    <% end %>
                  </div>
                  <div class="mt-3 flex flex-col sm:flex-row sm:items-center sm:justify-between gap-2">
                    <span class="text-lg font-bold text-red-hero">‚Ç¨<%= price_display %></span>
                    <%= link_to client_booking_path(booking), class: "text-blue-hero font-medium hover:underline text-sm" do %>
