            <% end %>
            <%= link_to client_vehicles_path, class: "bg-blue-hero hover:bg-blue-dark text-white px-6 md:px-8 py-4 rounded-lg font-bold text-base md:text-lg text-center transition flex items-center justify-center space-x-3" do %>
