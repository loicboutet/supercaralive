<div class="bg-soft min-h-screen">
  <div class="container mx-auto px-6 py-8">
    
    <!-- Page Header -->
    <div class="mb-8">
      <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-2">
        Trouver un <span class="text-red-hero">professionnel</span>
      </h1>
      <p class="text-xl text-gray-600">
        Recherchez parmi nos professionnels certifi√©s pr√®s de chez vous
      </p>
    </div>

    <!-- Search and Filters -->
    <%= form_with url: client_professionals_path, method: :get, local: true, data: { turbo: false }, class: "bg-white rounded-super p-6 shadow-sm mb-8" do |f| %>
      <div class="grid gap-4 items-end" style="grid-template-columns: 1fr; grid-template-rows: auto auto auto auto;">
        <!-- Service Type Filter -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Type de service</label>
          <%= f.select :service_category, 
                options_for_select([
                  ["Tous les services", "all"],
                  ["üîß M√©canique", "mecanique"],
                  ["üî® Carrosserie", "carrosserie"],
                  ["‚ú® Lavage", "lavage"]
                ].concat(@service_categories.reject { |c| %w[mecanique carrosserie lavage].include?(c) }.map { |c| [c.capitalize, c] }), 
                params[:service_category] || "all"),
                {},
                { class: "w-full h-12 px-4 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-hero focus:border-transparent" } %>
        </div>

        <!-- Location Filter -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Localisation</label>
          <%= f.text_field :location, 
                placeholder: "Paris, France", 
                value: params[:location],
                class: "w-full h-12 px-4 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-hero focus:border-transparent" %>
        </div>

        <!-- Radius Filter -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Rayon (km)</label>
          <%= f.number_field :radius_km, 
                placeholder: "Ex: 15", 
                value: params[:radius_km],
                min: 0,
                class: "w-full h-12 px-4 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-hero focus:border-transparent" %>
        </div>

        <!-- Search Button -->
        <div>
          <%= f.submit "Rechercher", class: "bg-red-hero hover:bg-red-dark text-white h-12 px-6 rounded-lg font-medium w-full inline-flex items-center justify-center" %>
        </div>
      </div>
      <style>
        @media (min-width: 768px) {
          .grid[style*="grid-template-columns: 1fr"] {
            grid-template-columns: 2fr 2fr 1.5fr auto !important;
            grid-template-rows: auto !important;
          }
        }
      </style>
    <% end %>

    <!-- Results Header -->
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4 mb-6">
      <p class="text-gray-600">
        <span class="font-bold text-gray-900"><%= @pagy.count %></span> professionnel<%= @pagy.count > 1 ? 's' : '' %> trouv√©<%= @pagy.count > 1 ? 's' : '' %>
      </p>
    </div>

    <!-- Professionals Grid -->
    <% if @professionals.any? %>
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
        <% @professionals.each do |professional| %>
          <div class="bg-white rounded-super p-6 shadow-sm card-hover">
            <div class="flex items-start mb-4">
              <%= link_to client_professional_path(professional), class: "flex items-center space-x-3 flex-1" do %>
                <div class="w-16 h-16 rounded-full flex items-center justify-center flex-shrink-0 overflow-hidden bg-red-hero">
                  <%= user_avatar_content(professional, 
                        image_class: "w-full h-full object-cover", 
                        initials_class: "text-white text-2xl font-bold") %>
                </div>
                <div>
                  <h3 class="text-xl font-bold text-gray-900 hover:text-red-hero transition">
                    <% if @professionals_with_completed_bookings.include?(professional.id) %>
                      <%= professional.company_name.presence || professional.get_full_name %>
                    <% else %>
                      <%= professional.get_initials %>
                    <% end %>
                  </h3>
                </div>
              <% end %>
            </div>

            <!-- Rating - Hidden for now -->
            <div class="flex items-center space-x-2 mb-3" style="display: none;">
              <div class="flex text-yellow-hero">
                ‚≠ê‚≠ê‚≠ê‚≠ê‚≠ê
              </div>
              <span class="text-sm font-medium text-gray-900">4.9</span>
              <span class="text-sm text-gray-500">(127 avis)</span>
            </div>

            <!-- Services -->
            <% active_services = professional.professional_services.active.includes(:services) %>
            <% if active_services.any? %>
              <% 
                # Get unique services from all professional services
                all_services = active_services.flat_map(&:services).uniq
              %>
              <% if all_services.any? %>
                <div class="mb-4">
                  <p class="text-sm font-medium text-gray-700 mb-2">Services propos√©s:</p>
                  <div class="flex flex-wrap gap-2">
                    <% all_services.first(4).each do |service| %>
                      <span class="bg-red-50 text-red-800 px-2 py-1 rounded-lg text-xs font-medium">
                        <%= service.name %>
                      </span>
                    <% end %>
                  </div>
                </div>
              <% end %>
            <% end %>

            <!-- Location & Price -->
            <div class="space-y-2">
              <% if professional.location.present? %>
                <p class="text-sm text-gray-600">üìç <%= professional.location %></p>
              <% end %>
              
              <% 
                # Get minimum price from active professional services
                min_price = nil
                price_type = nil
                active_services.each do |ps|
                  if ps.pricing_type == "hourly_rate" && ps.hourly_rate_price.present?
                    if min_price.nil? || ps.hourly_rate_price < min_price
                      min_price = ps.hourly_rate_price
                      price_type = "hourly"
                    end
                  elsif ps.pricing_type == "flat_rate" && ps.flat_rate_price.present?
                    if min_price.nil? || ps.flat_rate_price < min_price
                      min_price = ps.flat_rate_price
                      price_type = "flat"
                    end
                  end
                end
              %>
              
              <% if min_price.present? %>
                <p class="text-sm text-gray-600">
                  üí∂ √Ä partir de ‚Ç¨<%= sprintf('%.0f', min_price) %><%= price_type == "hourly" ? "/h" : " (forfait)" %>
                </p>
              <% end %>
              
              <% 
                # Check for travel fees
                has_travel_fees = active_services.any? { |ps| ps.travel_flat_rate.present? || ps.travel_per_km_rate.present? }
                if has_travel_fees
                  travel_fee = active_services.find { |ps| ps.travel_flat_rate.present? || ps.travel_per_km_rate.present? }
                  if travel_fee.travel_flat_rate.present?
                    travel_display = "‚Ç¨#{sprintf('%.0f', travel_fee.travel_flat_rate)}"
                  elsif travel_fee.travel_per_km_rate.present?
                    travel_display = "‚Ç¨#{sprintf('%.0f', travel_fee.travel_per_km_rate)}/km"
                  end
                end
              %>
              
              <% if has_travel_fees && travel_display.present? %>
                <p class="text-sm text-gray-600">üöó Frais de d√©placement: <%= travel_display %></p>
              <% end %>
              
              <div class="flex items-center justify-between">
                <%= link_to client_professional_path(professional), class: "bg-yellow-hero text-white px-3 py-1 rounded-lg text-sm font-medium hover:bg-opacity-90 inline-flex items-center" do %>
                  <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                  </svg>
                  Voir le profil
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="bg-white rounded-super p-12 shadow-sm text-center">
        <p class="text-gray-600 text-lg">Aucun professionnel trouv√© avec ces crit√®res.</p>
        <%= link_to "R√©initialiser les filtres", client_professionals_path, class: "mt-4 inline-block text-red-hero hover:underline" %>
      </div>
    <% end %>

    <!-- Pagination -->
    <% if @pagy.pages > 1 %>
      <div class="mt-8 p-6 bg-white rounded-super shadow-sm border-t border-gray-200 flex flex-col sm:flex-row justify-between items-center gap-3">
        <p class="text-xs sm:text-sm text-gray-600">
          Affichage de <strong><%= @pagy.from %></strong> √† <strong><%= @pagy.to %></strong> sur <strong><%= @pagy.count %></strong> professionnel<%= @pagy.count > 1 ? 's' : '' %>
        </p>
        <%= pagy_nav_supercaralive(@pagy, params: request.query_parameters) %>
      </div>
    <% end %>

  </div>
</div>
