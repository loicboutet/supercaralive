<div class="min-h-screen bg-soft py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-4xl mx-auto">
    <div class="bg-white rounded-super shadow-sm p-8 md:p-12">
      <!-- Header -->
      <div class="mb-8">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
          Nous contacter
        </h1>
        <p class="text-gray-600">
          Une question ? Une suggestion ? N'hésitez pas à nous écrire !
        </p>
      </div>

      <!-- Content -->
      <div class="prose prose-lg max-w-none">
        <section class="mb-8">
          <h2 class="text-2xl font-bold text-gray-900 mb-4">Moyens de contact</h2>
          <% app_config = AppConfig.instance %>
          <div class="space-y-4">
            <% if app_config.contact_email.present? %>
              <div class="flex items-start">
                <div class="flex-shrink-0">
                  <svg class="h-6 w-6 text-red-hero" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                </div>
                <div class="ml-4">
                  <h3 class="text-lg font-semibold text-gray-900">Email</h3>
                  <p class="text-gray-600"><%= mail_to app_config.contact_email, app_config.contact_email, class: "hover:underline" %></p>
                </div>
              </div>
            <% end %>

            <% if app_config.contact_phone.present? %>
              <div class="flex items-start">
                <div class="flex-shrink-0">
                  <svg class="h-6 w-6 text-red-hero" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                  </svg>
                </div>
                <div class="ml-4">
                  <h3 class="text-lg font-semibold text-gray-900">Téléphone</h3>
                  <p class="text-gray-600">
                    <a href="tel:<%= app_config.contact_phone.gsub(/\s/, '') %>" class="hover:underline"><%= app_config.contact_phone %></a>
                  </p>
                </div>
              </div>
            <% end %>

            <% if app_config.address.present? %>
              <div class="flex items-start">
                <div class="flex-shrink-0">
                  <svg class="h-6 w-6 text-red-hero" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                </div>
                <div class="ml-4">
                  <h3 class="text-lg font-semibold text-gray-900">Adresse</h3>
                  <p class="text-gray-600 whitespace-pre-wrap"><%= app_config.address %></p>
                </div>
              </div>
            <% end %>
            
            <% if app_config.opening_hours.present? %>
              <div class="flex items-start">
                <div class="flex-shrink-0">
                  <svg class="h-6 w-6 text-red-hero" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                </div>
                <div class="ml-4">
                  <h3 class="text-lg font-semibold text-gray-900">Horaires</h3>
                  <p class="text-gray-600 whitespace-pre-wrap"><%= app_config.opening_hours %></p>
                </div>
              </div>
            <% end %>
          </div>
        </section>

      </div>
    </div>
  </div>
</div>

