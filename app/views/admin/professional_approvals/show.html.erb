<% content_for :page_title, "Détails Approbation Professionnel" %>

<!-- Breadcrumb -->
<div class="mb-6">
  <nav class="flex" aria-label="Breadcrumb">
    <ol class="inline-flex items-center space-x-2">
      <li class="inline-flex items-center">
        <%= link_to admin_professional_approvals_path, class: "text-gray-600 hover:text-blue-hero inline-flex items-center" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
          </svg>
          Validations
        <% end %>
      </li>
      <li>
        <svg class="w-4 h-4 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
        </svg>
      </li>
      <li class="text-gray-900 font-medium"><%= @user.get_full_name %></li>
    </ol>
  </nav>
</div>

<!-- Page Header -->
<div class="mb-8">
  <div class="space-y-6">
    <div>
      <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-2">
        Demande de <span class="text-yellow-hero">Validation</span> ✓
      </h1>
      <p class="text-xl text-gray-600">
        Examinez et validez la demande d'inscription professionnelle
      </p>
    </div>
    <div class="flex flex-col sm:flex-row gap-3">
      <%= button_to approve_admin_professional_approval_path(@user), method: :patch, form: { data: { turbo: false }, onsubmit: "return confirm('Êtes-vous sûr de vouloir approuver cet utilisateur ?')" }, class: "bg-green-500 hover:bg-green-600 text-white px-6 py-3 rounded-lg font-bold inline-flex items-center justify-center w-full sm:w-auto" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
        </svg>
        Approuver
      <% end %>
      <%= button_to reject_admin_professional_approval_path(@user), method: :patch, form: { data: { turbo: false }, onsubmit: "return confirm('Êtes-vous sûr de vouloir refuser cet utilisateur ?')" }, class: "bg-red-600 hover:bg-red-700 text-white px-6 py-3 rounded-lg font-bold inline-flex items-center justify-center w-full sm:w-auto" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
        Refuser
      <% end %>
    </div>
  </div>
</div>

<!-- Alert (only show if pending for more than 48 hours) -->
<% if @user.status == "inactive" && @user.created_at < 48.hours.ago %>
  <% waiting_time = format_waiting_time(@user.created_at) %>
  <div class="bg-yellow-50 border-l-4 border-yellow-hero rounded-lg p-6 mb-8">
    <div class="flex items-start">
      <svg class="w-6 h-6 text-yellow-hero mr-3 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
      </svg>
      <div>
        <h3 class="text-lg font-bold text-yellow-800 mb-1">Demande en attente depuis <%= waiting_time %></h3>
        <p class="text-yellow-700">
          Cette demande nécessite votre attention. Veuillez examiner tous les documents avant de prendre une décision.
        </p>
      </div>
    </div>
  </div>
<% end %>

<!-- Main Content Grid -->
<div class="grid md:grid-cols-3 gap-8">
  
  <!-- Left Column - Professional Info -->
  <div class="space-y-6">
    
    <!-- Profile Card -->
    <div class="bg-white rounded-super p-6 shadow-sm">
      <div class="text-center mb-6">
        <div class="w-24 h-24 bg-yellow-hero rounded-full flex items-center justify-center mx-auto mb-4 overflow-hidden relative">
          <%= user_avatar_content(@user, 
              image_class: "w-full h-full object-cover", 
              initials_class: "text-white text-4xl font-bold absolute inset-0 flex items-center justify-center") %>
        </div>
        <h2 class="text-2xl font-bold text-gray-900 mb-1"><%= @user.get_full_name %></h2>
        <% if @user.company_name.present? %>
          <p class="text-gray-600 mb-2"><%= @user.company_name %></p>
        <% end %>
        <span class="px-4 py-2 bg-yellow-100 text-yellow-800 rounded-lg text-sm font-medium inline-block">Professionnel</span>
      </div>

      <div class="border-t border-gray-200 pt-4 space-y-3">
        <% if @user.first_name.present? %>
          <div class="flex items-center space-x-3">
            <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
            <span class="text-gray-700"><strong>Prénom:</strong> <%= @user.first_name %></span>
          </div>
        <% end %>

        <% if @user.last_name.present? %>
          <div class="flex items-center space-x-3">
            <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
            <span class="text-gray-700"><strong>Nom:</strong> <%= @user.last_name %></span>
          </div>
        <% end %>

        <% if @user.company_name.present? %>
          <div class="flex items-center space-x-3">
            <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
            </svg>
            <span class="text-gray-700"><strong>Nom d'entreprise:</strong> <%= @user.company_name %></span>
          </div>
        <% end %>

        <div class="flex items-center space-x-3">
          <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
          </svg>
          <span class="text-gray-700"><strong>Email:</strong> <%= @user.email %></span>
        </div>

        <% if @user.phone_number.present? %>
          <div class="flex items-center space-x-3">
            <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
            <span class="text-gray-700"><strong>Téléphone:</strong> <%= @user.phone_number %></span>
          </div>
        <% end %>

        <% if @user.siret.present? %>
          <div class="flex items-center space-x-3">
            <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
            <span class="text-gray-700"><strong>SIRET:</strong> <%= @user.siret %></span>
          </div>
        <% end %>

        <div class="flex items-center space-x-3">
          <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
          </svg>
          <span class="text-gray-700">Inscrit le <%= @user.created_at.strftime("%d/%m/%Y") %></span>
        </div>
      </div>
    </div>

    <!-- Service Area -->
    <div class="bg-white rounded-super p-6 shadow-sm">
      <h3 class="text-lg font-bold text-gray-900 mb-4">Zone de service</h3>
      <div class="space-y-3">
        <div class="flex items-center justify-between">
          <span class="text-gray-600">Localisation</span>
          <span class="font-medium text-gray-900"><%= @user.location.present? ? @user.location : "-" %></span>
        </div>
        <div class="flex items-center justify-between">
          <span class="text-gray-600">Zone d'intervention</span>
          <span class="text-xl font-bold text-yellow-hero"><%= @user.intervention_zone.present? ? @user.intervention_zone : "-" %></span>
        </div>
      </div>
    </div>

    <!-- Services Offered -->
    <div class="bg-white rounded-super p-6 shadow-sm">
      <h3 class="text-lg font-bold text-gray-900 mb-4">Services proposés</h3>
      <% if @user.professional_services.any? %>
        <div class="space-y-3">
          <% @user.professional_services.order(created_at: :desc).each do |professional_service| %>
            <div class="border border-gray-200 rounded-lg p-4 hover:shadow-md transition">
              <div class="flex items-start justify-between mb-2">
                <div class="flex-1">
                  <h4 class="font-bold text-gray-900 mb-1"><%= professional_service.name %></h4>
                  <div class="flex flex-wrap gap-2 items-center text-sm text-gray-600">
                    <% if professional_service.display_price.present? %>
                      <span class="flex items-center">
                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        <%= professional_service.display_price %>
                      </span>
                    <% end %>
                    <% if professional_service.duration_minutes.present? %>
                      <span class="flex items-center">
                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        <%= professional_service.duration_minutes %> min
                      </span>
                    <% end %>
                    <% if professional_service.display_travel_price.present? %>
                      <span class="flex items-center">
                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                        </svg>
                        Déplacement: <%= professional_service.display_travel_price %>
                      </span>
                    <% end %>
                  </div>
                  <% if professional_service.services.any? %>
                    <div class="mt-2 flex flex-wrap gap-1">
                      <% professional_service.services.each do |service| %>
                        <span class="px-2 py-1 bg-blue-100 text-blue-800 rounded text-xs font-medium"><%= service.name %></span>
                      <% end %>
                    </div>
                  <% end %>
                </div>
                <div class="ml-3">
                  <% if professional_service.active? %>
                    <span class="px-2 py-1 bg-green-100 text-green-800 rounded text-xs font-medium">Actif</span>
                  <% else %>
                    <span class="px-2 py-1 bg-gray-100 text-gray-600 rounded text-xs font-medium">Inactif</span>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-4 text-gray-500">
          <p class="text-sm">Aucun service configuré pour le moment</p>
        </div>
      <% end %>
    </div>

  </div>

  <!-- Right Column - Documents -->
  <div class="md:col-span-2 space-y-6">
    
    <!-- Documents Section -->
    <div class="bg-white rounded-super p-6 shadow-sm">
      <h2 class="text-2xl font-bold text-gray-900 mb-6">Documents fournis</h2>
      
      <% if @documents.any? %>
        <div class="space-y-4">
          <% @documents.each do |document| %>
            <div class="border border-gray-200 rounded-lg p-4 hover:shadow-md transition">
              <div class="flex items-start justify-between mb-3">
                <div class="flex items-start space-x-3">
                  <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center flex-shrink-0">
                    <svg class="w-6 h-6 text-blue-hero" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                    </svg>
                  </div>
                  <div>
                    <h3 class="font-bold text-gray-900"><%= document.name %></h3>
                    <% if document.comments.present? %>
                      <p class="text-sm text-gray-600"><%= document.comments %></p>
                    <% end %>
                    <p class="text-sm text-gray-500">Téléchargé le <%= document.created_at.strftime("%d/%m/%Y") %></p>
                  </div>
                </div>
              </div>
              <div class="flex space-x-3">
                <% if document.file.attached? %>
                  <%= link_to rails_blob_path(document.file, disposition: 'attachment'), class: "bg-gray-200 hover:bg-gray-300 text-gray-700 px-4 py-2 rounded-lg font-medium inline-flex items-center" do %>
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path>
                    </svg>
                    Télécharger
                  <% end %>
                <% else %>
                  <span class="text-sm text-gray-500">Fichier non disponible</span>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>

        <!-- Pagination for documents -->
        <% if @pagy_documents.pages > 1 %>
          <div class="mt-6 pt-6 border-t border-gray-200">
            <%= pagy_nav_supercaralive(@pagy_documents, params: request.query_parameters.merge(documents_page: nil)) %>
          </div>
        <% end %>
      <% else %>
        <div class="text-center py-8 text-gray-500">
          Aucun document fourni pour le moment
        </div>
      <% end %>
    </div>

    <!-- Admin Notes -->
    <div class="bg-white rounded-super p-6 shadow-sm" data-controller="admin-notes" data-admin-notes-user-id-value="<%= @user.id %>">
      <h2 class="text-2xl font-bold text-gray-900 mb-4">Notes administratives</h2>
      <%= text_area_tag :admin_approval_note, @user.admin_approval_note, rows: 4, placeholder: "Ajoutez vos notes ou commentaires sur cette demande...", data: { admin_notes_target: "textarea" }, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-yellow-hero" %>
      <div class="mt-4 flex items-center justify-between">
        <div data-admin-notes-target="statusMessage" class="hidden text-sm font-medium"></div>
        <button type="button" data-action="click->admin-notes#save" data-admin-notes-target="saveButton" class="bg-gray-200 hover:bg-gray-300 text-gray-700 px-6 py-2 rounded-lg font-medium inline-flex items-center">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7H5a2 2 0 00-2 2v9a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-3m-1 4l-3 3m0 0l-3-3m3 3V4"></path>
          </svg>
          Enregistrer les notes
        </button>
      </div>
    </div>

    <!-- Decision Actions -->
    <div class="bg-white rounded-super p-6 shadow-sm">
      <h2 class="text-2xl font-bold text-gray-900 mb-4">Décision finale</h2>
      <div class="flex flex-col sm:flex-row gap-4">
        <%= button_to approve_admin_professional_approval_path(@user), method: :patch, form: { data: { turbo: false }, onsubmit: "return confirm('Êtes-vous sûr de vouloir approuver cet utilisateur ?')" }, class: "bg-green-500 hover:bg-green-600 text-white px-8 py-4 rounded-lg font-bold text-lg inline-flex items-center justify-center w-full sm:w-auto" do %>
          <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          Approuver la demande
        <% end %>
        <%= button_to reject_admin_professional_approval_path(@user), method: :patch, form: { data: { turbo: false }, onsubmit: "return confirm('Êtes-vous sûr de vouloir refuser cet utilisateur ?')" }, class: "bg-red-600 hover:bg-red-700 text-white px-8 py-4 rounded-lg font-bold text-lg inline-flex items-center justify-center w-full sm:w-auto" do %>
          <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          Refuser la demande
        <% end %>
      </div>
    </div>

  </div>
</div>
