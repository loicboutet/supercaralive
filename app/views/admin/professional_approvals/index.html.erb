<% content_for :page_title, "Approbations Professionnels" %>

<!-- Page Header -->
<div class="mb-8">
  <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-2">
    Validation des <span class="text-yellow-hero">Professionnels</span> ‚úì
  </h1>
  <p class="text-xl text-gray-600">
    Approuvez ou refusez les demandes de v√©rification des professionnels
  </p>
</div>

<!-- Stats Cards -->
<div class="grid md:grid-cols-4 gap-6 mb-8">
  <div class="bg-white rounded-lg p-8 shadow-sm">
    <div class="flex items-center justify-between">
      <div class="flex flex-col">
        <span class="text-lg font-bold text-gray-700 mb-2">En attente</span>
        <p class="text-5xl font-bold text-yellow-hero mb-2"><%= @pending_count %></p>
        <p class="text-base text-gray-500">√Ä traiter</p>
      </div>
      <div class="w-16 h-16 bg-yellow-hero rounded-lg flex items-center justify-center flex-shrink-0">
        <span class="text-white text-3xl">‚è≥</span>
      </div>
    </div>
  </div>

  <div class="bg-white rounded-lg p-8 shadow-sm">
    <div class="flex items-center justify-between">
      <div class="flex flex-col">
        <span class="text-lg font-bold text-gray-700 mb-2">Approuv√©s</span>
        <p class="text-5xl font-bold text-green-500 mb-2"><%= @approved_this_month %></p>
        <p class="text-base text-gray-500">Ce mois</p>
      </div>
      <div class="w-16 h-16 bg-green-500 rounded-lg flex items-center justify-center flex-shrink-0">
        <span class="text-white text-3xl">‚úì</span>
      </div>
    </div>
  </div>

  <div class="bg-white rounded-lg p-8 shadow-sm">
    <div class="flex items-center justify-between">
      <div class="flex flex-col">
        <span class="text-lg font-bold text-gray-700 mb-2">Refus√©s</span>
        <p class="text-5xl font-bold text-red-600 mb-2"><%= @rejected_count %></p>
        <p class="text-base text-gray-500">Ce mois</p>
      </div>
      <div class="w-16 h-16 bg-red-600 rounded-lg flex items-center justify-center flex-shrink-0">
        <span class="text-white text-3xl">‚úó</span>
      </div>
    </div>
  </div>

  <div class="bg-white rounded-lg p-8 shadow-sm">
    <div class="flex items-center justify-between">
      <div class="flex flex-col">
        <span class="text-lg font-bold text-gray-700 mb-2">Total</span>
        <p class="text-5xl font-bold text-blue-hero mb-2"><%= @total_verified %></p>
        <p class="text-base text-gray-500">Actifs</p>
      </div>
      <div class="w-16 h-16 bg-blue-hero rounded-lg flex items-center justify-center flex-shrink-0">
        <span class="text-white text-3xl">üîß</span>
      </div>
    </div>
  </div>
</div>

<!-- Priority Alert -->
<% if @urgent_requests > 0 %>
  <div class="bg-yellow-50 border-l-4 border-yellow-hero rounded-lg p-6 mb-8">
    <div class="flex items-start">
      <svg class="w-6 h-6 text-yellow-hero mr-3 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
      </svg>
      <div>
        <h3 class="text-lg font-bold text-yellow-800 mb-1">Demandes urgentes</h3>
        <p class="text-yellow-700">
          <strong><%= @urgent_requests %> demande<%= @urgent_requests > 1 ? 's' : '' %></strong> en attente de validation depuis plus de 48h. Veuillez les traiter rapidement.
        </p>
      </div>
    </div>
  </div>
<% end %>

<!-- Filters -->
<%= form_with url: admin_professional_approvals_path, method: :get, local: true, class: "bg-white rounded-super p-6 shadow-sm mb-6" do |f| %>
  <div class="flex flex-col md:flex-row gap-4">
    <div class="flex-1">
      <label class="block text-sm font-bold text-gray-700 mb-2">Rechercher</label>
      <div class="relative">
        <%= f.text_field :search, placeholder: "Nom, entreprise, email...", value: params[:search], class: "w-full h-12 px-4 pl-10 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-yellow-hero" %>
        <svg class="w-5 h-5 text-gray-400 absolute left-3 top-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
        </svg>
      </div>
    </div>

    <div class="flex-1">
      <label class="block text-sm font-bold text-gray-700 mb-2">Statut</label>
      <%= f.select :status, options_for_select([
        ["Tous", "all"],
        ["En attente", "inactive"],
        ["Approuv√©", "active"],
        ["Refus√©", "suspended"]
      ], params[:status] || "all"), {}, { class: "w-full h-12 px-4 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-yellow-hero" } %>
    </div>

    <div class="flex-1">
      <label class="block text-sm font-bold text-gray-700 mb-2">Type</label>
      <select class="w-full h-12 px-4 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-yellow-hero" disabled>
        <option>Tous les types</option>
        <option>M√©canicien</option>
        <option>Carrossier</option>
        <option>Laveur</option>
      </select>
    </div>

    <div class="w-full md:w-40 flex items-end">
      <%= f.submit "Filtrer", class: "w-full h-12 bg-yellow-hero hover:bg-opacity-90 text-white px-6 rounded-lg font-bold inline-flex items-center justify-center" %>
    </div>
  </div>
<% end %>

<!-- Pending Approvals -->
<div class="bg-white rounded-super shadow-sm overflow-hidden mb-8">
  <div class="p-6 border-b border-gray-200">
    <h2 class="text-2xl font-bold text-gray-900">Demandes en attente</h2>
  </div>

  <div class="divide-y divide-gray-200">
    <% if @pending_users.any? %>
      <% @pending_users.each do |user| %>
        <% waiting_time = format_waiting_time(user.created_at) %>
        <% is_urgent = user.created_at < 48.hours.ago %>
        <div class="p-6 hover:bg-soft transition">
          <div class="flex items-start justify-between mb-4">
            <div class="flex items-start space-x-4">
              <div class="w-16 h-16 bg-yellow-hero rounded-lg flex items-center justify-center flex-shrink-0">
                <span class="text-white text-2xl"><%= user.get_initials %></span>
              </div>
              <div class="flex-1">
                <div class="flex items-center space-x-2 mb-2">
                  <h3 class="text-xl font-bold text-gray-900"><%= user.get_full_name %></h3>
                  <span class="px-3 py-1 bg-yellow-100 text-yellow-800 rounded-lg text-xs font-medium">En attente</span>
                </div>
                <% if user.company_name.present? %>
                  <p class="text-gray-600 mb-2"><strong>Entreprise:</strong> <%= user.company_name %></p>
                <% end %>
                <p class="text-gray-600 mb-2"><strong>Type:</strong> Professionnel</p>
                <div class="flex items-center text-sm text-gray-500 space-x-4">
                  <span class="flex items-center">
                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                    </svg>
                    <%= user.email %>
                  </span>
                  <span class="flex items-center">
                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                    </svg>
                    Soumis le <%= user.created_at.strftime("%d/%m/%Y") %>
                  </span>
                </div>
              </div>
            </div>
            <div class="text-right">
              <% if is_urgent %>
                <span class="bg-red-100 text-red-800 px-3 py-1 rounded-lg text-xs font-bold inline-flex items-center">
                  <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  <%= waiting_time %>
                </span>
              <% else %>
                <span class="bg-yellow-100 text-yellow-800 px-3 py-1 rounded-lg text-xs font-bold inline-flex items-center">
                  <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  <%= waiting_time %>
                </span>
              <% end %>
            </div>
          </div>

          <% if user.professional_documents.any? %>
            <div class="mb-4 p-4 bg-soft rounded-lg">
              <p class="text-sm text-gray-700 mb-2"><strong>Documents fournis:</strong></p>
              <div class="flex flex-wrap gap-2">
                <% user.professional_documents.limit(5).each do |doc| %>
                  <span class="px-3 py-1 bg-blue-100 text-blue-800 rounded-lg text-xs font-medium inline-flex items-center">
                    <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                    </svg>
                    <%= doc.name %>
                  </span>
                <% end %>
                <% if user.professional_documents.count > 5 %>
                  <span class="px-3 py-1 bg-gray-100 text-gray-600 rounded-lg text-xs font-medium">
                    +<%= user.professional_documents.count - 5 %> autre<%= user.professional_documents.count - 5 > 1 ? 's' : '' %>
                  </span>
                <% end %>
              </div>
            </div>
          <% end %>

          <div class="flex space-x-3">
            <%= link_to admin_professional_approval_path(user), class: "bg-blue-hero hover:bg-blue-dark text-white px-6 py-3 rounded-lg font-bold inline-flex items-center" do %>
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
              </svg>
              Examiner
            <% end %>
            <%= button_to approve_admin_professional_approval_path(user), method: :patch, form: { data: { turbo: false }, onsubmit: "return confirm('√ätes-vous s√ªr de vouloir approuver cet utilisateur ?')" }, class: "bg-green-500 hover:bg-green-600 text-white px-6 py-3 rounded-lg font-bold inline-flex items-center" do %>
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              Approuver
            <% end %>
            <%= button_to reject_admin_professional_approval_path(user), method: :patch, form: { data: { turbo: false }, onsubmit: "return confirm('√ätes-vous s√ªr de vouloir refuser cet utilisateur ?')" }, class: "bg-red-600 hover:bg-red-700 text-white px-6 py-3 rounded-lg font-bold inline-flex items-center" do %>
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
              </svg>
              Refuser
            <% end %>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="p-6 text-center text-gray-500">
        Aucune demande en attente
      </div>
    <% end %>
  </div>

  <!-- Pagination for pending users -->
  <% if @pagy_pending.pages > 1 %>
    <div class="p-6 bg-soft border-t border-gray-200 flex flex-col sm:flex-row justify-between items-center gap-3">
      <p class="text-xs sm:text-sm text-gray-600">
        Affichage de <strong><%= @pagy_pending.from %></strong> √† <strong><%= @pagy_pending.to %></strong> sur <strong><%= @pagy_pending.count %></strong> demande<%= @pagy_pending.count > 1 ? 's' : '' %>
      </p>
      <%= pagy_nav_supercaralive(@pagy_pending, params: request.query_parameters.merge(pending_page: nil)) %>
    </div>
  <% end %>
</div>

<!-- Recent Decisions -->
<div class="bg-white rounded-super shadow-sm overflow-hidden">
  <div class="p-6 border-b border-gray-200">
    <h2 class="text-2xl font-bold text-gray-900">D√©cisions r√©centes</h2>
  </div>

  <div class="overflow-x-auto">
    <table class="w-full">
      <thead class="bg-soft">
        <tr>
          <th class="text-left px-6 py-4 text-sm font-bold text-gray-700">Professionnel</th>
          <th class="text-left px-6 py-4 text-sm font-bold text-gray-700">Type</th>
          <th class="text-left px-6 py-4 text-sm font-bold text-gray-700">D√©cision</th>
          <th class="text-left px-6 py-4 text-sm font-bold text-gray-700">Date</th>
          <th class="text-left px-6 py-4 text-sm font-bold text-gray-700">Actions</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200">
        <% if @recent_decisions.any? %>
          <% @recent_decisions.each do |user| %>
            <tr class="hover:bg-soft transition">
              <td class="px-6 py-4">
                <p class="font-medium text-gray-900"><%= user.get_full_name %></p>
                <% if user.company_name.present? %>
                  <p class="text-sm text-gray-600"><%= user.company_name %></p>
                <% end %>
              </td>
              <td class="px-6 py-4 text-sm text-gray-700">Professionnel</td>
              <td class="px-6 py-4">
                <% if user.status == "active" %>
                  <span class="px-3 py-1 bg-green-100 text-green-800 rounded-lg text-xs font-medium inline-flex items-center">
                    <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    Approuv√©
                  </span>
                <% elsif user.status == "suspended" %>
                  <span class="px-3 py-1 bg-red-100 text-red-800 rounded-lg text-xs font-medium inline-flex items-center">
                    <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                    Refus√©
                  </span>
                <% end %>
              </td>
              <td class="px-6 py-4 text-sm text-gray-700"><%= user.updated_at.strftime("%d/%m/%Y") %></td>
              <td class="px-6 py-4">
                <%= link_to admin_professional_approval_path(user), class: "text-blue-hero hover:text-blue-dark inline-flex items-center" do %>
                  <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                  </svg>
                  Voir
                <% end %>
              </td>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td colspan="5" class="px-6 py-8 text-center text-gray-500">
              Aucune d√©cision r√©cente
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
