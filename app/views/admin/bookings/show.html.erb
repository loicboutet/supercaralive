<% 
  # Status configuration
  status_config = {
    'pending' => { badge_bg: 'bg-yellow-100', badge_text: 'text-yellow-800', label: 'En attente de confirmation' },
    'accepted' => { badge_bg: 'bg-blue-100', badge_text: 'text-blue-800', label: 'Accept√©e' },
    'refused' => { badge_bg: 'bg-red-100', badge_text: 'text-red-800', label: 'Refus√©e' },
    'cancelled' => { badge_bg: 'bg-gray-100', badge_text: 'text-gray-800', label: 'Annul√©e' },
    'completed' => { badge_bg: 'bg-green-100', badge_text: 'text-green-800', label: 'Termin√©e' }
  }
  status_config_default = { badge_bg: 'bg-gray-100', badge_text: 'text-gray-800', label: @booking.status }
  status_style = status_config[@booking.status] || status_config_default
  
  # Calculate duration and end time
  duration_minutes = @booking.professional_service.duration_minutes || 60
  start_time = @booking.scheduled_at
  end_time = start_time + duration_minutes.minutes if start_time
  
  # Format date
  day_names = ['Dimanche', 'Lundi', 'Mardi', 'Mercredi', 'Jeudi', 'Vendredi', 'Samedi']
  month_names = ['janvier', 'f√©vrier', 'mars', 'avril', 'mai', 'juin', 
                 'juillet', 'ao√ªt', 'septembre', 'octobre', 'novembre', 'd√©cembre']
  formatted_date = start_time ? "#{day_names[start_time.wday]} #{start_time.day} #{month_names[start_time.month - 1]} #{start_time.year}" : "Non d√©finie"
  
  # Format time range
  time_range = start_time && end_time ? "#{start_time.strftime('%H:%M')} - #{end_time.strftime('%H:%M')}" : "Non d√©finie"
  
  # Format duration
  hours = duration_minutes / 60
  mins = duration_minutes % 60
  duration_text = if hours > 0 && mins > 0
    "#{hours}h#{mins.to_s.rjust(2, '0')}"
  elsif hours > 0
    "#{hours}h"
  else
    "#{mins}min"
  end
  
  # Price display
  price_display = if @booking.estimated_price.present?
    "#{sprintf('%.2f', @booking.estimated_price)}‚Ç¨"
  elsif @booking.professional_service.pricing_type == 'flat_rate' && @booking.professional_service.flat_rate_price.present?
    "#{sprintf('%.2f', @booking.professional_service.flat_rate_price)}‚Ç¨"
  elsif @booking.professional_service.pricing_type == 'hourly_rate' && @booking.professional_service.hourly_rate_price.present?
    "#{sprintf('%.2f', @booking.professional_service.hourly_rate_price)}‚Ç¨/h"
  else
    "√Ä d√©finir"
  end
  
  # Client initials
  client_initials = if @booking.client.present?
    first_initial = @booking.client.first_name&.first&.upcase || ''
    last_initial = @booking.client.last_name&.first&.upcase || ''
    "#{first_initial}#{last_initial}".presence || 'CL'
  else
    'PR'
  end
  
  # Professional initials
  professional_initials = if @booking.professional.present?
    first_initial = @booking.professional.first_name&.first&.upcase || ''
    last_initial = @booking.professional.last_name&.first&.upcase || ''
    "#{first_initial}#{last_initial}".presence || 'PR'
  else
    'PR'
  end
%>

