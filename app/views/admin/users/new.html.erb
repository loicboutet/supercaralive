<% content_for :page_title, "Nouvel Utilisateur" %>

<!-- Breadcrumb -->
<div class="mb-6">
  <nav class="flex" aria-label="Breadcrumb">
    <ol class="inline-flex items-center space-x-2">
      <li class="inline-flex items-center">
        <%= link_to admin_users_path, class: "text-gray-600 hover:text-blue-hero inline-flex items-center" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
          </svg>
          Utilisateurs
        <% end %>
      </li>
      <li>
        <svg class="w-4 h-4 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
        </svg>
      </li>
      <li class="text-gray-900 font-medium">Nouvel utilisateur</li>
    </ol>
  </nav>
</div>

<!-- Page Header -->
<div class="mb-8">
  <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-2">
    Cr√©er un <span class="text-red-hero">Utilisateur</span> üë§
  </h1>
  <p class="text-xl text-gray-600">
    Cr√©ez un nouveau compte utilisateur pour la plateforme
  </p>
</div>

<!-- Form -->
<div class="max-w-4xl">
  <%= form_with model: [:admin, @user], local: true, data: { turbo: false } do |f| %>
    <% if @user.errors.any? %>
      <div class="bg-red-50 border-l-4 border-red-500 rounded-lg p-4 mb-6">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-red-500" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-bold text-red-800">Erreurs √† corriger :</h3>
            <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Basic Information -->
    <div class="bg-white rounded-super p-6 shadow-sm mb-6">
      <h2 class="text-2xl font-bold text-gray-900 mb-6">Informations g√©n√©rales</h2>
      
      <div class="space-y-6">
        <!-- Email -->
        <div>
          <%= f.label :email, class: "block text-sm font-bold text-gray-700 mb-2" do %>
            Email <span class="text-red-600">*</span>
          <% end %>
          <%= f.email_field :email, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-yellow-hero", required: true %>
        </div>

        <!-- First Name -->
        <div>
          <%= f.label :first_name, class: "block text-sm font-bold text-gray-700 mb-2" do %>
            Pr√©nom <span class="text-red-600">*</span>
          <% end %>
          <%= f.text_field :first_name, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-yellow-hero", required: true %>
        </div>

        <!-- Last Name -->
        <div>
          <%= f.label :last_name, class: "block text-sm font-bold text-gray-700 mb-2" do %>
            Nom <span class="text-red-600">*</span>
          <% end %>
          <%= f.text_field :last_name, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-yellow-hero", required: true %>
        </div>

        <!-- Role -->
        <div>
          <%= f.label :role, class: "block text-sm font-bold text-gray-700 mb-2" do %>
            R√¥le <span class="text-red-600">*</span>
          <% end %>
          <%= f.select :role, options_for_select([
            ["Client", "Client"],
            ["Professionnel", "Professional"],
            ["Administrateur", "Admin"]
          ], @user.role), {}, { class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-yellow-hero", required: true } %>
        </div>

        <!-- Status -->
        <div>
          <%= f.label :status, class: "block text-sm font-bold text-gray-700 mb-2" do %>
            Statut <span class="text-red-600">*</span>
          <% end %>
          <%= f.select :status, options_for_select([
            ["Actif", "active"],
            ["Inactif", "inactive"],
            ["Suspendu", "suspended"]
          ], @user.status || "active"), {}, { class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-yellow-hero", required: true } %>
        </div>
      </div>
    </div>

    <!-- Contact Information -->
    <div class="bg-white rounded-super p-6 shadow-sm mb-6">
      <h2 class="text-2xl font-bold text-gray-900 mb-6">Informations de contact</h2>
      
      <div class="space-y-6">
        <!-- Phone Number -->
        <div>
          <%= f.label :phone_number, class: "block text-sm font-bold text-gray-700 mb-2" do %>
            Num√©ro de t√©l√©phone
          <% end %>
          <%= f.telephone_field :phone_number, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-yellow-hero" %>
        </div>

        <!-- Location -->
        <div>
          <%= f.label :location, class: "block text-sm font-bold text-gray-700 mb-2" do %>
            Localisation
          <% end %>
          <%= f.text_field :location, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-yellow-hero" %>
        </div>
      </div>
    </div>

    <!-- Form Actions -->
    <div class="bg-white rounded-super p-6 shadow-sm">
      <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4">
        <div class="text-sm text-gray-600">
          <span class="text-red-600">*</span> Champs obligatoires
        </div>
        <div class="flex space-x-3">
          <%= link_to admin_users_path, class: "bg-gray-200 hover:bg-gray-300 text-gray-700 px-6 py-3 rounded-lg font-bold inline-flex items-center" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
            Annuler
          <% end %>
          <%= f.submit "Cr√©er l'utilisateur", class: "bg-red-hero hover:bg-red-dark text-white px-6 py-3 rounded-lg font-bold inline-flex items-center" %>
        </div>
      </div>
    </div>
  <% end %>
</div>


