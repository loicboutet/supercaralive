<!-- Filters and Search -->
<%= form_with url: admin_users_path, method: :get, local: true, data: { turbo: false }, class: "bg-white rounded-lg sm:rounded-super p-3 sm:p-4 md:p-6 shadow-sm mb-3 sm:mb-4 md:mb-6" do |f| %>
  <div class="flex flex-col md:flex-row gap-3 sm:gap-4">
    <div class="flex-1">
      <label class="block text-xs sm:text-sm font-bold text-gray-700 mb-1 sm:mb-2">Rechercher</label>
      <div class="relative">
        <%= f.text_field :search, value: params[:search], placeholder: "Nom, email...", class: "w-full h-10 sm:h-12 px-3 sm:px-4 pl-9 sm:pl-10 text-sm sm:text-base border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-yellow-hero" %>
        <svg class="w-4 h-4 sm:w-5 sm:h-5 text-gray-400 absolute left-2.5 sm:left-3 top-3 sm:top-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
        </svg>
      </div>
    </div>

    <div class="flex-1">
      <label class="block text-xs sm:text-sm font-bold text-gray-700 mb-1 sm:mb-2">Type</label>
      <%= f.select :type, options_for_select([
        ["Tous les types", "all"],
        ["Clients", "client"],
        ["Professionnels", "professional"],
        ["Administrateurs", "admin"]
      ], params[:type] || "all"), {}, { class: "w-full h-10 sm:h-12 px-3 sm:px-4 text-sm sm:text-base border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-yellow-hero" } %>
    </div>

    <div class="flex-1">
      <label class="block text-xs sm:text-sm font-bold text-gray-700 mb-1 sm:mb-2">Statut</label>
      <%= f.select :status, options_for_select([
        ["Tous les statuts", "all"],
        ["Actif", "active"],
        ["Inactif", "inactive"],
        ["Suspendu", "suspended"]
      ], params[:status] || "all"), {}, { class: "w-full h-10 sm:h-12 px-3 sm:px-4 text-sm sm:text-base border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-yellow-hero" } %>
    </div>

    <div class="w-full md:w-40 flex items-end">
      <%= f.submit "Filtrer", class: "w-full h-10 sm:h-12 bg-yellow-hero hover:bg-opacity-90 text-white px-4 sm:px-6 rounded-lg text-sm sm:text-base font-bold inline-flex items-center justify-center" %>
    </div>
  </div>
<% end %>

<!-- Users Table -->
<div class="bg-white rounded-lg sm:rounded-super shadow-sm overflow-hidden">
  <div class="p-3 sm:p-4 md:p-6 border-b border-gray-200">
    <div class="flex flex-col sm:flex-row items-start sm:items-center justify-between gap-3">
      <h2 class="text-lg sm:text-xl md:text-2xl font-bold text-gray-900">Liste des utilisateurs</h2>
      <%= link_to new_admin_user_path, class: "w-full sm:w-auto bg-red-hero hover:bg-red-dark text-white px-4 sm:px-6 py-2 sm:py-3 rounded-lg text-sm sm:text-base font-bold inline-flex items-center justify-center" do %>
        <svg class="w-4 h-4 sm:w-5 sm:h-5 mr-1 sm:mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
        </svg>
        CrÃ©er utilisateur
      <% end %>
    </div>
  </div>

  <div class="overflow-x-auto">
    <table class="w-full">
      <thead class="bg-soft">
        <tr>
          <th class="text-left px-6 py-4 text-sm font-bold text-gray-700">Utilisateur</th>
          <th class="text-left px-6 py-4 text-sm font-bold text-gray-700">Email</th>
          <th class="text-left px-6 py-4 text-sm font-bold text-gray-700">TÃ©lÃ©phone</th>
          <th class="text-left px-6 py-4 text-sm font-bold text-gray-700">Type</th>
          <th class="text-left px-6 py-4 text-sm font-bold text-gray-700">Statut</th>
          <th class="text-left px-6 py-4 text-sm font-bold text-gray-700">Inscrit le</th>
          <th class="text-left px-6 py-4 text-sm font-bold text-gray-700">Actions</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200">
        <% if @users.any? %>
          <% @users.each do |user| %>
            <tr class="hover:bg-soft transition">
              <td class="px-6 py-4">
                <div class="flex items-center space-x-3">
                  <div class="w-10 h-10 bg-red-hero rounded-full flex items-center justify-center">
                    <span class="text-white font-bold"><%= user.get_initials %></span>
                  </div>
                  <div>
                    <p class="font-medium text-gray-900"><%= user.get_full_name %></p>
                    <p class="text-sm text-gray-500"><%= user.role %></p>
                  </div>
                </div>
              </td>
              <td class="px-6 py-4 text-sm text-gray-700"><%= user.email %></td>
              <td class="px-6 py-4 text-sm text-gray-700"><%= user.phone_number.present? ? user.phone_number : "-" %></td>
              <td class="px-6 py-4">
                <% case user.role %>
                <% when "Client" %>
                  <span class="px-3 py-1 bg-red-100 text-red-800 rounded-lg text-xs font-medium">Client</span>
                <% when "Professional" %>
                  <span class="px-3 py-1 bg-yellow-100 text-yellow-800 rounded-lg text-xs font-medium">Professionnel</span>
                <% when "Admin" %>
                  <span class="px-3 py-1 bg-blue-100 text-blue-800 rounded-lg text-xs font-medium">Administrateur</span>
                <% end %>
              </td>
              <td class="px-6 py-4">
                <% case user.status %>
                <% when "active" %>
                  <span class="px-3 py-1 bg-green-100 text-green-800 rounded-lg text-xs font-medium inline-flex items-center">
                    <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    Actif
                  </span>
                <% when "inactive" %>
                  <span class="px-3 py-1 bg-yellow-100 text-yellow-800 rounded-lg text-xs font-medium inline-flex items-center">
                    <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    Inactif
                  </span>
                <% when "suspended" %>
                  <span class="px-3 py-1 bg-red-100 text-red-800 rounded-lg text-xs font-medium inline-flex items-center">
                    <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636"></path>
                    </svg>
                    Suspendu
                  </span>
                <% end %>
              </td>
              <td class="px-6 py-4 text-sm text-gray-700"><%= user.created_at.strftime("%d/%m/%Y") %></td>
              <td class="px-6 py-4">
                <div class="flex space-x-2">
                  <%= link_to admin_user_path(user), class: "text-blue-hero hover:text-blue-dark inline-flex items-center", title: "Voir" do %>
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                    </svg>
                  <% end %>
                  <%= link_to edit_admin_user_path(user), class: "text-yellow-hero hover:text-yellow-dark inline-flex items-center", title: "Modifier" do %>
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                    </svg>
                  <% end %>
                  <% unless user == current_user %>
                    <%= button_to admin_user_path(user), method: :delete, form: { data: { turbo: false }, onsubmit: "return confirm('ÃŠtes-vous sÃ»r de vouloir supprimer cet utilisateur ?')" }, class: "text-red-600 hover:text-red-800 inline-flex items-center", title: "Supprimer" do %>
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                      </svg>
                    <% end %>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td colspan="7" class="px-6 py-8 text-center text-gray-500">
              Aucun utilisateur trouvÃ©
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <!-- Pagination -->
  <% if @pagy.pages > 1 %>
    <div class="p-3 sm:p-4 md:p-6 bg-soft border-t border-gray-200 flex flex-col sm:flex-row justify-between items-center gap-3">
      <p class="text-xs sm:text-sm text-gray-600">
        Affichage de <strong><%= @pagy.from %></strong> Ã  <strong><%= @pagy.to %></strong> sur <strong><%= @pagy.count %></strong> utilisateurs
      </p>
      <%= pagy_nav_supercaralive(@pagy) %>
    </div>
  <% end %>
</div>
