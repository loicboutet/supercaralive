        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
        </svg>
        Supprimer
      <% end %>
    </div>
  </div>
</div>

<!-- Main Content Grid -->
<div class="grid md:grid-cols-3 gap-8">
  
  <!-- Left Column - Specialty Info -->
  <div class="space-y-6">
    
    <!-- Specialty Card -->
    <div class="bg-white rounded-super p-6 shadow-sm">
      <div class="text-center mb-6">
        <div class="w-24 h-24 bg-blue-hero rounded-lg flex items-center justify-center mx-auto mb-4">
          <span class="text-white text-5xl"><%= @specialty.icon.presence || 'üîß' %></span>
        </div>
        <h2 class="text-2xl font-bold text-gray-900 mb-2"><%= @specialty.name %></h2>
      </div>

      <div class="border-t border-gray-200 pt-4 space-y-3">
        <div class="flex items-center space-x-3">
          <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
