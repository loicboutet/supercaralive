      <h3 class="text-lg font-bold text-gray-900 mb-4">Statistiques</h3>
      <div class="space-y-3">
        <div class="flex items-center justify-between">
          <span class="text-gray-600">Professionnels</span>
          <span class="text-gray-900 font-bold"><%= @specialty.users.count %></span>
        </div>
      </div>
    </div>

  </div>

  <!-- Right Column - Details -->
  <div class="md:col-span-2 space-y-6">
    
    <!-- Professionals using this specialty -->
    <div class="bg-white rounded-super p-6 shadow-sm">
      <h2 class="text-2xl font-bold text-gray-900 mb-4">Professionnels utilisant cette sp√©cialit√©</h2>
      <% if @specialty.users.any? %>
        <div class="space-y-3">
          <% @specialty.users.each do |user| %>
            <div class="flex items-center space-x-3 p-3 border border-gray-200 rounded-lg">
              <div class="w-10 h-10 bg-blue-hero rounded-lg flex items-center justify-center">
                <span class="text-white text-sm font-bold"><%= user.get_initials %></span>
              </div>
              <div>
                <p class="font-medium text-gray-900"><%= user.get_full_name %></p>
                <p class="text-sm text-gray-600"><%= user.email %></p>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="text-gray-500">Aucun professionnel n'utilise actuellement cette sp√©cialit√©.</p>
      <% end %>
    </div>

  </div>
</div>

