<% content_for :page_title, "Configuration du site" %>

<div class="mb-8">
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
    <div>
      <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-2">
        Configuration du <span class="text-blue-hero">Site</span>
      </h1>
      <p class="text-xl text-gray-600">
        Gérez les informations de contact et les textes légaux du site
      </p>
    </div>
    <div class="mt-4 sm:mt-0">
      <%= link_to edit_admin_app_config_path, class: "bg-blue-hero hover:bg-blue-dark text-white px-6 py-3 rounded-lg font-bold inline-flex items-center justify-center" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
        </svg>
        Modifier
      <% end %>
    </div>
  </div>
</div>

<!-- Contact Information -->
<div class="bg-white rounded-super shadow-sm p-6 md:p-8 mb-8">
  <h2 class="text-2xl font-bold text-gray-900 mb-6">Informations de contact</h2>
  
  <div class="space-y-6">
    <div>
      <p class="text-sm font-medium text-gray-700 mb-2">Email de contact</p>
      <p class="text-lg text-gray-900">
        <%= @app_config.contact_email.present? ? @app_config.contact_email : '<span class="text-gray-400 italic">Non renseigné</span>'.html_safe %>
      </p>
    </div>
    
    <div>
      <p class="text-sm font-medium text-gray-700 mb-2">Téléphone de contact</p>
      <p class="text-lg text-gray-900">
        <%= @app_config.contact_phone.present? ? @app_config.contact_phone : '<span class="text-gray-400 italic">Non renseigné</span>'.html_safe %>
      </p>
    </div>
    
    <div>
      <p class="text-sm font-medium text-gray-700 mb-2">Adresse</p>
      <p class="text-lg text-gray-900 whitespace-pre-line"><%= @app_config.address.present? ? @app_config.address.strip : '<span class="text-gray-400 italic">Non renseignée</span>'.html_safe %></p>
    </div>
    
    <div>
      <p class="text-sm font-medium text-gray-700 mb-2">Horaires</p>
      <p class="text-lg text-gray-900 whitespace-pre-line"><%= @app_config.opening_hours.present? ? @app_config.opening_hours.strip : '<span class="text-gray-400 italic">Non renseignés</span>'.html_safe %></p>
    </div>
  </div>
</div>

<!-- Legal Documents -->
<div class="space-y-6">
  <!-- Terms of Service -->
  <div class="bg-white rounded-super shadow-sm border border-gray-200">
    <div class="p-6 md:p-8">
      <h2 class="text-2xl font-bold text-gray-900 mb-4">Conditions Générales d'Utilisation</h2>
      <% if @app_config.terms_of_service.present? %>
        <div class="prose prose-sm max-w-none text-gray-700 whitespace-pre-wrap">
          <%= simple_format(@app_config.terms_of_service) %>
        </div>
      <% else %>
        <p class="text-gray-400 italic">Aucun contenu renseigné. Le contenu par défaut sera affiché sur la page CGU.</p>
      <% end %>
    </div>
  </div>
  
  <!-- Privacy Policy -->
  <div class="bg-white rounded-super shadow-sm border border-gray-200">
    <div class="p-6 md:p-8">
      <h2 class="text-2xl font-bold text-gray-900 mb-4">Politique de Confidentialité</h2>
      <% if @app_config.privacy_policy.present? %>
        <div class="prose prose-sm max-w-none text-gray-700 whitespace-pre-wrap">
          <%= simple_format(@app_config.privacy_policy) %>
        </div>
      <% else %>
        <p class="text-gray-400 italic">Aucun contenu renseigné. Le contenu par défaut sera affiché sur la page de confidentialité.</p>
      <% end %>
    </div>
  </div>
</div>

