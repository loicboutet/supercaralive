<!-- Filters -->
<%= form_with url: admin_services_path, method: :get, local: true, data: { turbo: false }, class: "bg-white rounded-super p-6 shadow-sm mb-6" do |f| %>
  <div class="flex flex-col md:flex-row gap-4">
    <div class="flex-1">
      <label class="block text-sm font-bold text-gray-700 mb-2">Rechercher</label>
      <div class="relative">
        <%= f.text_field :search, placeholder: "Nom, description...", value: params[:search], class: "w-full h-12 px-4 pl-10 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-hero" %>
        <svg class="w-5 h-5 text-gray-400 absolute left-3 top-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
        </svg>
      </div>
    </div>

    <div class="flex-1">
      <label class="block text-sm font-bold text-gray-700 mb-2">Cat√©gorie</label>
      <%= f.select :category, options_for_select([
        ["Toutes", "all"],
        ["M√©canique", "mecanique"],
        ["Carrosserie", "carrosserie"],
        ["Lavage", "lavage"],
        ["Detailing", "detailing"]
      ], params[:category] || "all"), {}, { class: "w-full h-12 px-4 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-hero" } %>
    </div>

    <div class="flex-1">
      <label class="block text-sm font-bold text-gray-700 mb-2">Statut</label>
      <%= f.select :status, options_for_select([
        ["Tous", "all"],
        ["Actifs", "active"],
        ["Inactifs", "inactive"],
        ["Populaires", "popular"]
      ], params[:status] || "all"), {}, { class: "w-full h-12 px-4 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-hero" } %>
    </div>

    <div class="w-full md:w-40 flex items-end">
      <%= f.submit "Filtrer", class: "w-full h-12 bg-blue-hero hover:bg-opacity-90 text-white px-6 rounded-lg font-bold inline-flex items-center justify-center" %>
    </div>
  </div>
<% end %>

<!-- Services Table -->
<div class="bg-white rounded-super shadow-sm overflow-hidden">
  <div class="p-6 border-b border-gray-200">
    <div class="flex items-center justify-between">
      <h2 class="text-2xl font-bold text-gray-900">Services disponibles</h2>
      <%= link_to new_admin_service_path, class: "bg-blue-hero hover:bg-blue-dark text-white px-6 py-3 rounded-lg font-bold inline-flex items-center" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
        </svg>
        Ajouter service
      <% end %>
    </div>
  </div>

  <div class="overflow-x-auto">
    <table class="w-full">
      <thead class="bg-soft">
        <tr>
          <th class="text-left px-6 py-4 text-sm font-bold text-gray-700">Service</th>
          <th class="text-left px-6 py-4 text-sm font-bold text-gray-700">Cat√©gorie</th>
          <th class="text-left px-6 py-4 text-sm font-bold text-gray-700">Dur√©e</th>
          <th class="text-left px-6 py-4 text-sm font-bold text-gray-700">Prix sugg√©r√©</th>
          <th class="text-left px-6 py-4 text-sm font-bold text-gray-700">Statut</th>
          <th class="text-left px-6 py-4 text-sm font-bold text-gray-700">Actions</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200">
        <% if @services.any? %>
          <% @services.each do |service| %>
            <tr class="hover:bg-soft transition">
              <td class="px-6 py-4">
                <div class="flex items-center space-x-3">
                  <div class="w-10 h-10 <%= service.mecanique? ? 'bg-red-hero' : service.carrosserie? ? 'bg-yellow-hero' : service.detailing? ? 'bg-purple-500' : 'bg-green-500' %> rounded-lg flex items-center justify-center">
                    <span class="text-white text-lg"><%= service.icon.presence || 'üîß' %></span>
                  </div>
                  <div>
                    <%= link_to admin_service_path(service), class: "font-medium text-gray-900 hover:text-blue-hero" do %>
                      <%= service.name %>
                    <% end %>
                    <p class="text-sm text-gray-600"><%= truncate(service.description, length: 50) %></p>
                  </div>
                </div>
              </td>
              <td class="px-6 py-4">
                <% if service.mecanique? %>
                  <span class="px-3 py-1 bg-red-100 text-red-800 rounded-lg text-xs font-medium">M√©canique</span>
                <% elsif service.carrosserie? %>
                  <span class="px-3 py-1 bg-yellow-100 text-yellow-800 rounded-lg text-xs font-medium">Carrosserie</span>
                <% elsif service.detailing? %>
                  <span class="px-3 py-1 bg-purple-100 text-purple-800 rounded-lg text-xs font-medium">Detailing</span>
                <% else %>
                  <span class="px-3 py-1 bg-green-100 text-green-800 rounded-lg text-xs font-medium">Lavage</span>
                <% end %>
              </td>
              <td class="px-6 py-4 text-sm text-gray-700">
                <%= service.estimated_duration.present? ? "#{service.estimated_duration} min" : "-" %>
              </td>
              <td class="px-6 py-4 text-sm text-gray-700">
                <%= service.suggested_price.present? ? "#{number_with_precision(service.suggested_price, precision: 2)} ‚Ç¨" : "-" %>
              </td>
              <td class="px-6 py-4">
                <% if service.active? %>
                  <span class="px-3 py-1 bg-green-100 text-green-800 rounded-lg text-xs font-medium inline-flex items-center">
                    <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    Actif
                  </span>
                <% else %>
                  <span class="px-3 py-1 bg-gray-100 text-gray-800 rounded-lg text-xs font-medium">Inactif</span>
                <% end %>
                <% if service.popular? %>
                  <span class="ml-2 px-3 py-1 bg-yellow-100 text-yellow-800 rounded-lg text-xs font-medium">‚≠ê Populaire</span>
                <% end %>
              </td>
              <td class="px-6 py-4">
                <div class="flex space-x-2">
                  <%= link_to admin_service_path(service), class: "text-blue-hero hover:text-blue-dark inline-flex items-center", title: "Voir" do %>
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                    </svg>
                  <% end %>
                  <%= link_to edit_admin_service_path(service), class: "text-blue-hero hover:text-blue-dark inline-flex items-center", title: "Modifier" do %>
                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                    </svg>
                  <% end %>
                  <%= button_to admin_service_path(service), method: :delete, form: { data: { turbo: false, controller: "confirm", confirm_message_value: "√ätes-vous s√ªr de vouloir supprimer ce service ?", action: "submit->confirm#confirm" } }, class: "text-red-600 hover:text-red-700 inline-flex items-center", title: "Supprimer" do %>
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                    </svg>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td colspan="6" class="px-6 py-8 text-center text-gray-500">
              Aucun service trouv√©
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <!-- Pagination -->
  <% if @pagy.pages > 1 %>
    <div class="p-6 bg-soft border-t border-gray-200 flex flex-col sm:flex-row justify-between items-center gap-3">
      <p class="text-xs sm:text-sm text-gray-600">
        Affichage de <strong><%= @pagy.from %></strong> √† <strong><%= @pagy.to %></strong> sur <strong><%= @pagy.count %></strong> service<%= @pagy.count > 1 ? 's' : '' %>
      </p>
      <%= pagy_nav_supercaralive(@pagy, params: request.query_parameters) %>
    </div>
  <% end %>
</div>
