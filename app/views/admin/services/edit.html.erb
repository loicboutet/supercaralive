<% content_for :page_title, "Modifier Service" %>

<!-- Breadcrumb -->
<div class="mb-6">
  <nav class="flex" aria-label="Breadcrumb">
    <ol class="inline-flex items-center space-x-2">
      <li class="inline-flex items-center">
        <%= link_to admin_services_path, class: "text-gray-600 hover:text-blue-hero inline-flex items-center" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
          </svg>
          Services
        <% end %>
      </li>
      <li>
        <svg class="w-4 h-4 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
        </svg>
      </li>
      <li class="text-gray-900 font-medium"><%= @service.name %></li>
    </ol>
  </nav>
</div>

<!-- Page Header -->
<div class="mb-8">
  <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-2">
    Modifier le <span class="text-blue-hero">Service</span> üîß
  </h1>
  <p class="text-xl text-gray-600">
    Modifiez les informations du service
  </p>
</div>

<!-- Error Messages -->
<% if @service&.errors&.any? %>
  <div class="bg-red-50 border-l-4 border-red-hero rounded-lg p-4 mb-6">
    <div class="flex items-start">
      <div class="flex-shrink-0">
        <svg class="h-5 w-5 text-red-hero" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
        </svg>
      </div>
      <div class="ml-3 flex-1">
        <h3 class="text-sm font-bold text-red-800">
          <%= I18n.t("errors.messages.not_saved",
                     count: @service.errors.count,
                     resource: Service.model_name.human.downcase) %>
        </h3>
        <ul class="mt-2 text-sm text-red-700 list-disc list-inside space-y-1">
          <% @service.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
<% end %>

<!-- Form -->
<div class="max-w-4xl">
  <%= form_with model: [:admin, @service], data: { turbo: false }, local: true do |f| %>
    
    <!-- Basic Information -->
    <div class="bg-white rounded-super p-6 shadow-sm mb-6">
      <h2 class="text-2xl font-bold text-gray-900 mb-6">Informations g√©n√©rales</h2>
      
      <div class="space-y-6">
        <!-- Service Name -->
        <div>
          <%= f.label :name, class: "block text-sm font-bold text-gray-700 mb-2" do %>
            Nom du service <span class="text-red-600">*</span>
          <% end %>
          <%= f.text_field :name, 
                placeholder: "Ex: R√©vision annuelle, Lavage complet...", 
                class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-hero #{'border-red-500' if @service&.errors&.include?(:name)}",
                required: true %>
        </div>

        <!-- Description -->
        <div>
          <%= f.label :description, class: "block text-sm font-bold text-gray-700 mb-2" do %>
            Description <span class="text-red-600">*</span>
          <% end %>
          <%= f.text_area :description, 
                rows: 4, 
                placeholder: "D√©crivez le service en d√©tail...",
                class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-hero #{'border-red-500' if @service&.errors&.include?(:description)}",
                required: true %>
        </div>

        <!-- Category -->
        <div>
          <%= f.label :category, class: "block text-sm font-bold text-gray-700 mb-2" do %>
            Cat√©gorie <span class="text-red-600">*</span>
          <% end %>
          <%= f.select :category, 
                options_for_select([
                  ["S√©lectionnez une cat√©gorie", ""],
                  ["üîß M√©canique", "mecanique"],
                  ["üî® Carrosserie", "carrosserie"],
                  ["‚ú® Lavage", "lavage"]
                ], @service&.category),
                {},
                { class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-hero #{'border-red-500' if @service&.errors&.include?(:category)}",
                  required: true } %>
        </div>

        <!-- Icon/Emoji -->
        <div data-controller="icon-selector">
          <%= f.label :icon, class: "block text-sm font-bold text-gray-700 mb-2" do %>
            Ic√¥ne (Emoji)
          <% end %>
          <div class="mb-3">
            <%= f.text_field :icon, 
                  placeholder: "üîß", 
                  maxlength: 2,
                  data: { icon_selector_target: "input" },
                  class: "w-32 px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-hero text-center text-2xl" %>
            <p class="text-sm text-gray-500 mt-2">Choisissez un emoji pour repr√©senter le service</p>
          </div>
          
          <!-- Icon selector cards -->
          <div class="flex flex-wrap gap-3 mt-4">
            <% ["üîß", "‚öôÔ∏è", "üî®", "‚ú®", "‚≠ê", "üöó", "üõ†Ô∏è", "üíß", "üßΩ", "üî©"].each do |icon| %>
              <button 
                type="button"
                data-icon="<%= icon %>"
                data-action="click->icon-selector#selectIcon"
                class="w-12 h-12 bg-gray-100 hover:bg-gray-200 rounded-lg flex items-center justify-center text-2xl transition cursor-pointer"
              >
                <%= icon %>
              </button>
            <% end %>
          </div>
          <p class="text-xs text-gray-500 mt-2">Cliquez sur une ic√¥ne pour la s√©lectionner, ou saisissez-en une directement</p>
        </div>
      </div>
    </div>

    <!-- Pricing Information -->
    <div class="bg-white rounded-super p-6 shadow-sm mb-6">
      <h2 class="text-2xl font-bold text-gray-900 mb-6">Tarification</h2>
      
      <div class="grid md:grid-cols-2 gap-6">
        <!-- Estimated Duration -->
        <div>
          <%= f.label :estimated_duration, class: "block text-sm font-bold text-gray-700 mb-2" do %>
            Dur√©e estim√©e (minutes)
          <% end %>
          <%= f.number_field :estimated_duration, 
                placeholder: "60", 
                min: 0,
                class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-hero" %>
        </div>

        <!-- Suggested Price -->
        <div>
          <%= f.label :suggested_price, class: "block text-sm font-bold text-gray-700 mb-2" do %>
            Prix sugg√©r√© (‚Ç¨)
          <% end %>
          <%= f.number_field :suggested_price, 
                placeholder: "120.00", 
                step: 0.01,
                min: 0,
                class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-hero" %>
          <p class="text-sm text-gray-500 mt-2">Prix indicatif pour les professionnels</p>
        </div>
      </div>
    </div>

    <!-- Service Options -->
    <div class="bg-white rounded-super p-6 shadow-sm mb-6">
      <h2 class="text-2xl font-bold text-gray-900 mb-6">Options du service</h2>
      
      <div class="space-y-4">
        <!-- Active Status -->
        <div class="flex items-center space-x-3">
          <%= f.check_box :active, { class: "w-5 h-5 text-blue-hero border-gray-300 rounded focus:ring-2 focus:ring-blue-hero" } %>
          <%= f.label :active, "Service actif (visible pour les professionnels)", class: "text-gray-700 font-medium" %>
        </div>

        <!-- Popular Service -->
        <div class="flex items-center space-x-3">
          <%= f.check_box :popular, { class: "w-5 h-5 text-blue-hero border-gray-300 rounded focus:ring-2 focus:ring-blue-hero" } %>
          <%= f.label :popular, "Service populaire (mis en avant dans les listes)", class: "text-gray-700 font-medium" %>
        </div>

        <!-- Requires Quote -->
        <div class="flex items-center space-x-3">
          <%= f.check_box :requires_quote, { class: "w-5 h-5 text-blue-hero border-gray-300 rounded focus:ring-2 focus:ring-blue-hero" } %>
          <%= f.label :requires_quote, "Devis obligatoire (n√©cessite une √©valuation avant intervention)", class: "text-gray-700 font-medium" %>
        </div>
      </div>
    </div>

    <!-- Additional Information -->
    <div class="bg-white rounded-super p-6 shadow-sm mb-6">
      <h2 class="text-2xl font-bold text-gray-900 mb-6">Informations compl√©mentaires</h2>
      
      <div class="space-y-6">
        <!-- Requirements -->
        <div>
          <%= f.label :prerequisites, class: "block text-sm font-bold text-gray-700 mb-2" do %>
            Pr√©requis / Mat√©riel n√©cessaire
          <% end %>
          <%= f.text_area :prerequisites, 
                rows: 3, 
                placeholder: "Liste du mat√©riel ou des pr√©requis n√©cessaires pour ce service...",
                class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-hero" %>
        </div>

        <!-- Notes -->
        <div>
          <%= f.label :internal_notes, class: "block text-sm font-bold text-gray-700 mb-2" do %>
            Notes internes (non visibles publiquement)
          <% end %>
          <%= f.text_area :internal_notes, 
                rows: 3, 
                placeholder: "Notes pour l'√©quipe administrative...",
                class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-hero" %>
        </div>
      </div>
    </div>

    <!-- Form Actions -->
    <div class="bg-white rounded-super p-6 shadow-sm">
      <div class="flex items-center justify-between">
        <div class="text-sm text-gray-600">
          <span class="text-red-600">*</span> Champs obligatoires
        </div>
        <div class="flex space-x-3">
          <%= link_to admin_service_path(@service), class: "bg-gray-200 hover:bg-gray-300 text-gray-700 px-6 py-3 rounded-lg font-bold inline-flex items-center" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
            Annuler
          <% end %>
          <%= f.submit "Mettre √† jour le service", class: "bg-blue-hero hover:bg-blue-dark text-white px-6 py-3 rounded-lg font-bold inline-flex items-center" %>
        </div>
      </div>
    </div>

  <% end %>
</div>

