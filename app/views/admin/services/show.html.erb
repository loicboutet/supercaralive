<% content_for :page_title, "D√©tails Service" %>

<!-- Breadcrumb -->
<div class="mb-6">
  <nav class="flex" aria-label="Breadcrumb">
    <ol class="inline-flex items-center space-x-2">
      <li class="inline-flex items-center">
        <%= link_to admin_services_path, class: "text-gray-600 hover:text-blue-hero inline-flex items-center" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
          </svg>
          Services
        <% end %>
      </li>
      <li>
        <svg class="w-4 h-4 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
        </svg>
      </li>
      <li class="text-gray-900 font-medium"><%= @service.name %></li>
    </ol>
  </nav>
</div>

<!-- Page Header -->
<div class="mb-8">
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-2">
        <%= @service.name %>
      </h1>
      <p class="text-xl text-gray-600">
        D√©tails du service
      </p>
    </div>
    <div class="flex space-x-3">
      <%= link_to edit_admin_service_path(@service), class: "bg-blue-hero hover:bg-blue-dark text-white px-6 py-3 rounded-lg font-bold inline-flex items-center" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
        </svg>
        Modifier
      <% end %>
      <%= button_to admin_service_path(@service), method: :delete, form: { data: { turbo: false, controller: "confirm", confirm_message_value: "√ätes-vous s√ªr de vouloir supprimer ce service ?", action: "submit->confirm#confirm" } }, class: "bg-red-600 hover:bg-red-700 text-white px-6 py-3 rounded-lg font-bold inline-flex items-center" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
        </svg>
        Supprimer
      <% end %>
    </div>
  </div>
</div>

<!-- Main Content Grid -->
<div class="grid md:grid-cols-3 gap-8">
  
  <!-- Left Column - Service Info -->
  <div class="space-y-6">
    
    <!-- Service Card -->
    <div class="bg-white rounded-super p-6 shadow-sm">
      <div class="text-center mb-6">
        <div class="w-24 h-24 <%= @service.mecanique? ? 'bg-red-hero' : @service.carrosserie? ? 'bg-yellow-hero' : 'bg-green-500' %> rounded-lg flex items-center justify-center mx-auto mb-4">
          <span class="text-white text-5xl"><%= @service.icon.presence || 'üîß' %></span>
        </div>
        <h2 class="text-2xl font-bold text-gray-900 mb-2"><%= @service.name %></h2>
        <% if @service.mecanique? %>
          <span class="px-4 py-2 bg-red-100 text-red-800 rounded-lg text-sm font-medium inline-block">M√©canique</span>
        <% elsif @service.carrosserie? %>
          <span class="px-4 py-2 bg-yellow-100 text-yellow-800 rounded-lg text-sm font-medium inline-block">Carrosserie</span>
        <% else %>
          <span class="px-4 py-2 bg-green-100 text-green-800 rounded-lg text-sm font-medium inline-block">Lavage</span>
        <% end %>
      </div>

      <div class="border-t border-gray-200 pt-4 space-y-3">
        <% if @service.estimated_duration.present? %>
          <div class="flex items-center space-x-3">
            <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span class="text-gray-700"><strong>Dur√©e estim√©e:</strong> <%= @service.estimated_duration %> minutes</span>
          </div>
        <% end %>

        <% if @service.suggested_price.present? %>
          <div class="flex items-center space-x-3">
            <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span class="text-gray-700"><strong>Prix sugg√©r√©:</strong> <%= number_with_precision(@service.suggested_price, precision: 2) %> ‚Ç¨</span>
          </div>
        <% end %>

        <div class="flex items-center space-x-3">
          <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
          </svg>
          <span class="text-gray-700">Cr√©√© le <%= @service.created_at.strftime("%d/%m/%Y") %></span>
        </div>
      </div>
    </div>

    <!-- Status Card -->
    <div class="bg-white rounded-super p-6 shadow-sm">
      <h3 class="text-lg font-bold text-gray-900 mb-4">Statut</h3>
      <div class="space-y-3">
        <div class="flex items-center justify-between">
          <span class="text-gray-600">Service actif</span>
          <% if @service.active? %>
            <span class="px-3 py-1 bg-green-100 text-green-800 rounded-lg text-xs font-medium inline-flex items-center">
              <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              Actif
            </span>
          <% else %>
            <span class="px-3 py-1 bg-gray-100 text-gray-800 rounded-lg text-xs font-medium">Inactif</span>
          <% end %>
        </div>
        <div class="flex items-center justify-between">
          <span class="text-gray-600">Service populaire</span>
          <% if @service.popular? %>
            <span class="px-3 py-1 bg-yellow-100 text-yellow-800 rounded-lg text-xs font-medium">‚≠ê Populaire</span>
          <% else %>
            <span class="text-gray-500">Non</span>
          <% end %>
        </div>
        <div class="flex items-center justify-between">
          <span class="text-gray-600">Devis obligatoire</span>
          <% if @service.requires_quote? %>
            <span class="px-3 py-1 bg-blue-100 text-blue-800 rounded-lg text-xs font-medium">Oui</span>
          <% else %>
            <span class="text-gray-500">Non</span>
          <% end %>
        </div>
      </div>
    </div>

  </div>

  <!-- Right Column - Details -->
  <div class="md:col-span-2 space-y-6">
    
    <!-- Description -->
    <div class="bg-white rounded-super p-6 shadow-sm">
      <h2 class="text-2xl font-bold text-gray-900 mb-4">Description</h2>
      <p class="text-gray-700 whitespace-pre-wrap"><%= @service.description %></p>
    </div>

    <!-- Prerequisites -->
    <% if @service.prerequisites.present? %>
      <div class="bg-white rounded-super p-6 shadow-sm">
        <h2 class="text-2xl font-bold text-gray-900 mb-4">Pr√©requis / Mat√©riel n√©cessaire</h2>
        <p class="text-gray-700 whitespace-pre-wrap"><%= @service.prerequisites %></p>
      </div>
    <% end %>

    <!-- Internal Notes -->
    <% if @service.internal_notes.present? %>
      <div class="bg-white rounded-super p-6 shadow-sm">
        <h2 class="text-2xl font-bold text-gray-900 mb-4">Notes internes</h2>
        <p class="text-gray-700 whitespace-pre-wrap"><%= @service.internal_notes %></p>
      </div>
    <% end %>

  </div>
</div>



