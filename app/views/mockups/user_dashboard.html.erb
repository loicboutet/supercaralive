<% content_for :title, "User Dashboard - Base Rails App" %>

<div class="bg-white rounded-lg shadow-md p-6">
  <h1 class="text-2xl font-bold mb-6">Welcome back, User!</h1>
  
  <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-8">
    <!-- Activity Summary Card -->
    <div class="bg-blue-50 p-4 rounded-lg border border-blue-100">
      <h3 class="text-lg font-semibold text-blue-700 mb-2">Activity Summary</h3>
      <div class="flex items-center mb-2">
        <div class="w-10 h-10 rounded-full bg-blue-200 flex items-center justify-center mr-3">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
          </svg>
        </div>
        <div>
          <p class="text-gray-600">Tasks Completed</p>
          <p class="text-xl font-bold">12</p>
        </div>
      </div>
      <div class="mt-2">
        <div class="w-full bg-gray-200 rounded-full h-2.5">
          <div class="bg-blue-600 h-2.5 rounded-full" style="width: 65%"></div>
        </div>
        <p class="text-sm text-gray-500 mt-1">65% of weekly goal</p>
      </div>
    </div>
    
    <!-- Notification Card -->
    <div class="bg-green-50 p-4 rounded-lg border border-green-100">
      <h3 class="text-lg font-semibold text-green-700 mb-2">Notifications</h3>
      <div class="flex items-center mb-2">
        <div class="w-10 h-10 rounded-full bg-green-200 flex items-center justify-center mr-3">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
          </svg>
        </div>
        <div>
          <p class="text-gray-600">New Notifications</p>
          <p class="text-xl font-bold">3</p>
        </div>
      </div>
      <ul class="text-sm text-gray-600">
        <li class="mb-1 flex items-center">
          <span class="w-2 h-2 bg-green-500 rounded-full mr-2"></span>
          Project "Alpha" was updated
        </li>
        <li class="mb-1 flex items-center">
          <span class="w-2 h-2 bg-green-500 rounded-full mr-2"></span>
          2 new messages received
        </li>
      </ul>
    </div>
    
    <!-- Quick Actions Card -->
    <div class="bg-purple-50 p-4 rounded-lg border border-purple-100">
      <h3 class="text-lg font-semibold text-purple-700 mb-2">Quick Actions</h3>
      <div class="space-y-2">
        <button class="w-full bg-white hover:bg-gray-50 text-purple-700 font-medium py-2 px-4 rounded border border-purple-200 flex items-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
          </svg>
          Create New Task
        </button>
        <button class="w-full bg-white hover:bg-gray-50 text-purple-700 font-medium py-2 px-4 rounded border border-purple-200 flex items-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
          Schedule Meeting
        </button>
      </div>
    </div>
  </div>
  
  <!-- Recent Activity Table -->
  <div class="mt-8">
    <h2 class="text-xl font-semibold mb-4">Recent Activity</h2>
    <div class="overflow-x-auto">
      <table class="min-w-full bg-white">
        <thead class="bg-gray-100">
          <tr>
            <th class="py-2 px-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Activity</th>
            <th class="py-2 px-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
            <th class="py-2 px-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
            <th class="py-2 px-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200">
          <tr>
            <td class="py-3 px-4">Completed Project Setup</td>
            <td class="py-3 px-4">Today, 9:30 AM</td>
            <td class="py-3 px-4"><span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">Complete</span></td>
            <td class="py-3 px-4"><a href="#" class="text-blue-600 hover:text-blue-900">View</a></td>
          </tr>
          <tr>
            <td class="py-3 px-4">Updated User Profile</td>
            <td class="py-3 px-4">Yesterday, 2:15 PM</td>
            <td class="py-3 px-4"><span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">Complete</span></td>
            <td class="py-3 px-4"><a href="#" class="text-blue-600 hover:text-blue-900">View</a></td>
          </tr>
          <tr>
            <td class="py-3 px-4">Documentation Review</td>
            <td class="py-3 px-4">Yesterday, 11:30 AM</td>
            <td class="py-3 px-4"><span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-yellow-100 text-yellow-800">In Progress</span></td>
            <td class="py-3 px-4"><a href="#" class="text-blue-600 hover:text-blue-900">View</a></td>
          </tr>
          <tr>
            <td class="py-3 px-4">Feature Request Submission</td>
            <td class="py-3 px-4">Jan 15, 2023</td>
            <td class="py-3 px-4"><span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-blue-100 text-blue-800">Pending</span></td>
            <td class="py-3 px-4"><a href="#" class="text-blue-600 hover:text-blue-900">View</a></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>