<% content_for :title, "Admin Dashboard - Base Rails App" %>
<% content_for :header, "Admin Dashboard" %>

<div class="space-y-6">
  <!-- Stats Overview -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
    <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-200">
      <div class="flex justify-between items-start">
        <div>
          <p class="text-sm font-medium text-gray-500">Total Users</p>
          <h2 class="text-2xl font-bold mt-1">8,249</h2>
          <p class="text-xs text-green-600 mt-1">
            <span class="font-medium">↑ 12%</span> from last month
          </p>
        </div>
        <div class="bg-blue-100 p-2 rounded">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
          </svg>
        </div>
      </div>
    </div>
    
    <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-200">
      <div class="flex justify-between items-start">
        <div>
          <p class="text-sm font-medium text-gray-500">New Sign-ups</p>
          <h2 class="text-2xl font-bold mt-1">385</h2>
          <p class="text-xs text-green-600 mt-1">
            <span class="font-medium">↑ 8%</span> from last week
          </p>
        </div>
        <div class="bg-green-100 p-2 rounded">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z" />
          </svg>
        </div>
      </div>
    </div>
    
    <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-200">
      <div class="flex justify-between items-start">
        <div>
          <p class="text-sm font-medium text-gray-500">Active Sessions</p>
          <h2 class="text-2xl font-bold mt-1">1,247</h2>
          <p class="text-xs text-red-600 mt-1">
            <span class="font-medium">↓ 3%</span> from yesterday
          </p>
        </div>
        <div class="bg-purple-100 p-2 rounded">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-purple-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
          </svg>
        </div>
      </div>
    </div>
    
    <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-200">
      <div class="flex justify-between items-start">
        <div>
          <p class="text-sm font-medium text-gray-500">System Uptime</p>
          <h2 class="text-2xl font-bold mt-1">99.9%</h2>
          <p class="text-xs text-gray-500 mt-1">
            Last restart: 32 days ago
          </p>
        </div>
        <div class="bg-yellow-100 p-2 rounded">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-yellow-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
          </svg>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Charts Section -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-200">
      <div class="flex justify-between items-center mb-4">
        <h3 class="text-lg font-semibold">User Registrations</h3>
        <select class="text-sm border border-gray-300 rounded p-1">
          <option>Last 7 days</option>
          <option>Last 30 days</option>
          <option>Last 90 days</option>
        </select>
      </div>
      
      <!-- Chart placeholder -->
      <div class="h-64 bg-gray-50 rounded flex items-center justify-center">
        <div class="text-center text-gray-500">
          <p>Chart visualization would be here</p>
          <p class="text-sm">(User registration growth over time)</p>
        </div>
      </div>
    </div>
    
    <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-200">
      <div class="flex justify-between items-center mb-4">
        <h3 class="text-lg font-semibold">Traffic Sources</h3>
        <select class="text-sm border border-gray-300 rounded p-1">
          <option>Last 7 days</option>
          <option>Last 30 days</option>
          <option>Last 90 days</option>
        </select>
      </div>
      
      <!-- Chart placeholder -->
      <div class="h-64 bg-gray-50 rounded flex items-center justify-center">
        <div class="text-center text-gray-500">
          <p>Chart visualization would be here</p>
          <p class="text-sm">(Traffic source distribution)</p>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Recent Activity -->
  <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-200">
    <div class="flex justify-between items-center mb-4">
      <h3 class="text-lg font-semibold">Recent System Events</h3>
      <button class="text-sm text-blue-600 hover:text-blue-800">View All</button>
    </div>
    
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead>
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Event</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">User</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">IP Address</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date/Time</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <tr>
            <td class="px-6 py-4 whitespace-nowrap">System Backup</td>
            <td class="px-6 py-4 whitespace-nowrap">system</td>
            <td class="px-6 py-4 whitespace-nowrap">192.168.1.1</td>
            <td class="px-6 py-4 whitespace-nowrap">Today, 04:30 AM</td>
            <td class="px-6 py-4 whitespace-nowrap">
              <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                Success
              </span>
            </td>
          </tr>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap">User Login</td>
            <td class="px-6 py-4 whitespace-nowrap">admin@example.com</td>
            <td class="px-6 py-4 whitespace-nowrap">172.16.0.12</td>
            <td class="px-6 py-4 whitespace-nowrap">Today, 09:15 AM</td>
            <td class="px-6 py-4 whitespace-nowrap">
              <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                Success
              </span>
            </td>
          </tr>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap">Failed Login Attempt</td>
            <td class="px-6 py-4 whitespace-nowrap">unknown</td>
            <td class="px-6 py-4 whitespace-nowrap">45.32.118.92</td>
            <td class="px-6 py-4 whitespace-nowrap">Today, 10:23 AM</td>
            <td class="px-6 py-4 whitespace-nowrap">
              <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800">
                Failed
              </span>
            </td>
          </tr>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap">Configuration Change</td>
            <td class="px-6 py-4 whitespace-nowrap">admin@example.com</td>
            <td class="px-6 py-4 whitespace-nowrap">172.16.0.12</td>
            <td class="px-6 py-4 whitespace-nowrap">Today, 11:05 AM</td>
            <td class="px-6 py-4 whitespace-nowrap">
              <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-yellow-100 text-yellow-800">
                Warning
              </span>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Quick Actions -->
  <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-200">
    <h3 class="text-lg font-semibold mb-4">Quick Actions</h3>
    <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-4">
      <button class="flex flex-col items-center justify-center p-4 bg-gray-50 hover:bg-gray-100 rounded-lg border border-gray-200">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-blue-600 mb-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
        </svg>
        <span class="text-sm">Add User</span>
      </button>
      
      <button class="flex flex-col items-center justify-center p-4 bg-gray-50 hover:bg-gray-100 rounded-lg border border-gray-200">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-purple-600 mb-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
        </svg>
        <span class="text-sm">Edit Config</span>
      </button>
      
      <button class="flex flex-col items-center justify-center p-4 bg-gray-50 hover:bg-gray-100 rounded-lg border border-gray-200">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-green-600 mb-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
        </svg>
        <span class="text-sm">Run Backup</span>
      </button>
      
      <button class="flex flex-col items-center justify-center p-4 bg-gray-50 hover:bg-gray-100 rounded-lg border border-gray-200">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-red-600 mb-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
        </svg>
        <span class="text-sm">View Logs</span>
      </button>
    </div>
  </div>
</div>